<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" MaxWidth="400">
                <!-- Header -->
                <TextBlock Text="Đăng Ký MyShop 2025" 
                          Style="{StaticResource TitleTextBlockStyle}" 
                          Margin="0,0,0,40" 
                          HorizontalAlignment="Center"
                          FontWeight="Bold"/>

                <!-- Register Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="32">
                    
                    <StackPanel Spacing="16">
                        <!-- Username Input -->
                        <StackPanel>
                            <TextBlock Text="Tên đăng nhập" 
                                      Margin="0,0,0,4" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBox Text="{x:Bind ViewModel.Username, Mode=TwoWay}"
                                    PlaceholderText="Nhập tên đăng nhập"/>
                        </StackPanel>

                        <!-- Email Input -->
                        <StackPanel>
                            <TextBlock Text="Email" 
                                      Margin="0,0,0,4" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBox Text="{x:Bind ViewModel.Email, Mode=TwoWay}"
                                    PlaceholderText="Nhập địa chỉ email"/>
                        </StackPanel>

                        <!-- Password Input -->
                        <StackPanel>
                            <TextBlock Text="Mật khẩu" 
                                      Margin="0,0,0,4" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <PasswordBox x:Name="PasswordInput" 
                                        PlaceholderText="Nhập mật khẩu"/>
                        </StackPanel>

                        <!-- Confirm Password Input -->
                        <StackPanel>
                            <TextBlock Text="Xác nhận mật khẩu" 
                                      Margin="0,0,0,4" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <PasswordBox x:Name="ConfirmPasswordInput" 
                                        PlaceholderText="Nhập lại mật khẩu"/>
                        </StackPanel>

                        <!-- Error Message -->
                        <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}" 
                                  Foreground="{ThemeResource SystemErrorTextColor}" 
                                  Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                  TextWrapping="Wrap"/>

                        <!-- Register Button -->
                        <Button HorizontalAlignment="Stretch"
                                Click="RegisterButton_Click"
                                IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                Style="{StaticResource AccentButtonStyle}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                                                 Width="16" Height="16"
                                                 Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"/>
                                    <TextBlock Text="ĐĂNG KÝ"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <!-- Navigate to Login -->
                        <HyperlinkButton Content="Đã có tài khoản? Đăng nhập ngay" 
                                        HorizontalAlignment="Center"
                                        Command="{x:Bind ViewModel.NavigateToLoginCommand}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>