<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="MyShop.Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Client">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                
                <!-- MyShop 2025 Design System -->
                <ResourceDictionary Source="Themes/Generic.xaml"/>
                
                <!-- Fallback resources to prevent XAML crashes from missing StaticResource keys -->
                <ResourceDictionary Source="Themes/FallbackResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>