<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================= -->
    <!-- SPACING SCALE                                -->
    <!-- Base unit = 4px (consistent with web)        -->
    <!-- ============================================= -->
    
    <x:Double x:Key="Spacing_0">0</x:Double>
    <x:Double x:Key="Spacing_0.5">2</x:Double>      <!-- 2px -->
    <x:Double x:Key="Spacing_1">4</x:Double>        <!-- 4px -->
    <x:Double x:Key="Spacing_1.5">6</x:Double>      <!-- 6px -->
    <x:Double x:Key="Spacing_2">8</x:Double>        <!-- 8px -->
    <x:Double x:Key="Spacing_2.5">10</x:Double>     <!-- 10px -->
    <x:Double x:Key="Spacing_3">12</x:Double>       <!-- 12px -->
    <x:Double x:Key="Spacing_4">16</x:Double>       <!-- 16px -->
    <x:Double x:Key="Spacing_5">20</x:Double>       <!-- 20px -->
    <x:Double x:Key="Spacing_6">24</x:Double>       <!-- 24px -->
    <x:Double x:Key="Spacing_7">28</x:Double>       <!-- 28px -->
    <x:Double x:Key="Spacing_8">32</x:Double>       <!-- 32px -->
    <x:Double x:Key="Spacing_10">40</x:Double>      <!-- 40px -->
    <x:Double x:Key="Spacing_12">48</x:Double>      <!-- 48px -->
    <x:Double x:Key="Spacing_16">64</x:Double>      <!-- 64px -->
    <x:Double x:Key="Spacing_20">80</x:Double>      <!-- 80px -->
    <x:Double x:Key="Spacing_24">96</x:Double>      <!-- 96px -->
    <x:Double x:Key="Spacing_32">128</x:Double>     <!-- 128px -->


    <!-- ============================================= -->
    <!-- PADDING THICKNESS                            -->
    <!-- Uniform padding for common use cases         -->
    <!-- ============================================= -->
    
    <Thickness x:Key="Padding_None">0</Thickness>
    <Thickness x:Key="Padding_XS">4</Thickness>
    <Thickness x:Key="Padding_SM">8</Thickness>
    <Thickness x:Key="Padding_MD">12</Thickness>
    <Thickness x:Key="Padding_LG">16</Thickness>
    <Thickness x:Key="Padding_XL">24</Thickness>
    <Thickness x:Key="Padding_2XL">32</Thickness>
    <Thickness x:Key="Padding_3XL">48</Thickness>


    <!-- ============================================= -->
    <!-- COMPONENT-SPECIFIC PADDING                   -->
    <!-- ============================================= -->
    
    <!-- Button Padding -->
    <Thickness x:Key="ButtonPadding_SM">8,4</Thickness>          <!-- Small button -->
    <Thickness x:Key="ButtonPadding_MD">16,8</Thickness>         <!-- Default button -->
    <Thickness x:Key="ButtonPadding_LG">24,12</Thickness>        <!-- Large button -->
    
    <!-- Card Padding -->
    <Thickness x:Key="CardPadding">16</Thickness>                <!-- Standard card -->
    <Thickness x:Key="CardPaddingLarge">24</Thickness>           <!-- Large card -->
    <Thickness x:Key="CardPaddingCompact">12</Thickness>         <!-- Compact card -->
    
    <!-- Input Padding -->
    <Thickness x:Key="InputPadding">12,8</Thickness>             <!-- TextBox, ComboBox -->
    <Thickness x:Key="InputPaddingLarge">16,12</Thickness>       <!-- Large input -->
    
    <!-- Dialog Padding -->
    <Thickness x:Key="DialogPadding">24</Thickness>
    <Thickness x:Key="DialogContentPadding">24,16,24,24</Thickness>
    
    <!-- Page Padding -->
    <Thickness x:Key="PagePadding">24,16,24,16</Thickness>       <!-- Left, Top, Right, Bottom -->
    <Thickness x:Key="PagePaddingLarge">32,24,32,24</Thickness>
    
    <!-- Section Padding -->
    <Thickness x:Key="SectionPadding">0,0,0,24</Thickness>       <!-- Bottom spacing -->
    
    <!-- List Item Padding -->
    <Thickness x:Key="ListItemPadding">16,12</Thickness>
    <Thickness x:Key="ListItemPaddingCompact">12,8</Thickness>


    <!-- ============================================= -->
    <!-- MARGIN THICKNESS                             -->
    <!-- ============================================= -->
    
    <Thickness x:Key="Margin_XS">4</Thickness>
    <Thickness x:Key="Margin_SM">8</Thickness>
    <Thickness x:Key="Margin_MD">12</Thickness>
    <Thickness x:Key="Margin_LG">16</Thickness>
    <Thickness x:Key="Margin_XL">24</Thickness>


    <!-- ============================================= -->
    <!-- GAP SIZES                                    -->
    <!-- For StackPanel.Spacing, Grid spacing         -->
    <!-- ============================================= -->
    
    <x:Double x:Key="Gap_XS">4</x:Double>
    <x:Double x:Key="Gap_SM">8</x:Double>
    <x:Double x:Key="Gap_MD">12</x:Double>
    <x:Double x:Key="Gap_LG">16</x:Double>
    <x:Double x:Key="Gap_XL">24</x:Double>
    <x:Double x:Key="Gap_2XL">32</x:Double>


    <!-- ============================================= -->
    <!-- BORDER RADIUS (CornerRadius)                 -->
    <!-- ============================================= -->
    
    <CornerRadius x:Key="Radius_None">0</CornerRadius>
    <CornerRadius x:Key="Radius_XS">2</CornerRadius>     <!-- Subtle -->
    <CornerRadius x:Key="Radius_SM">4</CornerRadius>     <!-- Small elements -->
    <CornerRadius x:Key="Radius_MD">8</CornerRadius>     <!-- Default -->
    <CornerRadius x:Key="Radius_LG">12</CornerRadius>    <!-- Cards -->
    <CornerRadius x:Key="Radius_XL">16</CornerRadius>    <!-- Large cards -->
    <CornerRadius x:Key="Radius_2XL">20</CornerRadius>   <!-- Dialogs -->
    <CornerRadius x:Key="Radius_3XL">24</CornerRadius>   <!-- Large dialogs -->
    <CornerRadius x:Key="Radius_Full">9999</CornerRadius> <!-- Fully rounded (pills) -->


    <!-- ============================================= -->
    <!-- BORDER THICKNESS                             -->
    <!-- ============================================= -->
    
    <Thickness x:Key="BorderThickness_Thin">1</Thickness>
    <Thickness x:Key="BorderThickness_Medium">2</Thickness>
    <Thickness x:Key="BorderThickness_Thick">3</Thickness>
    <Thickness x:Key="BorderThickness_None">0</Thickness>

</ResourceDictionary>
