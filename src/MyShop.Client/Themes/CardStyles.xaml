<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================= -->
    <!-- CARD SYSTEM v3.0 - WinUI-Gallery Aligned     -->
    <!-- CornerRadius: 8px (WinUI Standard)           -->
    <!-- Padding Tiers: 12/16/20/24                   -->
    <!-- ============================================= -->

    <!-- ============================================= -->
    <!-- 1. DEFAULT CARD                              -->
    <!-- Standard content container                   -->
    <!-- ============================================= -->
    
    <Style x:Key="DefaultCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- Alias: CardStyle points to DefaultCardStyle -->
    <Style x:Key="CardStyle" TargetType="Border" BasedOn="{StaticResource DefaultCardStyle}"/>

    <!-- ============================================= -->
    <!-- 2. ELEVATED CARD                             -->
    <!-- Cards that need visual prominence            -->
    <!-- ============================================= -->
    
    <Style x:Key="ElevatedCardStyle" TargetType="Border" BasedOn="{StaticResource DefaultCardStyle}">
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Alias: CardWithShadowStyle points to ElevatedCardStyle -->
    <Style x:Key="CardWithShadowStyle" TargetType="Border" BasedOn="{StaticResource ElevatedCardStyle}"/>

    <!-- ============================================= -->
    <!-- 3. COMPACT CARD                              -->
    <!-- Smaller cards for list items, compact UI     -->
    <!-- ============================================= -->
    
    <Style x:Key="CompactCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <!-- Alias: CardCompactStyle points to CompactCardStyle -->
    <Style x:Key="CardCompactStyle" TargetType="Border" BasedOn="{StaticResource CompactCardStyle}"/>

    <!-- ============================================= -->
    <!-- 4. LARGE CARD                                -->
    <!-- Hero cards, feature sections                 -->
    <!-- ============================================= -->
    
    <Style x:Key="LargeCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Alias: CardLargeStyle points to LargeCardStyle -->
    <Style x:Key="CardLargeStyle" TargetType="Border" BasedOn="{StaticResource LargeCardStyle}"/>

    <!-- ============================================= -->
    <!-- 5. OUTLINED CARD                             -->
    <!-- Minimal emphasis, border only                -->
    <!-- ============================================= -->
    
    <Style x:Key="OutlinedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- ============================================= -->
    <!-- 6. PRODUCT CARD                              -->
    <!-- Product display in grids                     -->
    <!-- ============================================= -->
    
    <Style x:Key="ProductCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================= -->
    <!-- 7. DATA TABLE CARD                           -->
    <!-- Container for tables/DataGrids               -->
    <!-- ============================================= -->
    
    <Style x:Key="DataTableCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- ============================================= -->
    <!-- 8. INTERACTIVE CARD (Button-based)           -->
    <!-- Clickable cards with hover effects           -->
    <!-- ============================================= -->
    
    <Style x:Key="InteractiveCardStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="CardBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                            <Border.Shadow>
                                <ThemeShadow/>
                            </Border.Shadow>
                            <ContentPresenter Content="{TemplateBinding Content}"
                                            Foreground="{TemplateBinding Foreground}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Target="CardBorder.Translation" Value="0,0,8"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="CardBorder.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                        <Setter Target="CardBorder.Translation" Value="0,0,16"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="CardBorder.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                        <Setter Target="CardBorder.Translation" Value="0,0,4"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Legacy Alias: HoverCardStyle points to ElevatedCardStyle -->
    <Style x:Key="HoverCardStyle" TargetType="Border" BasedOn="{StaticResource ElevatedCardStyle}"/>

    <!-- ============================================= -->
    <!-- CARD PADDING RESOURCES                       -->
    <!-- Use in custom card implementations           -->
    <!-- ============================================= -->
    
    <Thickness x:Key="CardPaddingCompact">12</Thickness>
    <Thickness x:Key="CardPaddingMedium">16</Thickness>
    <Thickness x:Key="CardPaddingDefault">20</Thickness>
    <Thickness x:Key="CardPaddingSpacious">24</Thickness>

</ResourceDictionary>
