<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================= -->
    <!-- CARD SYSTEM v4.0 - RELEASE-GRADE            -->
    <!-- CornerRadius: 8px (Standard), 12px (Large)   -->
    <!-- Padding Tiers: 16px (Compact), 20px (Default), 24px (Large) -->
    <!-- Shadow: Light theme = subtle, Dark theme = border-first -->
    <!-- ============================================= -->
    
    <!-- ============================================= -->
    <!-- ðŸŽ¯ CORE CARD TYPES                          -->
    <!-- 1. Default    - Standard content (20px pad) -->
    <!-- 2. Compact    - Dense UI, lists (16px pad)  -->
    <!-- 3. Large      - Hero sections (24px pad)    -->
    <!-- 4. Outlined   - Minimal emphasis (no fill)  -->
    <!-- ============================================= -->

    <!-- ============================================= -->
    <!-- 1. DEFAULT CARD (Medium padding - 20px)     -->
    <!-- Standard content container, no shadow        -->
    <!-- Use for: Most content sections               -->
    <!-- ============================================= -->
    
    <Style x:Key="DefaultCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- Alias: CardStyle points to DefaultCardStyle -->
    <Style x:Key="CardStyle" TargetType="Border" BasedOn="{StaticResource DefaultCardStyle}"/>

    <!-- ============================================= -->
    <!-- 2. ELEVATED CARD                             -->
    <!-- Cards that need visual prominence            -->
    <!-- ============================================= -->
    
    <Style x:Key="ElevatedCardStyle" TargetType="Border" BasedOn="{StaticResource DefaultCardStyle}">
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Alias: CardWithShadowStyle points to ElevatedCardStyle -->
    <Style x:Key="CardWithShadowStyle" TargetType="Border" BasedOn="{StaticResource ElevatedCardStyle}"/>

    <!-- ============================================= -->
    <!-- 2. COMPACT CARD (Small padding - 16px)      -->
    <!-- Dense UI, list items, compact layouts        -->
    <!-- Use for: Table cards, list items             -->
    <!-- ============================================= -->
    
    <Style x:Key="CompactCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Alias: CardCompactStyle points to CompactCardStyle -->
    <Style x:Key="CardCompactStyle" TargetType="Border" BasedOn="{StaticResource CompactCardStyle}"/>

    <!-- ============================================= -->
    <!-- 3. LARGE CARD (Spacious padding - 24px)     -->
    <!-- Hero cards, feature sections, dashboards     -->
    <!-- Use for: Dashboard KPIs, featured content    -->
    <!-- Corner radius: 12px (larger for prominence)  -->
    <!-- ============================================= -->
    
    <Style x:Key="LargeCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="24"/>
    </Style>

    <!-- Alias: CardLargeStyle points to LargeCardStyle -->
    <Style x:Key="CardLargeStyle" TargetType="Border" BasedOn="{StaticResource LargeCardStyle}"/>

    <!-- ============================================= -->
    <!-- 4. OUTLINED CARD (Transparent background)    -->
    <!-- Minimal emphasis, border only, no fill       -->
    <!-- Use for: Secondary content, subtle sections  -->
    <!-- ============================================= -->
    
    <Style x:Key="OutlinedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- ============================================= -->
    <!-- âš™ï¸ SPECIALIZED: PRODUCT CARD                -->
    <!-- Product display in grids, no padding         -->
    <!-- Use for: E-commerce product listings         -->
    <!-- ============================================= -->
    
    <Style x:Key="ProductCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- ============================================= -->
    <!-- âš™ï¸ SPECIALIZED: DATA TABLE CARD             -->
    <!-- Container for tables/DataGrids, no padding   -->
    <!-- Use for: Tables that need full-width layout  -->
    <!-- ============================================= -->
    
    <Style x:Key="DataTableCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- ============================================= -->
    <!-- âš™ï¸ SPECIALIZED: INTERACTIVE CARD (Clickable)-->
    <!-- TEMPORARILY DISABLED: WinUI runtime error    -->
    <!-- Error: ContentPresenter cannot be resolved   -->
    <!-- TODO: Fix in future when needed              -->
    <!-- ============================================= -->
    
    <!-- <Style x:Key="InteractiveCardStyle" TargetType="Button">
        ... commented out due to runtime error ...
    </Style> -->

    <!-- ============================================= -->
    <!-- âš ï¸ DEPRECATED: Legacy Aliases                -->
    <!-- Kept for backward compatibility              -->
    <!-- ============================================= -->
    
    <!-- DEPRECATED: Use ElevatedCardStyle instead -->
    <Style x:Key="HoverCardStyle" TargetType="Border" BasedOn="{StaticResource ElevatedCardStyle}"/>

    <!-- ============================================= -->
    <!-- CARD PADDING RESOURCES                       -->
    <!-- Use in custom card implementations           -->
    <!-- Standardized to 3 tiers: 16/20/24px          -->
    <!-- ============================================= -->
    
    <Thickness x:Key="CardPaddingCompact">16</Thickness>
    <Thickness x:Key="CardPaddingDefault">20</Thickness>
    <Thickness x:Key="CardPaddingSpacious">24</Thickness>

</ResourceDictionary>
