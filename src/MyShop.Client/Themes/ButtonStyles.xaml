        </Setter>
    </Style>

    <!-- Success Button - Small -->
    <Style x:Key="SuccessButtonSmallStyle" TargetType="Button" BasedOn="{StaticResource SuccessButtonStyle}">
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Success Button - Large -->
    <Style x:Key="SuccessButtonLargeStyle" TargetType="Button" BasedOn="{StaticResource SuccessButtonStyle}">
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="24,0"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!-- ============================================= -->
    <!-- 5. ICON BUTTON                               -->
    <!-- Use for: Icon-only actions (Edit, Delete)    -->
    <!-- ============================================= -->
    
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentPresenter"
                                            Content="{TemplateBinding Content}"
                                            Foreground="{TemplateBinding Foreground}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">

                                
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="ButtonBorder.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="ButtonBorder.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="ContentPresenter.Opacity" Value="0.4"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon Button - Small (32x32) -->
    <Style x:Key="IconButtonSmallStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
    </Style>

    <!-- Icon Button - Large (40x40) -->
    <Style x:Key="IconButtonLargeStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
    </Style>

    <!-- ============================================= -->
    <!-- 6. TEXT BUTTON                               -->
    <!-- Use for: Tertiary actions (Learn More, Skip) -->
    <!-- ============================================= -->
    
    <Style x:Key="TextButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentPresenter"
                                            Content="{TemplateBinding Content}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">

                                
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="ButtonBorder.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="ButtonBorder.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource TextFillColorDisabledBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================= -->
    <!-- 7. LINK BUTTON                               -->
    <!-- Use for: Hyperlink-style actions             -->
    <!-- ============================================= -->
    
    <Style x:Key="LinkButtonStyle" TargetType="HyperlinkButton">
        <Setter Property="FontSize" Value="{StaticResource FontSize_SM}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
    </Style>

    <!-- ============================================= -->
    <!-- 8. TAB RADIO BUTTON                          -->
    <!-- Use for: Tab navigation                      -->
    <!-- ============================================= -->
    
    <Style x:Key="TabRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter x:Name="ContentPresenter"
                                         Content="{TemplateBinding Content}"
                                         Foreground="{TemplateBinding Foreground}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CheckStates">
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Unchecked">
                                    <VisualState.Setters>
                                        <Setter Target="RootBorder.Background" Value="Transparent"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================= -->
    <!-- LEGACY ALIASES (For backward compatibility)  -->
    <!-- These point to new standardized styles       -->
    <!-- ============================================= -->
    
    <!-- SmallSuccessButtonStyle → SuccessButtonSmallStyle -->
    <Style x:Key="SmallSuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource SuccessButtonSmallStyle}"/>
    
    <!-- SmallDangerButtonStyle → DangerButtonSmallStyle -->
    <Style x:Key="SmallDangerButtonStyle" TargetType="Button" BasedOn="{StaticResource DangerButtonSmallStyle}"/>

</ResourceDictionary>
