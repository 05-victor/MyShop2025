    <!-- ============================================= -->
    <!-- ICON STYLES                                  -->
    <!-- Pre-configured FontIcon styles               -->
    <!-- ============================================= -->
    
    <!-- Default Icon Style -->
    <Style x:Key="IconStyle" TargetType="FontIcon">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="{StaticResource IconSize_MD}"/>
    </Style>
    
    <!-- Small Icon -->
    <Style x:Key="IconSmallStyle" TargetType="FontIcon" BasedOn="{StaticResource IconStyle}">
        <Setter Property="FontSize" Value="{StaticResource IconSize_SM}"/>
    </Style>
    
    <!-- Large Icon -->
    <Style x:Key="IconLargeStyle" TargetType="FontIcon" BasedOn="{StaticResource IconStyle}">
        <Setter Property="FontSize" Value="{StaticResource IconSize_LG}"/>
    </Style>
    
    <!-- Primary Icon -->
    <Style x:Key="IconPrimaryStyle" TargetType="FontIcon" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Foreground" Value="{StaticResource SecondaryBlueBrush}"/>
    </Style>
    
    <!-- Success Icon -->
    <Style x:Key="IconSuccessStyle" TargetType="FontIcon" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Foreground" Value="{StaticResource SuccessGreenBrush}"/>
    </Style>
    
    <!-- Warning Icon -->
    <Style x:Key="IconWarningStyle" TargetType="FontIcon" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Foreground" Value="{StaticResource WarningAmberBrush}"/>
    </Style>
    
    <!-- Error Icon -->
    <Style x:Key="IconErrorStyle" TargetType="FontIcon" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Foreground" Value="{StaticResource ErrorRedBrush}"/>
    </Style>
    
    <!-- Muted Icon -->
    <Style x:Key="IconMutedStyle" TargetType="FontIcon" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>


    <!-- ============================================= -->
    <!-- USAGE NOTES                                  -->
    <!-- ============================================= -->
    <!-- Usage Examples:
    
    1. Basic icon with Glyph="{StaticResource Icon_Home}"
    2. Styled icon using IconSuccessStyle, IconErrorStyle, etc.
    3. Icons in buttons with StackPanel
    4. Large feature icons with IconSize_2XL
    5. Status indicators with small icons
    
    See README.md and QUICK_REFERENCE.md for detailed examples
    -->

</ResourceDictionary>
