<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Spacing.xaml"/>
        <ResourceDictionary Source="Typography.xaml"/>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ============================================= -->
    <!-- TEXT INPUT STYLES                            -->
    <!-- ============================================= -->

    <!-- Base Input Style cho TextBox -->
    <Style x:Key="BaseInputStyle" TargetType="TextBox">
        <Setter Property="Height" Value="44"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize_Base}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Radius_MD}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThickness_Thin}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
    </Style>

    <!-- Base Password Style cho PasswordBox -->
    <Style x:Key="BasePasswordStyle" TargetType="PasswordBox" BasedOn="{StaticResource DefaultPasswordBoxStyle}">
        <Setter Property="Height" Value="44"/>
        <Setter Property="Padding" Value="12,11,52,11"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize_Base}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Radius_MD}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThickness_Thin}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
        <Setter Property="PasswordRevealMode" Value="Hidden"/>
        <Setter Property="PasswordChar" Value="â—"/>
    </Style>

    <!-- Input Label Style -->
    <Style x:Key="InputLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSize_SM}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>

    <!-- Validation Error Text Style -->
    <Style x:Key="ValidationErrorStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSize_XS}"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemErrorTextColor}"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>
