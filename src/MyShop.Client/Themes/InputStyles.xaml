<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Note: Spacing, Typography, and Brushes are already merged in Generic.xaml -->
    <!-- No need to merge them again here to avoid circular dependency issues -->

    <!-- ============================================= -->
    <!-- INPUT SYSTEM v2.0 - STANDARDIZED             -->
    <!-- Heights: 32px (Small), 40px (Medium), 48px (Large) -->
    <!-- CornerRadius: 8px (Standard)                 -->
    <!-- ============================================= -->

    <!-- ============================================= -->
    <!-- 1. BASE INPUT STYLE (TextBox)                -->
    <!-- Standard text input                          -->
    <!-- ============================================= -->

    <Style x:Key="BaseInputStyle" TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        <Setter Property="PlaceholderForeground" Value="{ThemeResource TextMutedBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border x:Name="BorderElement"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ScrollViewer x:Name="ContentElement"
                                        Padding="{TemplateBinding Padding}"
                                        HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                        VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock x:Name="PlaceholderTextContentPresenter"
                                  Text="{TemplateBinding PlaceholderText}"
                                  Foreground="{ThemeResource TextMutedBrush}"
                                  Margin="12,0,12,0"
                                  VerticalAlignment="Center"
                                  IsHitTestVisible="False"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="BorderElement.BorderBrush" Value="{ThemeResource Gray500Brush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Focused">
                                    <VisualState.Setters>
                                        <Setter Target="BorderElement.BorderBrush" Value="{ThemeResource PrimaryBrush}"/>
                                        <Setter Target="BorderElement.BorderThickness" Value="2"/>
                                        <Setter Target="PlaceholderTextContentPresenter.Visibility" Value="Collapsed"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="BorderElement.Background" Value="{ThemeResource Gray200Brush}"/>
                                        <Setter Target="BorderElement.BorderBrush" Value="{ThemeResource Gray300Brush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Input - Small (32px) -->
    <Style x:Key="InputSmallStyle" TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}">
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Input - Large (48px) -->
    <Style x:Key="InputLargeStyle" TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}">
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!-- ============================================= -->
    <!-- 2. PASSWORD INPUT STYLE                      -->
    <!-- Password entry with reveal button            -->
    <!-- ============================================= -->

    <Style x:Key="BasePasswordStyle" TargetType="PasswordBox" BasedOn="{StaticResource DefaultPasswordBoxStyle}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,8,48,8"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="PasswordRevealMode" Value="Hidden"/>
        <Setter Property="PasswordChar" Value="â—"/>
    </Style>

    <!-- Password - Small (32px) -->
    <Style x:Key="PasswordSmallStyle" TargetType="PasswordBox" BasedOn="{StaticResource BasePasswordStyle}">
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="10,6,44,6"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Password - Large (48px) -->
    <Style x:Key="PasswordLargeStyle" TargetType="PasswordBox" BasedOn="{StaticResource BasePasswordStyle}">
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="14,10,52,10"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!-- ============================================= -->
    <!-- 3. COMBOBOX STYLE                            -->
    <!-- Dropdown selection                           -->
    <!-- ============================================= -->

    <Style x:Key="BaseComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    </Style>

    <!-- ComboBox - Small (32px) -->
    <Style x:Key="ComboBoxSmallStyle" TargetType="ComboBox" BasedOn="{StaticResource BaseComboBoxStyle}">
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- ============================================= -->
    <!-- 4. NUMBER BOX STYLE                          -->
    <!-- Number entry with spinners                   -->
    <!-- ============================================= -->

    <Style x:Key="BaseNumberBoxStyle" TargetType="NumberBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="SpinButtonPlacementMode" Value="Inline"/>
    </Style>

    <!-- ============================================= -->
    <!-- 5. AUTO SUGGEST BOX STYLE                    -->
    <!-- Search with suggestions                      -->
    <!-- ============================================= -->

    <Style x:Key="BaseAutoSuggestBoxStyle" TargetType="AutoSuggestBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <!-- ============================================= -->
    <!-- LABEL & VALIDATION STYLES                    -->
    <!-- For form labels and error messages           -->
    <!-- ============================================= -->

    <!-- Input Label -->
    <Style x:Key="InputLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>

    <!-- Validation Error Text -->
    <Style x:Key="ValidationErrorStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{ThemeResource ErrorRedBrush}"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Helper Text (hints below inputs) -->
    <Style x:Key="InputHelperStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{ThemeResource TextMutedBrush}"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- Required Asterisk -->
    <Style x:Key="RequiredIndicatorStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="*"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{ThemeResource ErrorRedBrush}"/>
        <Setter Property="Margin" Value="2,0,0,0"/>
    </Style>

    <!-- ============================================= -->
    <!-- ERROR STATE STYLES                           -->
    <!-- Apply when input has validation error        -->
    <!-- ============================================= -->

    <Style x:Key="InputErrorStyle" TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}">
        <Setter Property="BorderBrush" Value="{ThemeResource ErrorRedBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style x:Key="PasswordErrorStyle" TargetType="PasswordBox" BasedOn="{StaticResource BasePasswordStyle}">
        <Setter Property="BorderBrush" Value="{ThemeResource ErrorRedBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- ============================================= -->
    <!-- INPUT SIZE RESOURCES                         -->
    <!-- Use for consistent sizing                    -->
    <!-- ============================================= -->

    <x:Double x:Key="InputHeightSmall">32</x:Double>
    <x:Double x:Key="InputHeightMedium">40</x:Double>
    <x:Double x:Key="InputHeightLarge">48</x:Double>

</ResourceDictionary>
