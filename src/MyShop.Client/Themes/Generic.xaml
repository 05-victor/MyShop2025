<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================= -->
    <!-- MYSHOP 2025 DESIGN SYSTEM                    -->
    <!-- Main resource dictionary that merges all     -->
    <!-- design tokens and theme resources            -->
    <!-- ============================================= -->
    
    <ResourceDictionary.MergedDictionaries>
        <!-- Core Design Tokens -->
        <ResourceDictionary Source="Brushes.xaml"/>
        <ResourceDictionary Source="Typography.xaml"/>
        <ResourceDictionary Source="Spacing.xaml"/>
        <ResourceDictionary Source="Shadows.xaml"/>
        <ResourceDictionary Source="Animations.xaml"/>
        <ResourceDictionary Source="Icons.xaml"/>
        <ResourceDictionary Source="Converters.xaml"/>
        
        <!-- Component Styles -->
        <ResourceDictionary Source="InputStyles.xaml"/>
        <ResourceDictionary Source="ButtonStyles.xaml"/>
        <ResourceDictionary Source="CardStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ============================================= -->
    <!-- ADDITIONAL GLOBAL RESOURCES                  -->
    <!-- ============================================= -->
    
    <!-- Default CompositeTransform for animations -->
    <CompositeTransform x:Key="DefaultTransform"/>

</ResourceDictionary>
