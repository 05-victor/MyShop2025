<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================= -->
    <!-- LIGHT THEME - MYSHOP2025                     -->
    <!-- Optimized for clarity and professional UI    -->
    <!-- ============================================= -->


    <!-- ============================================= -->
    <!-- PRIMARY BRUSHES                              -->
    <!-- ============================================= -->
    
    <SolidColorBrush x:Key="NavyPrimaryBrush" Color="#1A4D8F"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#1A4D8F"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#245FAE"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="#00AEEF"/>
    <SolidColorBrush x:Key="SecondaryBlueBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="#1E40AF"/>


    <!-- ============================================= -->
    <!-- STATUS BRUSHES                               -->
    <!-- ============================================= -->
    
    <!-- Success -->
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="SuccessGreenLightBrush" Color="#D1FAE5"/>
    <SolidColorBrush x:Key="SuccessGreen50Brush" Color="#ECFDF5"/>
    <SolidColorBrush x:Key="SuccessGreenDarkBrush" Color="#059669"/>
    
    <!-- Warning -->
    <SolidColorBrush x:Key="WarningAmberBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="WarningAmberLightBrush" Color="#FEF3C7"/>
    <SolidColorBrush x:Key="WarningAmber50Brush" Color="#FFFBEB"/>
    <SolidColorBrush x:Key="WarningAmberDarkBrush" Color="#D97706"/>
    
    <!-- Error -->
    <SolidColorBrush x:Key="ErrorRedBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="ErrorRedLightBrush" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="ErrorRed50Brush" Color="#FEF2F2"/>
    <SolidColorBrush x:Key="ErrorRedDarkBrush" Color="#B91C1C"/>
    
    <!-- Info -->
    <SolidColorBrush x:Key="InfoBlueBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="InfoBlueLightBrush" Color="#DBEAFE"/>
    <SolidColorBrush x:Key="InfoBlue50Brush" Color="#EFF6FF"/>
    <SolidColorBrush x:Key="InfoBlueDarkBrush" Color="#1D4ED8"/>
    
    <!-- Purple -->
    <SolidColorBrush x:Key="PurpleBrush" Color="#8B5CF6"/>
    <SolidColorBrush x:Key="PurpleLightBrush" Color="#EDE9FE"/>
    <SolidColorBrush x:Key="Purple50Brush" Color="#F5F3FF"/>
    <SolidColorBrush x:Key="PurpleDarkBrush" Color="#7C3AED"/>


    <!-- ============================================= -->
    <!-- SEMANTIC COLOR ALIASES                       -->
    <!-- Generic names pointing to specific colors    -->
    <!-- ============================================= -->
    
    <!-- Success Semantic -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#ECFDF5"/>
    <SolidColorBrush x:Key="SuccessTextBrush" Color="#059669"/>
    
    <!-- Warning Semantic -->
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FFFBEB"/>
    <SolidColorBrush x:Key="WarningTextBrush" Color="#D97706"/>
    
    <!-- Error/Danger Semantic -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#FEF2F2"/>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#B91C1C"/>
    
    <!-- Info Semantic -->
    <SolidColorBrush x:Key="InfoBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#EFF6FF"/>
    <SolidColorBrush x:Key="InfoTextBrush" Color="#1D4ED8"/>
    
    <!-- Neutral Semantic -->
    <SolidColorBrush x:Key="NeutralBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="NeutralBackgroundBrush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="NeutralTextBrush" Color="#374151"/>


    <!-- ============================================= -->
    <!-- NEUTRAL BRUSHES (Gray Scale) - LIGHT MODE    -->
    <!-- ============================================= -->
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111827"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#374151"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#6B7280"/>
    
    <!-- All Gray Brushes -->
    <SolidColorBrush x:Key="Gray900Brush" Color="#111827"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="#1F2937"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="#374151"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="#6B7280"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="Gray50Brush" Color="#F8FAFC"/>
    
    <!-- Semantic Gray Brushes -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="#D0D7E2"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#1A4D8F"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="#F5F7FA"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    
    <!-- Card/Button Borders (Missing resource) -->
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#33000000"/><!-- Black 20% opacity for visible borders -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#D1D5DB"/><!-- Gray 400 for controls -->

    <!-- Dialog-specific Brushes (Light Theme) -->
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#FFFFFF"/><!-- Pure white for dialog background -->
    <SolidColorBrush x:Key="DialogForegroundBrush" Color="#111827"/><!-- Dark text for readability -->


    <!-- ============================================= -->
    <!-- SEMANTIC BRUSHES                             -->
    <!-- ============================================= -->
    
    <SolidColorBrush x:Key="WhiteBrush" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="#000000"/>
    
    <!-- Transparent Brushes -->
    <SolidColorBrush x:Key="WhiteSemiTransparent" Color="#80FFFFFF"/>
    <SolidColorBrush x:Key="WhiteLightTransparent" Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="BlackSemiTransparent" Color="#80000000"/>
    <SolidColorBrush x:Key="BlackLightTransparent" Color="#1A000000"/>
    <SolidColorBrush x:Key="BlackVeryLightTransparent" Color="#0D000000"/>


    <!-- ============================================= -->
    <!-- GRADIENT BRUSHES                             -->
    <!-- ============================================= -->
    
    <!-- Primary Gradient (Blue) -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2563EB" Offset="0"/>
        <GradientStop Color="#1E40AF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Success Gradient (Green) -->
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#10B981" Offset="0"/>
        <GradientStop Color="#059669" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Warning Gradient (Amber) -->
    <LinearGradientBrush x:Key="WarningGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F59E0B" Offset="0"/>
        <GradientStop Color="#D97706" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Error Gradient (Red) -->
    <LinearGradientBrush x:Key="ErrorGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#DC2626" Offset="0"/>
        <GradientStop Color="#B91C1C" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Auth Sidebar Gradient (used in Login/Register pages) -->
    <LinearGradientBrush x:Key="AuthSidebarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2563EB" Offset="0"/>
        <GradientStop Color="#1E40AF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Subtle Background Gradient -->
    <LinearGradientBrush x:Key="SubtleBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F8FAFC" Offset="0"/>
        <GradientStop Color="#F9FAFB" Offset="1"/>
    </LinearGradientBrush>


    <!-- ============================================= -->
    <!-- SYSTEM OVERRIDES FOR WINUI CONTROLS          -->
    <!-- ============================================= -->
    
    <!-- TextBox -->
    <SolidColorBrush x:Key="TextControlForeground" Color="#111827"/>
    <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="#111827"/>
    <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#111827"/>
    <SolidColorBrush x:Key="TextControlForegroundDisabled" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextControlPlaceholderForeground" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextControlBackground" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="TextControlBorderBrush" Color="#D0D7E2"/>
    <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="#1A4D8F"/>
    <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#1A4D8F"/>

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxForeground" Color="#111827"/>
    <SolidColorBrush x:Key="ComboBoxForegroundPointerOver" Color="#111827"/>
    <SolidColorBrush x:Key="ComboBoxForegroundFocused" Color="#111827"/>
    <SolidColorBrush x:Key="ComboBoxForegroundDisabled" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="ComboBoxPlaceHolderForeground" Color="#6B7280"/>
    <SolidColorBrush x:Key="ComboBoxBackground" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="ComboBoxBackgroundFocused" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#D0D7E2"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver" Color="#1A4D8F"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrushFocused" Color="#1A4D8F"/>

    <!-- ComboBox Dropdown Items -->
    <SolidColorBrush x:Key="ComboBoxItemForeground" Color="#111827"/>
    <SolidColorBrush x:Key="ComboBoxItemForegroundPointerOver" Color="#111827"/>
    <SolidColorBrush x:Key="ComboBoxItemForegroundPressed" Color="#111827"/>
    <SolidColorBrush x:Key="ComboBoxItemForegroundSelected" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="ComboBoxItemBackgroundPointerOver" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="ComboBoxItemBackgroundPressed" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="ComboBoxItemBackgroundSelected" Color="#1A4D8F"/>

    <!-- NavigationView -->
    <SolidColorBrush x:Key="NavigationViewBackground" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="NavigationViewItemForeground" Color="#374151"/>
    <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="NavigationViewItemForegroundPressed" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="NavigationViewItemForegroundSelected" Color="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
    <SolidColorBrush x:Key="NavigationViewItemBackgroundPointerOver" Color="#245FAE"/>
    <SolidColorBrush x:Key="NavigationViewItemBackgroundPressed" Color="#1A4D8F"/>
    <SolidColorBrush x:Key="NavigationViewItemBackgroundSelected" Color="#1A4D8F"/>
    <SolidColorBrush x:Key="NavigationViewItemBackgroundSelectedPointerOver" Color="#245FAE"/>

    <!-- ============================================= -->
    <!-- ADMIN SHELL NAVIGATION (Dark Sidebar)        -->
    <!-- Used by AdminDashboardShell for dark sidebar -->
    <!-- ============================================= -->
    
    <SolidColorBrush x:Key="AdminNavPaneBackground" Color="#1F2937"/>
    <SolidColorBrush x:Key="AdminNavItemForeground" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="AdminNavItemForegroundSelected" Color="White"/>
    <SolidColorBrush x:Key="AdminNavItemForegroundPointerOver" Color="White"/>
    <SolidColorBrush x:Key="AdminNavItemBackgroundSelected" Color="#3B82F6"/>
    <SolidColorBrush x:Key="AdminNavItemBackgroundSelectedPointerOver" Color="#3B82F6"/>
    <SolidColorBrush x:Key="AdminNavItemBackgroundPointerOver" Color="#374151"/>
    <SolidColorBrush x:Key="AdminNavHeaderForeground" Color="White"/>

    <!-- ============================================= -->
    <!-- SALESAGENT/CUSTOMER SHELL NAVIGATION         -->
    <!-- Dark sidebar with cyan accent                -->
    <!-- ============================================= -->
    
    <SolidColorBrush x:Key="AgentNavPaneBackground" Color="#1E293B"/>
    <SolidColorBrush x:Key="AgentNavItemForeground" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="AgentNavItemForegroundSelected" Color="White"/>
    <SolidColorBrush x:Key="AgentNavItemForegroundPointerOver" Color="White"/>
    <SolidColorBrush x:Key="AgentNavItemBackgroundSelected" Color="#00AEEF"/>
    <SolidColorBrush x:Key="AgentNavItemBackgroundSelectedPointerOver" Color="#00AEEF"/>
    <SolidColorBrush x:Key="AgentNavItemBackgroundPointerOver" Color="#1A00AEEF"/>
    <SolidColorBrush x:Key="AgentNavHeaderForeground" Color="White"/>

    <!-- CalendarDatePicker -->
    <SolidColorBrush x:Key="CalendarDatePickerForeground" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerForegroundPointerOver" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerForegroundFocused" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerForegroundDisabled" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="CalendarDatePickerCalendarGlyphForeground" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerCalendarGlyphForegroundPointerOver" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerTextForeground" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerTextForegroundPointerOver" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerTextForegroundFocused" Color="#111827"/>
    <SolidColorBrush x:Key="CalendarDatePickerTextForegroundDisabled" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="CalendarDatePickerHeaderForeground" Color="#111827"/>

</ResourceDictionary>
