<!-- 
    Fallback resources to prevent XAML crashes from missing StaticResource keys.
    This file provides safe default values for commonly used resources that might be missing.
-->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fallback Colors -->
    <SolidColorBrush x:Key="NeonCyan" Color="#00F0FF"/>
    <SolidColorBrush x:Key="NeonPurple" Color="#9D00FF"/>
    <SolidColorBrush x:Key="NeonGreen" Color="#00FF88"/>
    <SolidColorBrush x:Key="NeonRed" Color="#FF0055"/>
    <SolidColorBrush x:Key="NeonOrange" Color="#FF8800"/>
    <SolidColorBrush x:Key="NeonYellow" Color="#FFD700"/>
    
    <!-- Fallback Spacing (in case Spacing.xaml is missing keys) -->
    <x:Double x:Key="Gap_XS">4</x:Double>
    <x:Double x:Key="Gap_SM">8</x:Double>
    <x:Double x:Key="Gap_MD">16</x:Double>
    <x:Double x:Key="Gap_LG">24</x:Double>
    <x:Double x:Key="Gap_XL">32</x:Double>
    
    <!-- Fallback Styles -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,16,0,8"/>
    </Style>
    
    <Style x:Key="InputLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    
    <Style x:Key="ValidationErrorStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>
    
    <Style x:Key="BaseInputStyle" TargetType="TextBox">
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>
    
    <Style x:Key="DefaultContentDialogStyle" TargetType="ContentDialog">
        <Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

</ResourceDictionary>
