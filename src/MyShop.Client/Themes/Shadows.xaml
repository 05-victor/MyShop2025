<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================= -->
    <!-- SHADOW & ELEVATION SYSTEM (WinUI 3)          -->
    <!-- ============================================= -->
    
    <!-- WinUI 3 Shadow Usage:
    
    Shadows in WinUI 3 are applied differently than WPF.
    Use ThemeShadow for elevation effects:
    
    Example 1: Card with shadow
    <Border CornerRadius="8" Padding="16">
        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>
        <Border.Translation>0,0,8</Border.Translation>
    </Border>
    
    Example 2: Elevated element
    <Grid>
        <Grid Translation="0,0,16">
            <Grid.Shadow>
                <ThemeShadow />
            </Grid.Shadow>
        </Grid>
    </Grid>
    
    Translation Z-values for elevation:
    - Flat: 0
    - Card resting: 8
    - Card hover: 16
    - Dialog: 32
    - Modal: 64
    -->
    
    <!-- Elevation Z-depth values -->
    <x:Double x:Key="Elevation_Flat">0</x:Double>
    <x:Double x:Key="Elevation_Card">8</x:Double>
    <x:Double x:Key="Elevation_CardHover">16</x:Double>
    <x:Double x:Key="Elevation_Dialog">32</x:Double>
    <x:Double x:Key="Elevation_Modal">64</x:Double>
    <x:Double x:Key="Elevation_Maximum">128</x:Double>

</ResourceDictionary>
