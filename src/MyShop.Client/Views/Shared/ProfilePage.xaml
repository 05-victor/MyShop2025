<Page
    x:Class="MyShop.Client.Views.Shared.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuic="using:Microsoft.UI.Xaml.Controls"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Converters for visibility -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:StringToImageSourceConverter x:Key="StringToImageSource" />

        <!-- Định nghĩa màu sắc và brush để dễ tái sử dụng -->
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111827" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280" />
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB" />
        <SolidColorBrush x:Key="AdminBlueBrush" Color="#1A4D8F" />
        <SolidColorBrush x:Key="AdminCyanBrush" Color="#00AEEF" />
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981" />
        <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#D1FAE5" />
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B" />
        <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FEF3C7" />
        <SolidColorBrush x:Key="DangerBrush" Color="#DC2626" />
        <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#F9FAFB" />

        <LinearGradientBrush x:Key="AdminGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1A4D8F" Offset="0.0" />
            <GradientStop Color="#00AEEF" Offset="1.0" />
        </LinearGradientBrush>

        <!-- Style cho Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="24" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <ThemeShadow />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho các nút hành động phụ -->
        <Style x:Key="OutlineButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="10,5" />
        </Style>

        <!-- Style cho Input -->
        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="PlaceholderForeground" Value="{StaticResource TextSecondaryBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        </Style>
    </Page.Resources>

    <Grid>
        <!-- ToggleButton ẩn để điều khiển trạng thái IsEditing và EmailVerified cho mục đích demo -->
        <!--Nếu sau này không làm gì nữa sẽ xóa-->
        <ToggleButton x:Name="EditModeToggle" IsChecked="False" Visibility="Collapsed" />
        <ToggleButton x:Name="EmailVerifiedToggle" IsChecked="False" Visibility="Collapsed" />

        <ScrollViewer>
            <StackPanel Spacing="24" MaxWidth="1100" Padding="48" HorizontalAlignment="Center">
            <!-- Page Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                        <TextBlock Text="Administrator Profile" Style="{StaticResource DisplayHeadingStyle}" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8" />
                    <TextBlock Text="Manage your admin account and security settings" Style="{ThemeResource BodyTextBlockStyle}" Foreground="{StaticResource TextSecondaryBrush}" />
                </StackPanel>

                <Border Grid.Column="1" Background="{StaticResource AdminGradientBrush}" CornerRadius="16" Padding="12,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE825;" Foreground="White" FontSize="16"/>
                        <TextBlock Text="Admin Account" Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Email Verification Alerts -->
            <InfoBar Title="Email Verification Required"
                     Message="Please verify your email address to ensure account security and receive system notifications."
                     Severity="Warning"
                     BorderBrush="{StaticResource WarningBrush}"
                     Background="{StaticResource WarningBackgroundBrush}"
                     IsOpen="{Binding IsChecked, ElementName=EmailVerifiedToggle, Converter={StaticResource InverseBoolConverter}}"
                     IsClosable="False">
                <InfoBar.Content>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <HyperlinkButton Content="Resend verification email" />
                        <TextBlock Text=" or " VerticalAlignment="Center"/>
                        <HyperlinkButton Content="I've verified (demo)" Click="VerifyEmailButton_Click" />
                    </StackPanel>
                </InfoBar.Content>
            </InfoBar>

            <InfoBar Title="Email Verified"
                     Message="Your email address has been verified. You have full access to all admin features."
                     Severity="Success"
                     BorderBrush="{StaticResource SuccessBrush}"
                     Background="{StaticResource SuccessBackgroundBrush}"
                     IsOpen="{Binding IsChecked, ElementName=EmailVerifiedToggle}"
                     IsClosable="False"/>

            <!-- Main Content Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="300" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Spacing="24">
                    <!-- Profile Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="24" HorizontalAlignment="Center">
                            <!-- Avatar -->
                            <Grid Width="128" Height="128">
                                <PersonPicture ProfilePicture="https://api.dicebear.com/7.x/avataaars/svg?seed=admin"
                                               Initials="A"
                                               Width="128" Height="128"
                                               Margin="0" />
                                <Button VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                        Style="{ThemeResource AccentButtonStyle}"
                                        Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2"
                                        Width="36" Height="36" CornerRadius="18" Padding="0">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE898;" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
                                    <Button.Shadow>
                                        <ThemeShadow />
                                    </Button.Shadow>
                                </Button>
                                <!-- Verification Badge -->
                                <Border VerticalAlignment="Top" HorizontalAlignment="Right"
                                        Background="{StaticResource SuccessBrush}"
                                        Width="28" Height="28" CornerRadius="14" Margin="0,-4,-4,0"
                                        Visibility="{Binding IsChecked, ElementName=EmailVerifiedToggle, Converter={StaticResource BoolToVisibility}}">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE930;" Foreground="White" FontSize="14"/>
                                </Border>
                                <Border VerticalAlignment="Top" HorizontalAlignment="Right"
                                        Background="{StaticResource DangerBrush}"
                                        Width="28" Height="28" CornerRadius="14" Margin="0,-4,-4,0"
                                        Visibility="{Binding IsChecked, ElementName=EmailVerifiedToggle, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE715;" Foreground="White" FontSize="14"/>
                                </Border>
                            </Grid>

                            <!-- User Info -->
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="Admin User" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" TextAlignment="Center"/>
                                <TextBlock Text="@admin_user" Foreground="{StaticResource TextSecondaryBrush}" />
                                <Border Background="{StaticResource AdminGradientBrush}" CornerRadius="16" Padding="10,4" Margin="0,8,0,0" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE825;" Foreground="White" FontSize="12"/>
                                        <TextBlock Text="System Administrator" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Account Stats -->
                            <Grid BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Padding="0,16,0,0" ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="28" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold" TextAlignment="Center" />
                                    <TextBlock Text="Days Active" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="156" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold" TextAlignment="Center" />
                                    <TextBlock Text="Actions" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Quick Actions -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Quick Actions" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <Button Style="{StaticResource OutlineButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A1;" FontSize="16"/>
                                    <TextBlock Text="Change Password" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource OutlineButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA8F;" FontSize="16"/>
                                    <TextBlock Text="Notifications" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource OutlineButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE713;" FontSize="16"/>
                                    <TextBlock Text="Security Settings" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2" Spacing="24">
                    <!-- Personal Information -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="24">
                            <!-- Card Header -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE77B;" FontSize="20" Foreground="{StaticResource AdminBlueBrush}"/>
                                    <TextBlock Text="Personal Information" Style="{ThemeResource SubtitleTextBlockStyle}" VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>

                                <!-- Edit/Save/Cancel Buttons -->
                                <Button Grid.Column="1" Content="Edit Profile" Click="EditButton_Click"
                                        Visibility="{Binding IsChecked, ElementName=EditModeToggle, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8"
                                            Visibility="{Binding IsChecked, ElementName=EditModeToggle, Converter={StaticResource BoolToVisibility}}">
                                    <Button Content="Cancel" Click="CancelButton_Click" />
                                    <Button Style="{ThemeResource AccentButtonStyle}" Background="{StaticResource AdminBlueBrush}" Click="SaveButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74E;" FontSize="16"/>
                                            <TextBlock Text="Save Changes" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Form Fields -->
                            <Grid ColumnSpacing="24" RowSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0" Grid.Column="0" Header="First Name" Text="{x:Bind ViewModel.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormInputStyle}" IsEnabled="{Binding IsChecked, ElementName=EditModeToggle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Header="Last Name" Text="{x:Bind ViewModel.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormInputStyle}" IsEnabled="{Binding IsChecked, ElementName=EditModeToggle}"/>
                                <TextBox Grid.Row="1" Grid.Column="0" Header="Username" Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormInputStyle}" IsEnabled="{Binding IsChecked, ElementName=EditModeToggle}"/>
                                
                                <!-- Email with Badge -->
                                <StackPanel Grid.Row="1" Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,4">
                                        <TextBlock Text="Email" />
                                        <Border BorderBrush="{StaticResource SuccessBrush}" BorderThickness="1" CornerRadius="12" Padding="8,2"
                                                Visibility="{Binding IsChecked, ElementName=EmailVerifiedToggle, Converter={StaticResource BoolToVisibility}}">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE930;" FontSize="12" Foreground="{StaticResource SuccessBrush}"/>
                                                <TextBlock Text="Verified" FontSize="12" Foreground="{StaticResource SuccessBrush}"/>
                                            </StackPanel>
                                        </Border>
                                        <Border BorderBrush="{StaticResource WarningBrush}" BorderThickness="1" CornerRadius="12" Padding="8,2"
                                                Visibility="{Binding IsChecked, ElementName=EmailVerifiedToggle, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE715;" FontSize="12" Foreground="{StaticResource WarningBrush}"/>
                                                <TextBlock Text="Unverified" FontSize="12" Foreground="{StaticResource WarningBrush}"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    <TextBox Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormInputStyle}" IsEnabled="{Binding IsChecked, ElementName=EditModeToggle}"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="2" Grid.Column="0" Header="Phone Number" Text="{x:Bind ViewModel.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormInputStyle}" IsEnabled="{Binding IsChecked, ElementName=EditModeToggle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Header="Department" Text="{x:Bind ViewModel.Department, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormInputStyle}" IsEnabled="{Binding IsChecked, ElementName=EditModeToggle}"/>
                                <TextBox Grid.Row="3" Grid.ColumnSpan="2" Header="Job Title" Text="{x:Bind ViewModel.JobTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FormInputStyle}" IsEnabled="{Binding IsChecked, ElementName=EditModeToggle}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Account Security -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="0,0,0,8">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE825;" FontSize="20" Foreground="{StaticResource AdminBlueBrush}"/>
                                <TextBlock Text="Account Security" Style="{ThemeResource SubtitleTextBlockStyle}" VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <Border Background="{StaticResource DisabledBackgroundBrush}" CornerRadius="6" Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Password" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Last changed 45 days ago" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Change Password" />
                                </Grid>
                            </Border>

                            <Border Background="{StaticResource DisabledBackgroundBrush}" CornerRadius="6" Padding="16">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Two-Factor Authentication" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Add an extra layer of security" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Enable" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <Border Background="{StaticResource DisabledBackgroundBrush}" CornerRadius="6" Padding="16">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Active Sessions" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Manage your active sessions" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="View Sessions" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Activity Log -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Recent Activity" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <!-- Sử dụng ListView để hiển thị danh sách hoạt động -->
                            <ListView SelectionMode="None" IsItemClickEnabled="False">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0,12"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.Items>
                                    <!-- Activity Item 1 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessBrush}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Approved Sales Agent Request" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="2 hours ago" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                    </Grid>
                                    <!-- Activity Item 2 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="8" Height="8" Fill="{StaticResource AdminCyanBrush}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Updated Product Inventory" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="5 hours ago" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                    </Grid>
                                    <!-- Activity Item 3 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="8" Height="8" Fill="{StaticResource AdminBlueBrush}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Created New User Account" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="1 day ago" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                    </Grid>
                                    <!-- Activity Item 4 -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="8" Height="8" Fill="{StaticResource WarningBrush}" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Generated Sales Report" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="2 days ago" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                    </Grid>
                                </ListView.Items>
                            </ListView>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>