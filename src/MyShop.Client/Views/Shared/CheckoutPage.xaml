<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Shared.CheckoutPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:cards="using:MyShop.Client.Views.Components.Cards"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">
                
                <!-- Large Desktop: 1920px+ -->
                <VisualState x:Name="LargeDesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="40"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Desktop: 1280-1919px -->
                <VisualState x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="32"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet: 960-1279px -->
                <VisualState x:Name="TabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="960"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="24"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet Portrait: 640-959px -->
                <VisualState x:Name="TabletPortraitState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="20"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Mobile: 0-639px (Default) -->
                <VisualState x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="16"/>
                    </VisualState.Setters>
                </VisualState>
                
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
            <Grid x:Name="MainContent" Padding="32,32,32,88"
                    MaxWidth="1200"
                    HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <layout:PageHeader
                    Grid.Row="0"
                    Title="Checkout"
                    Subtitle="Complete your purchase">
                    <layout:PageHeader.ActionContent>
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Command="{x:Bind ViewModel.BackToCartCommand}"
                                MinWidth="120">
                            <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                                <FontIcon Glyph="&#xE72B;"
                                        FontSize="{StaticResource FontSize_LG}"/>
                                <TextBlock Text="Back to Cart"/>
                            </StackPanel>
                        </Button>
                    </layout:PageHeader.ActionContent>
                </layout:PageHeader>

                <Grid Grid.Row="1"
                        ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                MinWidth="400"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column: Forms & Content -->
                    <StackPanel Grid.Column="0"
                            Spacing="{StaticResource Spacing_6}">

                        <!-- Shipping Information Form (Card component) -->
                        <Border Style="{StaticResource DefaultCardStyle}"
                                Padding="{StaticResource Padding_XL}">
                            <StackPanel Spacing="{StaticResource Spacing_4}">
                                <TextBlock Text="Shipping Information"
                                           FontSize="{StaticResource FontSize_XL}"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                <Grid RowSpacing="{StaticResource Spacing_4}" ColumnSpacing="{StaticResource Spacing_4}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Row 1: Name & Email -->
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="Full Name *"
                                                   FontSize="{StaticResource FontSize_SM}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource Gray900Brush}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Height="40"
                                                 CornerRadius="8"
                                                 Text="{x:Bind ViewModel.FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="John Doe"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1">
                                        <TextBlock Text="Email Address *"
                                                   FontSize="{StaticResource FontSize_SM}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource Gray900Brush}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Height="40"
                                                 CornerRadius="8"
                                                 Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="john@example.com"/>
                                    </StackPanel>

                                    <!-- Row 2: Phone & Country -->
                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                        <TextBlock Text="Phone Number *"
                                                   FontSize="{StaticResource FontSize_SM}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource Gray900Brush}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Height="40"
                                                 CornerRadius="8"
                                                 Text="{x:Bind ViewModel.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="+84 (555) 000-0000"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                        <TextBlock Text="Country *"
                                                   FontSize="{StaticResource FontSize_SM}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource Gray900Brush}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Height="40"
                                                 CornerRadius="8"
                                                 Text="{x:Bind ViewModel.Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <!-- Row 3: Address (full width) -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                        <TextBlock Text="Street Address *"
                                                   FontSize="{StaticResource FontSize_SM}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource Gray900Brush}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Height="40"
                                                 CornerRadius="8"
                                                 Text="{x:Bind ViewModel.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="123 Main Street, Apt 4B"/>
                                    </StackPanel>

                                    <!-- Row 4: City & ZIP -->
                                    <StackPanel Grid.Row="3" Grid.Column="0">
                                        <TextBlock Text="City *"
                                                   FontSize="{StaticResource FontSize_SM}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource Gray900Brush}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Height="40"
                                                 CornerRadius="8"
                                                 Text="{x:Bind ViewModel.City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="Ho Chi Minh City"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Grid.Column="1">
                                        <TextBlock Text="ZIP Code *"
                                                   FontSize="{StaticResource FontSize_SM}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource Gray900Brush}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Height="40"
                                                 CornerRadius="8"
                                                 Text="{x:Bind ViewModel.ZipCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="700000"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Payment Method Selector -->
                        <Border Style="{StaticResource DefaultCardStyle}"
                                Padding="{StaticResource Padding_XL}">
                            <StackPanel Spacing="{StaticResource Spacing_4}">
                                <TextBlock Text="Payment Method"
                                           FontSize="{StaticResource FontSize_XL}"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                
                                <!-- Selected Method Display -->
                                <Button Click="ChoosePaymentButton_Click"
                                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        Padding="16"
                                        CornerRadius="8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <FontIcon Grid.Column="0"
                                                  Glyph="{x:Bind ViewModel.SelectedPaymentIcon, Mode=OneWay}"
                                                  FontSize="{StaticResource FontSize_3XL}"
                                                  Margin="0,0,12,0"
                                                  Foreground="{ThemeResource AccentBlueBrush}"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind ViewModel.SelectedPaymentMethod, Mode=OneWay}"
                                                       FontSize="{StaticResource FontSize_Base}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="Click to change payment method"
                                                       FontSize="{StaticResource FontSize_XS}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                        
                                        <FontIcon Grid.Column="2"
                                                  Glyph="&#xE76C;"
                                                  FontSize="{StaticResource FontSize_SM}"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </Grid>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Column: Order Summary (Sticky) -->
                    <Border Grid.Column="1"
                            Style="{StaticResource DefaultCardStyle}"
                            Padding="{StaticResource Padding_XL}"
                            VerticalAlignment="Top">
                        <StackPanel Spacing="{StaticResource Spacing_4}">
                            <TextBlock Text="Order Summary"
                                       FontSize="{StaticResource FontSize_XL}"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                            <!-- Per-Agent Subtotals -->
                            <StackPanel Spacing="{StaticResource Spacing_3}" Margin="0,12,0,0">
                                <ItemsRepeater ItemsSource="{x:Bind ViewModel.SalesAgentGroups, Mode=OneWay}">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="vm:SalesAgentGroup">
                                            <Grid Margin="0,4">
                                                <TextBlock 
                                                    FontSize="{StaticResource FontSize_SM}"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="From "/><Run Text="{x:Bind SalesAgentName, Mode=OneWay}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <TextBlock Text="{x:Bind SubtotalFormatted, Mode=OneWay}"
                                                           HorizontalAlignment="Right"
                                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                           FontSize="{StaticResource FontSize_SM}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </StackPanel>

                            <!-- Price Breakdown -->
                            <StackPanel Spacing="{StaticResource Spacing_3}" Margin="0,12,0,0">
                                <Grid>
                                    <TextBlock Text="Subtotal"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="{StaticResource FontSize_Base}"/>
                                    <TextBlock Text="{x:Bind ViewModel.Subtotal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               FontSize="{StaticResource FontSize_Base}"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="Shipping"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="{StaticResource FontSize_Base}"/>
                                    <TextBlock Text="{x:Bind ViewModel.Shipping, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               FontSize="{StaticResource FontSize_Base}"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="Tax (10%)"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="{StaticResource FontSize_Base}"/>
                                    <TextBlock Text="{x:Bind ViewModel.Tax, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               FontSize="{StaticResource FontSize_Base}"/>
                                </Grid>

                                <Border Height="1"
                                        Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                        Margin="0,8"/>

                                <Grid>
                                    <TextBlock Text="Total"
                                               FontSize="{StaticResource FontSize_XL}"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               FontSize="{StaticResource FontSize_2XL}"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource SecondaryBlueBrush}"/>
                                </Grid>
                            </StackPanel>

                            <!-- Payment Notice -->
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                Message="You're ordering from multiple sellers. Each will receive a separate order."
                                Margin="0,16,0,0"
                                IsClosable="False"/>

                            <!-- QR Code Payment Section -->
                            <Border Height="1"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                    Margin="0,8"/>

                            <StackPanel Spacing="{StaticResource Spacing_3}">
                                <TextBlock Text="Payment via QR Code"
                                           FontSize="{StaticResource FontSize_LG}"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="Scan to pay with your banking app"
                                           FontSize="{StaticResource FontSize_SM}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"/>

                                <!-- QR Code Image -->
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="{StaticResource Padding_MD}"
                                        HorizontalAlignment="Center"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1">
                                    <Image x:Name="QrCodeImage"
                                           Source="ms-appx:///Assets/Images/payment-qr.jpg"
                                           Width="200"
                                           Height="200"
                                           Stretch="Uniform"
                                           ImageFailed="QrCodeImage_ImageFailed"/>
                                </Border>

                                <!-- Fallback placeholder when image fails -->
                                <Border x:Name="QrPlaceholder"
                                        Visibility="Collapsed"
                                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                        CornerRadius="8"
                                        Padding="{StaticResource Padding_XL}"
                                        HorizontalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center"
                                            Spacing="{StaticResource Spacing_2}">
                                        <FontIcon Glyph="&#xED14;"
                                                FontSize="{StaticResource FontSize_5XL}"
                                                Foreground="{ThemeResource Gray500Brush}"/>
                                        <TextBlock Text="QR Code"
                                                FontSize="{StaticResource FontSize_Base}"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Add payment-qr.png to Assets"
                                                FontSize="{StaticResource FontSize_XS}"
                                                Foreground="{ThemeResource Gray500Brush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Confirm Payment Button -->
                            <buttons:IconButton
                                    HorizontalAlignment="Center"
                                    Margin="0,16,0,0"
                                    Variant="Filled"
                                    IconGlyph="&#xE8FB;"
                                    Text="I've Made the Payment"
                                    Command="{x:Bind ViewModel.ConfirmPaymentCommand}"
                                    IsEnabled="{x:Bind ViewModel.IsProcessing, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                            <TextBlock Text="Your order will be processed once payment is confirmed"
                                       FontSize="{StaticResource FontSize_XS}"
                                       Foreground="{ThemeResource Gray500Brush}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
