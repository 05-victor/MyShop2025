<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Shared.CheckoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>

        <Style x:Key="CardStyle"
                TargetType="Border">
            <Setter Property="Background"
                    Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="CornerRadius"
                    Value="16"/>
            <Setter Property="BorderBrush"
                    Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="24"/>
        </Style>

        <Style x:Key="InputLabelStyle"
                TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Foreground"
                    Value="{ThemeResource TextTertiaryBrush}"/>
            <Setter Property="Margin"
                    Value="0,0,0,8"/>
        </Style>

        <Style x:Key="InputBoxStyle"
                TargetType="TextBox">
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="BorderBrush"
                    Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="Background"
                    Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        </Style>

        <DataTemplate x:Key="CheckoutItemTemplate"
                x:DataType="vm:CheckoutItem">
            <Grid Padding="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Width="64"
                        Height="64"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8">
                    <Image Stretch="UniformToFill">
                        <Image.Source>
                            <BitmapImage UriSource="{x:Bind ImageUrl}"
                                         DecodePixelWidth="128"
                                         DecodePixelHeight="128"/>
                        </Image.Source>
                    </Image>
                </Border>

                <StackPanel Grid.Column="1"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Name}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                               TextTrimming="CharacterEllipsis"
                               MaxLines="2"/>
                    <TextBlock FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="Qty: "/><Run Text="{x:Bind Quantity}"/>
                    </TextBlock>
                </StackPanel>

                <TextBlock Grid.Column="2"
                           Text="{x:Bind Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">
                
                <!-- Large Desktop: 1920px+ -->
                <VisualState x:Name="LargeDesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="40"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Desktop: 1280-1919px -->
                <VisualState x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="32"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet: 960-1279px -->
                <VisualState x:Name="TabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="960"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="24"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet Portrait: 640-959px -->
                <VisualState x:Name="TabletPortraitState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="20"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Mobile: 0-639px (Default) -->
                <VisualState x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="16"/>
                    </VisualState.Setters>
                </VisualState>
                
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
            <Grid x:Name="MainContent" Padding="24"
                    MaxWidth="1200"
                    HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0"
                        Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal"
                            Spacing="16">
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Command="{x:Bind ViewModel.BackToCartCommand}"
                                MinWidth="120">
                            <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                                <FontIcon Glyph="&#xE72B;"
                                        FontSize="16"/>
                                <TextBlock Text="Back to Cart"/>
                            </StackPanel>
                        </Button>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Checkout"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Complete your purchase"
                                       FontSize="14"
                                       Foreground="{ThemeResource Gray400Brush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1"
                        ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                MinWidth="400"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column: Forms & Content -->
                    <StackPanel Grid.Column="0"
                            Spacing="24">

                        <!-- Shipping Information Form -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Shipping Information"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Row 1: Name & Email -->
                                    <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,0,8,0">
                                        <TextBlock Text="Full Name *"
                                                Style="{StaticResource InputLabelStyle}"/>
                                        <TextBox Style="{StaticResource InputBoxStyle}"
                                                 Text="{x:Bind ViewModel.FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="John Doe"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="8,0,0,0">
                                        <TextBlock Text="Email Address *"
                                                Style="{StaticResource InputLabelStyle}"/>
                                        <TextBox Style="{StaticResource InputBoxStyle}"
                                                 Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="john@example.com"/>
                                    </StackPanel>

                                    <!-- Row 2: Phone & Country -->
                                    <StackPanel Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,16,8,0">
                                        <TextBlock Text="Phone Number *"
                                                Style="{StaticResource InputLabelStyle}"/>
                                        <TextBox Style="{StaticResource InputBoxStyle}"
                                                 Text="{x:Bind ViewModel.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="+84 (555) 000-0000"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="8,16,0,0">
                                        <TextBlock Text="Country *"
                                                Style="{StaticResource InputLabelStyle}"/>
                                        <TextBox Style="{StaticResource InputBoxStyle}"
                                                 Text="{x:Bind ViewModel.Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <!-- Row 3: Address (full width) -->
                                    <StackPanel Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,16,0,0">
                                        <TextBlock Text="Street Address *"
                                                Style="{StaticResource InputLabelStyle}"/>
                                        <TextBox Style="{StaticResource InputBoxStyle}"
                                                 Text="{x:Bind ViewModel.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="123 Main Street, Apt 4B"/>
                                    </StackPanel>

                                    <!-- Row 4: City & ZIP -->
                                    <StackPanel Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="0,16,8,0">
                                        <TextBlock Text="City *"
                                                Style="{StaticResource InputLabelStyle}"/>
                                        <TextBox Style="{StaticResource InputBoxStyle}"
                                                 Text="{x:Bind ViewModel.City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="Ho Chi Minh City"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="8,16,0,0">
                                        <TextBlock Text="ZIP Code *"
                                                Style="{StaticResource InputLabelStyle}"/>
                                        <TextBox Style="{StaticResource InputBoxStyle}"
                                                 Text="{x:Bind ViewModel.ZipCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="700000"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Order Items -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel Spacing="16">
                                <TextBlock FontSize="18"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}">
                                    <Run Text="Order Items ("/>
                                    <Run Text="{x:Bind ViewModel.OrderItems.Count, Mode=OneWay}"/>
                                    <Run Text=")"/>
                                </TextBlock>

                                <!-- ListView with virtualization for better performance -->
                                <ListView ItemsSource="{x:Bind ViewModel.OrderItems, Mode=OneWay}"
                                          ItemTemplate="{StaticResource CheckoutItemTemplate}"
                                          SelectionMode="None"
                                          IsItemClickEnabled="False"
                                          MaxHeight="300">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Right Column: Order Summary (Sticky) -->
                    <Border Grid.Column="1"
                            Style="{StaticResource CardStyle}"
                            VerticalAlignment="Top">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Order Summary"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                            <!-- Price Breakdown -->
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="Subtotal"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="14"/>
                                    <TextBlock Text="{x:Bind ViewModel.Subtotal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               FontSize="14"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="Shipping"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="14"/>
                                    <TextBlock Text="{x:Bind ViewModel.Shipping, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               FontSize="14"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="Tax (8%)"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            FontSize="14"/>
                                    <TextBlock Text="{x:Bind ViewModel.Tax, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                               FontSize="14"/>
                                </Grid>

                                <Border Height="1"
                                        Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                        Margin="0,8"/>

                                <Grid>
                                    <TextBlock Text="Total"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               Foreground="{ThemeResource SecondaryBlueBrush}"/>
                                </Grid>
                            </StackPanel>

                            <!-- QR Code Payment Section -->
                            <Border Height="1"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                    Margin="0,8"/>

                            <StackPanel Spacing="12">
                                <TextBlock Text="Payment via QR Code"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="Scan to pay with your banking app"
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"/>

                                <!-- QR Code Image Only -->
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="12"
                                        Padding="12"
                                        HorizontalAlignment="Center"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1">
                                    <Image x:Name="QrCodeImage"
                                           Source="ms-appx:///Assets/payment-qr.png"
                                           Width="200"
                                           Height="200"
                                           Stretch="Uniform"
                                           ImageFailed="QrCodeImage_ImageFailed"/>
                                </Border>

                                <!-- Fallback placeholder when image fails -->
                                <Border x:Name="QrPlaceholder"
                                        Visibility="Collapsed"
                                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                        CornerRadius="12"
                                        Padding="24"
                                        HorizontalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center"
                                            Spacing="8">
                                        <FontIcon Glyph="&#xED14;"
                                                FontSize="48"
                                                Foreground="{ThemeResource Gray500Brush}"/>
                                        <TextBlock Text="QR Code"
                                                FontSize="14"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Add payment-qr.png to Assets"
                                                FontSize="11"
                                                Foreground="{ThemeResource Gray500Brush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Confirm Payment Button -->
                            <buttons:IconButton
                                    HorizontalAlignment="Stretch"
                                    Margin="0,16,0,0"
                                    Variant="Filled"
                                    IconGlyph="&#xE8FB;"
                                    Text="I've Made the Payment"
                                    Command="{x:Bind ViewModel.ConfirmPaymentCommand}"
                                    IsEnabled="{x:Bind ViewModel.IsProcessing, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                            <TextBlock Text="Your order will be processed once payment is confirmed"
                                       FontSize="11"
                                       Foreground="{ThemeResource Gray500Brush}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
