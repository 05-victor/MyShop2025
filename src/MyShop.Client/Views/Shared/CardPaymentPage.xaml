<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Shared.CardPaymentPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="32,32,32,88" MaxWidth="800" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <layout:PageHeader
                Grid.Row="0"
                Title="Card Payment"
                Subtitle="Complete your payment securely">
                <layout:PageHeader.ActionContent>
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{x:Bind ViewModel.CancelCommand}"
                            MinWidth="100">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                            <TextBlock Text="Cancel"/>
                        </StackPanel>
                    </Button>
                </layout:PageHeader.ActionContent>
            </layout:PageHeader>

            <!-- Content -->
            <StackPanel Grid.Row="1" Spacing="24" Margin="0,24,0,0">

                <!-- Order Summary Card -->
                <Border Style="{StaticResource DefaultCardStyle}" Padding="24">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Order Information"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        
                        <Grid ColumnSpacing="12" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Order Code:"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{x:Bind ViewModel.OrderCode, Mode=OneWay}"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource AccentBlueBrush}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Total Amount:"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{x:Bind ViewModel.TotalAmountFormatted, Mode=OneWay}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{ThemeResource SecondaryBlueBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Card Details Form -->
                <Border Style="{StaticResource DefaultCardStyle}" Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Card Details"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <!-- Test Card Info Banner -->
                        <InfoBar
                            Severity="Informational"
                            IsOpen="True"
                            IsClosable="False"
                            Title="Test Payment System">
                            <InfoBar.Content>
                                <StackPanel Spacing="4">
                                    <TextBlock TextWrapping="Wrap">
                                        This is a demo payment system. Use test cards:
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Foreground="{ThemeResource SuccessGreenBrush}">
                                        ✅ 1111 1111 1111 1111 (Success)
                                    </TextBlock>
                                    <TextBlock FontFamily="Consolas" Foreground="{ThemeResource ErrorRedBrush}">
                                        ❌ 0000 0000 0000 0000 (Failed)
                                    </TextBlock>
                                </StackPanel>
                            </InfoBar.Content>
                            <InfoBar.ActionButton>
                                <Button Content="Use Test Card"
                                        Command="{x:Bind ViewModel.UseTestCardCommand}"
                                        Style="{StaticResource AccentButtonStyle}"/>
                            </InfoBar.ActionButton>
                        </InfoBar>

                        <!-- Error Message -->
                        <InfoBar
                            Severity="Error"
                            IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                            Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                            IsClosable="True"/>

                        <Grid RowSpacing="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Card Number -->
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Card Number *"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource Gray900Brush}"
                                           Margin="0,0,0,8"/>
                                <TextBox Height="55"
                                         CornerRadius="8"
                                         Text="{x:Bind ViewModel.CardNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="1234 5678 9012 3456"
                                         MaxLength="19"
                                         InputScope="Number">
                                    <TextBox.Header>
                                        <Grid>
                                            <FontIcon Glyph="&#xE8C7;" 
                                                      FontSize="16"
                                                      Foreground="{ThemeResource AccentBlueBrush}"
                                                      HorizontalAlignment="Right"
                                                      Margin="0,0,8,0"/>
                                        </Grid>
                                    </TextBox.Header>
                                </TextBox>
                            </StackPanel>

                            <!-- Cardholder Name -->
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Cardholder Name *"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource Gray900Brush}"
                                           Margin="0,0,0,8"/>
                                <TextBox Height="30"
                                         CornerRadius="8"
                                         Text="{x:Bind ViewModel.CardHolderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="JOHN DOE"
                                         CharacterCasing="Upper"/>
                            </StackPanel>

                            <!-- Expiry Date and CVV -->
                            <Grid Grid.Row="2" ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Expiry Date *"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource Gray900Brush}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Height="35"
                                             CornerRadius="8"
                                             Text="{x:Bind ViewModel.ExpiryDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             PlaceholderText="MM/YY"
                                             MaxLength="5"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="CVV *"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource Gray900Brush}"
                                               Margin="0,0,0,8"/>
                                    <PasswordBox Height="35"
                                                 CornerRadius="8"
                                                 Password="{x:Bind ViewModel.Cvv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 PlaceholderText="123"
                                                 MaxLength="3"/>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <!-- Payment Button -->
                        <buttons:IconButton
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0"
                            Variant="Filled"
                            IconGlyph="&#xE8C7;"
                            Text="Pay Now"
                            Command="{x:Bind ViewModel.ProcessPaymentCommand}"
                            IsEnabled="{x:Bind ViewModel.IsProcessing, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>

                        <!-- Processing Indicator -->
                        <ProgressBar IsIndeterminate="True"
                                     Visibility="{x:Bind ViewModel.IsProcessing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                     Foreground="{ThemeResource AccentBlueBrush}"/>

                        <!-- Security Notice -->
                        <Grid Margin="0,8,0,0" 
                              HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0"
                                      Glyph="&#xE72E;"
                                      FontSize="16"
                                      Foreground="{ThemeResource SuccessGreenBrush}"
                                      Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="Your payment information is secure and encrypted"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
