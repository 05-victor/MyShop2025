<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shared.ProductBrowsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    Background="#F8FAFC"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:BoolToStockColorConverter x:Key="BoolToStockColorConverter" />

        <!--  Card Style  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="24" />
        </Style>

        <!--  Product Card Style  -->
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="32" Spacing="24">

                <!--  Page Header  -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Foreground="#111827"
                        Style="{StaticResource DisplayHeadingStyle}"
                        Text="Shopping" />
                    <TextBlock
                        FontSize="14"
                        Foreground="#6B7280"
                        Text="Explore our complete product collection" />
                </StackPanel>

                <!--  Filters Card  -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon
                                FontSize="20"
                                Foreground="#6B7280"
                                Glyph="&#xE71C;" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#111827"
                                Text="Filters &amp; Sort" />
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Search  -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="12"
                                    Foreground="#6B7280"
                                    Text="Search" />
                                <TextBox
                                    Padding="12"
                                    CornerRadius="8"
                                    PlaceholderText="Search products..." />
                            </StackPanel>

                            <!--  Category  -->
                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="12"
                                    Foreground="#6B7280"
                                    Text="Category" />
                                <ComboBox
                                    Width="180"
                                    Padding="12"
                                    CornerRadius="8"
                                    PlaceholderText="All Categories">
                                    <ComboBoxItem Content="All Categories" />
                                    <ComboBoxItem Content="Electronics" />
                                    <ComboBoxItem Content="Clothing" />
                                    <ComboBoxItem Content="Home" />
                                    <ComboBoxItem Content="Sports" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Brand  -->
                            <StackPanel Grid.Column="2" Margin="0,0,12,0">
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="12"
                                    Foreground="#6B7280"
                                    Text="Brand" />
                                <ComboBox
                                    Width="180"
                                    Padding="12"
                                    CornerRadius="8"
                                    PlaceholderText="All Brands">
                                    <ComboBoxItem Content="All Brands" />
                                    <ComboBoxItem Content="Apple" />
                                    <ComboBoxItem Content="Samsung" />
                                    <ComboBoxItem Content="Nike" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Sort  -->
                            <StackPanel Grid.Column="3" Margin="0,0,12,0">
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="12"
                                    Foreground="#6B7280"
                                    Text="Sort By" />
                                <ComboBox
                                    Width="180"
                                    Padding="12"
                                    CornerRadius="8"
                                    SelectedIndex="0">
                                    <ComboBoxItem Content="Featured" />
                                    <ComboBoxItem Content="Price: Low to High" />
                                    <ComboBoxItem Content="Price: High to Low" />
                                    <ComboBoxItem Content="Name: A-Z" />
                                    <ComboBoxItem Content="Rating" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Reset Button  -->
                            <Button
                                Grid.Column="4"
                                Padding="16,12"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderBrush="#E5E7EB"
                                Content="Reset"
                                Foreground="#DC2626" />

                            <!--  Price Range  -->
                            <StackPanel
                                Grid.Row="1"
                                Grid.ColumnSpan="5"
                                Margin="0,16,0,0">
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="12"
                                    Foreground="#6B7280"
                                    Text="Price Range" />
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <Slider
                                        Width="300"
                                        Maximum="3000"
                                        Minimum="0"
                                        StepFrequency="50"
                                        Value="0" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="#111827"
                                        Text="$0 - $3000" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Products Grid  -->
                <GridView
                    x:Name="ProductGridView"
                    IsItemClickEnabled="False"
                    ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}"
                    SelectionMode="None">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid
                                ItemHeight="400"
                                ItemWidth="280"
                                MaximumRowsOrColumns="4"
                                Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <!--  Product Card Template  -->
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="vm:ProductCardViewModel">
                            <Border
                                Width="260"
                                Height="380"
                                Style="{StaticResource ProductCardStyle}">
                                <StackPanel Spacing="12">
                                    <!--  Product Image  -->
                                    <Border
                                        Height="160"
                                        HorizontalAlignment="Stretch"
                                        Background="#F3F4F6"
                                        CornerRadius="8">
                                        <Image Source="{x:Bind ImageUrl}" Stretch="UniformToFill" />
                                    </Border>

                                    <!--  Product Info  -->
                                    <StackPanel Spacing="8">
                                        <!--  Brand & Category  -->
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border
                                                Padding="6,2"
                                                Background="#EEF2FF"
                                                CornerRadius="4">
                                                <TextBlock
                                                    FontSize="10"
                                                    Foreground="#6366F1"
                                                    Text="{x:Bind Category}" />
                                            </Border>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#6B7280"
                                                Text="{x:Bind Manufacturer}" />
                                        </StackPanel>

                                        <!--  Product Name  -->
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="#111827"
                                            Text="{x:Bind Name}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--  Rating  -->
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontSize="14"
                                                Foreground="#F59E0B"
                                                Glyph="&#xE735;" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="#111827"
                                                Text="{x:Bind Rating}" />
                                            <TextBlock FontSize="12" Foreground="#6B7280">
                                                <Run Text="(" /><Run Text="{x:Bind RatingCount}" /><Run Text=")" />
                                            </TextBlock>
                                        </StackPanel>

                                        <!--  Price & Stock  -->
                                        <Grid>
                                            <StackPanel
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal"
                                                Spacing="8">
                                                <TextBlock
                                                    FontSize="20"
                                                    FontWeight="Bold"
                                                    Foreground="#00AEEF"
                                                    Text="{x:Bind FormattedPrice}" />
                                                <Border
                                                    Padding="6,2"
                                                    Background="{x:Bind IsInStock, Converter={StaticResource BoolToStockColorConverter}}"
                                                    CornerRadius="4">
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="White"
                                                        Text="{x:Bind StockStatus}" />
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        <!--  Actions  -->
                                        <StackPanel
                                            Margin="0,8,0,0"
                                            Orientation="Horizontal"
                                            Spacing="8">
                                            <Button
                                                Width="140"
                                                Padding="12,8"
                                                HorizontalAlignment="Stretch"
                                                Background="#00AEEF"
                                                Command="{Binding ElementName=ProductGridView, Path=DataContext.AddToCartCommand}"
                                                CommandParameter="{x:Bind}"
                                                CornerRadius="8"
                                                Foreground="White"
                                                IsEnabled="{x:Bind IsInStock}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="14" Glyph="&#xE7BF;" />
                                                    <TextBlock FontSize="12" Text="Add to Cart" />
                                                </StackPanel>
                                            </Button>
                                            <Button
                                                Padding="10"
                                                Background="Transparent"
                                                BorderBrush="#E5E7EB"
                                                Command="{Binding ElementName=ProductGridView, Path=DataContext.ViewProductDetailsCommand}"
                                                CommandParameter="{x:Bind}"
                                                CornerRadius="8">
                                                <FontIcon
                                                    FontSize="16"
                                                    Foreground="#6B7280"
                                                    Glyph="&#xE890;" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!--  Pagination  -->
                <StackPanel
                    Margin="0,24,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="Previous"
                        CornerRadius="8"
                        Foreground="#6B7280" />

                    <Button
                        Width="40"
                        Padding="12,8"
                        Background="#00AEEF"
                        Content="1"
                        CornerRadius="8"
                        Foreground="White" />
                    <Button
                        Width="40"
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="2"
                        CornerRadius="8"
                        Foreground="#6B7280" />
                    <Button
                        Width="40"
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="3"
                        CornerRadius="8"
                        Foreground="#6B7280" />

                    <Button
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="Next"
                        CornerRadius="8"
                        Foreground="#6B7280" />
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
