<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shared.ProductBrowsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:MyShop.Client.Views.Components"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    xmlns:skeletons="using:MyShop.Client.Views.Components.Skeletons"
    Background="#F5F7FA"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:BoolToStockColorConverter x:Key="BoolToStockColorConverter" />
    </Page.Resources>

    <Grid>
        <Grid.Transitions>
            <TransitionCollection>
                <EntranceThemeTransition FromVerticalOffset="50"/>
            </TransitionCollection>
        </Grid.Transitions>
        <RefreshContainer RefreshRequested="RefreshContainer_RefreshRequested">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Padding="24" RowSpacing="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                <!-- Page Header -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Shopping" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#1B1D1F"/>
                    <TextBlock Text="Explore our complete product collection" 
                              FontSize="14" 
                              Foreground="#4A5568"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Main Content -->
                <StackPanel Grid.Row="1" Spacing="20">

                <!--  Filters Card  -->
                <Border Style="{StaticResource CardWithShadowStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon
                                FontSize="20"
                                Foreground="#6B7280"
                                Glyph="&#xE71C;" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#111827"
                                Text="Filters &amp; Sort" />
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Search  -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Search" 
                                          FontSize="12"
                                          FontWeight="SemiBold" 
                                          Foreground="#1B1D1F"
                                          Margin="0,0,0,8"/>
                                <components:SearchBox PlaceholderText="Search products..." />
                            </StackPanel>

                            <!--  Category  -->
                            <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="Category" 
                                          FontSize="12"
                                          FontWeight="SemiBold" 
                                          Foreground="#1B1D1F"
                                          Margin="0,0,0,8"/>
                                <ComboBox Width="180"
                                         Height="40"
                                         CornerRadius="10"
                                         BorderBrush="#D0D7E2"
                                         PlaceholderText="All Categories">
                                    <ComboBoxItem Content="All Categories" />
                                    <ComboBoxItem Content="Electronics" />
                                    <ComboBoxItem Content="Clothing" />
                                    <ComboBoxItem Content="Home" />
                                    <ComboBoxItem Content="Sports" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Brand  -->
                            <StackPanel Grid.Column="2" Margin="0,0,12,0">
                                <TextBlock Text="Brand" 
                                          FontSize="12"
                                          FontWeight="SemiBold" 
                                          Foreground="#1B1D1F"
                                          Margin="0,0,0,8"/>
                                <ComboBox Width="180"
                                         Height="40"
                                         CornerRadius="10"
                                         BorderBrush="#D0D7E2"
                                         PlaceholderText="All Brands">
                                    <ComboBoxItem Content="All Brands" />
                                    <ComboBoxItem Content="Apple" />
                                    <ComboBoxItem Content="Samsung" />
                                    <ComboBoxItem Content="Nike" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Sort  -->
                            <StackPanel Grid.Column="3" Margin="0,0,12,0">
                                <TextBlock Text="Sort By" 
                                          FontSize="12"
                                          FontWeight="SemiBold" 
                                          Foreground="#1B1D1F"
                                          Margin="0,0,0,8"/>
                                <ComboBox Width="180"
                                         Height="40"
                                         CornerRadius="10"
                                         BorderBrush="#D0D7E2"
                                         SelectedIndex="0"
                                         SelectionChanged="SortComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Newest" />
                                    <ComboBoxItem Content="Name: A to Z" />
                                    <ComboBoxItem Content="Name: Z to A" />
                                    <ComboBoxItem Content="Price: Low to High" />
                                    <ComboBoxItem Content="Price: High to Low" />
                                    <ComboBoxItem Content="Rating" />
                                </ComboBox>
                            </StackPanel>

                            <!--  Reset Button  -->
                            <Button Grid.Column="4"
                                   Height="44"
                                   Padding="16,0"
                                   VerticalAlignment="Bottom"
                                   Background="#FEE2E2"
                                   Foreground="#DC2626"
                                   BorderThickness="0"
                                   CornerRadius="12"
                                   Content="Reset" />

                            <!--  Price Range  -->
                            <StackPanel
                                Grid.Row="1"
                                Grid.ColumnSpan="5"
                                Margin="0,16,0,0">
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="12"
                                    Foreground="#6B7280"
                                    Text="Price Range" />
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <Slider
                                        Width="300"
                                        Maximum="3000"
                                        Minimum="0"
                                        StepFrequency="50"
                                        Value="0" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="#111827"
                                        Text="$0 - $3000" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Loading Skeleton  -->
                <skeletons:ProductGridSkeleton
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                <!--  Empty State - No Products Found  -->
                <Border
                    Padding="80,60"
                    Style="{StaticResource CardStyle}"
                    Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" Spacing="20">
                        <Viewbox Width="120" Height="120">
                            <Grid>
                                <Ellipse Width="120" Height="120" Fill="#F3F4F6" />
                                <FontIcon
                                    FontSize="64"
                                    Foreground="#9CA3AF"
                                    Glyph="&#xE721;" />
                            </Grid>
                        </Viewbox>
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Foreground="#374151"
                            Text="No products found"
                            TextAlignment="Center" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#6B7280"
                            Text="Try adjusting your filters or search query"
                            TextAlignment="Center"
                            MaxWidth="300"
                            TextWrapping="Wrap" />
                        <Button
                            Margin="0,12,0,0"
                            Padding="16,10"
                            Background="Transparent"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="8"
                            ToolTipService.ToolTip="Clear all filters">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE894;" Foreground="#6B7280" />
                                <TextBlock Text="Clear Filters" Foreground="#111827" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!--  Products Grid  -->
                <GridView
                    x:Name="ProductGridView"
                    IsItemClickEnabled="False"
                    ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}"
                    SelectionMode="None"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <GridView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition />
                            <RepositionThemeTransition />
                            <AddDeleteThemeTransition />
                        </TransitionCollection>
                    </GridView.ItemContainerTransitions>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid
                                ItemHeight="400"
                                ItemWidth="280"
                                MaximumRowsOrColumns="4"
                                Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <!--  Product Card Template  -->
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="vm:ProductCardViewModel">
                            <Border Width="260"
                                   Height="380"
                                   Style="{StaticResource ProductCardStyle}">
                                <StackPanel Spacing="12">
                                    <!--  Product Image  -->
                                    <Border
                                        Height="160"
                                        HorizontalAlignment="Stretch"
                                        Background="#F3F4F6"
                                        CornerRadius="8">
                                        <Image Source="{x:Bind ImageUrl}" Stretch="UniformToFill" />
                                    </Border>

                                    <!--  Product Info  -->
                                    <StackPanel Spacing="8">
                                        <!--  Brand & Category  -->
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border
                                                Padding="6,2"
                                                Background="#EEF2FF"
                                                CornerRadius="4">
                                                <TextBlock
                                                    FontSize="10"
                                                    Foreground="#6366F1"
                                                    Text="{x:Bind Category}" />
                                            </Border>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#6B7280"
                                                Text="{x:Bind Manufacturer}" />
                                        </StackPanel>

                                        <!--  Product Name  -->
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="#111827"
                                            Text="{x:Bind Name}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--  Rating  -->
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontSize="14"
                                                Foreground="#F59E0B"
                                                Glyph="&#xE735;" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="#111827"
                                                Text="{x:Bind Rating}" />
                                            <TextBlock FontSize="12" Foreground="#6B7280">
                                                <Run Text="(" /><Run Text="{x:Bind RatingCount}" /><Run Text=")" />
                                            </TextBlock>
                                        </StackPanel>

                                        <!--  Price & Stock  -->
                                        <Grid>
                                            <StackPanel
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal"
                                                Spacing="8">
                                                <TextBlock
                                                    FontSize="20"
                                                    FontWeight="Bold"
                                                    Foreground="#00AEEF"
                                                    Text="{x:Bind FormattedPrice}" />
                                                <Border
                                                    Padding="6,2"
                                                    Background="{x:Bind IsInStock, Converter={StaticResource BoolToStockColorConverter}}"
                                                    CornerRadius="4">
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="White"
                                                        Text="{x:Bind StockStatus}" />
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        <!--  Actions  -->
                                        <StackPanel Margin="0,8,0,0"
                                                   Orientation="Horizontal"
                                                   Spacing="8">
                                            <Button Width="140"
                                                   Height="44"
                                                   Padding="12,0"
                                                   HorizontalAlignment="Stretch"
                                                   Background="#1A4D8F"
                                                   Command="{Binding ElementName=ProductGridView, Path=DataContext.AddToCartCommand}"
                                                   CommandParameter="{x:Bind}"
                                                   CornerRadius="12"
                                                   BorderThickness="0"
                                                   Foreground="White"
                                                   FontWeight="SemiBold"
                                                   IsEnabled="{x:Bind IsInStock}"
                                                   ToolTipService.ToolTip="Add this product to your shopping cart">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="14" Glyph="&#xE7BF;" />
                                                    <TextBlock FontSize="12" Text="Add to Cart" />
                                                </StackPanel>
                                            </Button>
                                            <Button Height="44"
                                                   Width="44"
                                                   Padding="0"
                                                   Background="#F3F6FA"
                                                   BorderBrush="#C4D0E3"
                                                   BorderThickness="1"
                                                   Command="{Binding ElementName=ProductGridView, Path=DataContext.ViewProductDetailsCommand}"
                                                   CommandParameter="{x:Bind}"
                                                   CornerRadius="12"
                                                   ToolTipService.ToolTip="View detailed product information">
                                                <FontIcon
                                                    FontSize="16"
                                                    Foreground="#6B7280"
                                                    Glyph="&#xE890;" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!--  Load More Button for Infinite Scroll  -->
                <StackPanel
                    Margin="0,24,0,0"
                    HorizontalAlignment="Center"
                    Spacing="16"
                    Visibility="{x:Bind ViewModel.HasMoreItems, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Height="44"
                           Padding="20,0"
                           Background="#1A4D8F"
                           BorderThickness="0"
                           Command="{x:Bind ViewModel.LoadMoreProductsCommand}"
                           CornerRadius="12"
                           Foreground="White"
                           FontWeight="SemiBold"
                           ToolTipService.ToolTip="Load more products">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing
                                Width="16"
                                Height="16"
                                Foreground="White"
                                IsActive="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                            <FontIcon
                                FontSize="16"
                                Glyph="&#xE74A;"
                                Visibility="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                            <TextBlock Text="Load More Products" Visibility="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                            <TextBlock Text="Loading..." Visibility="{x:Bind ViewModel.IsLoadingMore, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        FontSize="12"
                        Foreground="#6B7280"
                        HorizontalAlignment="Center">
                        <Run Text="Showing" />
                        <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.Products.Count, Mode=OneWay}" />
                        <Run Text="of" />
                        <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.TotalProducts, Mode=OneWay}" />
                        <Run Text="products" />
                    </TextBlock>
                </StackPanel>

                <!--  Pagination (Legacy - can be hidden when using infinite scroll)  -->
                <StackPanel
                    Margin="0,24,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8"
                    Visibility="Collapsed">
                    <Button
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="Previous"
                        CornerRadius="8"
                        Foreground="#6B7280" />

                    <Button
                        Width="40"
                        Padding="12,8"
                        Background="#00AEEF"
                        Content="1"
                        CornerRadius="8"
                        Foreground="White" />
                    <Button
                        Width="40"
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="2"
                        CornerRadius="8"
                        Foreground="#6B7280" />
                    <Button
                        Width="40"
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="3"
                        CornerRadius="8"
                        Foreground="#6B7280" />

                    <Button
                        Padding="12,8"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        Content="Next"
                        CornerRadius="8"
                        Foreground="#6B7280" />
                </StackPanel>

                </StackPanel>
                </Grid>
            </ScrollViewer>
        </RefreshContainer>
    </Grid>
</Page>
