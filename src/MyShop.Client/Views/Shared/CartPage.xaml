<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shared.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    Background="#F5F7FA"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <x:String x:Key="CurrencyFormat">{0:N0} â‚«</x:String>

    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Padding="24" RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Spacing="16">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Shopping Cart"
                                      FontSize="28"
                                      FontWeight="Bold"
                                      Foreground="#1B1D1F" />
                            <!--<TextBlock
                                FontSize="14"
                                Foreground="#6B7280"
                                Text="{x:Bind ViewModel.ItemCount, Mode=OneWay}" />-->
                        </StackPanel>
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                               Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                               MinWidth="160">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE72B;" />
                                <TextBlock Text="Continue Shopping" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Button Grid.Column="1"
                           Height="44"
                           VerticalAlignment="Bottom"
                           Background="#FEE2E2"
                           BorderThickness="0"
                           Command="{x:Bind ViewModel.ClearCartCommand}"
                           Content="Clear Cart"
                           CornerRadius="12"
                           Foreground="#DC2626"
                           MinWidth="120" />
                </Grid>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Cart Items List  -->
                    <StackPanel Grid.Column="0"
                               Margin="0,0,16,0"
                               Spacing="16">

                        <!--  Empty Cart Message  -->
                        <Border Padding="64,48"
                               Style="{StaticResource CardWithShadowStyle}"
                               Visibility="{x:Bind ViewModel.IsEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" Spacing="20">
                                <Viewbox Width="120" Height="120">
                                    <Grid>
                                        <Ellipse Width="120" Height="120" Fill="#F3F4F6" />
                                        <FontIcon
                                            FontSize="64"
                                            Foreground="#9CA3AF"
                                            Glyph="&#xE7BF;" />
                                    </Grid>
                                </Viewbox>
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="#374151"
                                    Text="Your cart is empty"
                                    TextAlignment="Center" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="#6B7280"
                                    Text="Browse products and add items to start shopping"
                                    TextAlignment="Center"
                                    MaxWidth="300"
                                    TextWrapping="Wrap" />
                                
                                <Button Style="{StaticResource PrimaryButtonStyle}"
                                       Margin="0,12,0,0"
                                       MinWidth="160"
                                       Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                                       ToolTipService.ToolTip="Browse available products">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon FontSize="16" Glyph="&#xE719;" />
                                        <TextBlock Text="Start Shopping" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!--  Cart Items List  -->
                        <!-- Changed to {Binding} for dynamic cart data -->
                        <ItemsControl x:Name="CartItemsControl" ItemsSource="{Binding Items, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:CartItemViewModel">
                                    <Border Margin="0,0,0,16" Style="{StaticResource CardWithShadowStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Product Image  -->
                                            <Border
                                                Width="96"
                                                Height="96"
                                                Margin="0,0,16,0"
                                                Background="#F9FAFB"
                                                CornerRadius="8">
                                                <Image Source="{x:Bind ImageUrl}" Stretch="UniformToFill" />
                                            </Border>

                                            <!--  Product Info  -->
                                            <StackPanel
                                                Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Spacing="8">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="#111827"
                                                    Text="{x:Bind Name}" />
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#6B7280"
                                                    Text="{x:Bind Category}" />

                                                <!--  Quantity Controls  -->
                                                <StackPanel
                                                    Margin="0,8,0,0"
                                                    Orientation="Horizontal"
                                                    Spacing="12">
                                                    <Button
                                                        Width="32"
                                                        Height="32"
                                                        Padding="0"
                                                        Background="White"
                                                        BorderBrush="#E5E7EB"
                                                        Command="{Binding ElementName=CartItemsControl, Path=DataContext.DecreaseQuantityCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        CornerRadius="6">
                                                        <FontIcon FontSize="12" Glyph="&#xE738;" />
                                                    </Button>
                                                    <Border
                                                        Width="60"
                                                        Padding="12,6"
                                                        BorderBrush="#E5E7EB"
                                                        BorderThickness="1"
                                                        CornerRadius="8">
                                                        <TextBlock
                                                            Foreground="#111827"
                                                            Text="{x:Bind Quantity, Mode=OneWay}"
                                                            TextAlignment="Center" />
                                                    </Border>
                                                    <Button Width="32"
                                                           Height="32"
                                                           Padding="0"
                                                           Background="#1A4D8F"
                                                           BorderThickness="0"
                                                           Command="{Binding ElementName=CartItemsControl, Path=DataContext.IncreaseQuantityCommand}"
                                                           CommandParameter="{x:Bind}"
                                                           CornerRadius="8"
                                                           Foreground="White">
                                                        <FontIcon FontSize="12" Glyph="&#xE710;" />
                                                    </Button>
                                                    <Button
                                                        Margin="12,0,0,0"
                                                        Padding="8"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        Command="{Binding ElementName=CartItemsControl, Path=DataContext.RemoveItemCommand}"
                                                        CommandParameter="{x:Bind}">
                                                        <FontIcon
                                                            FontSize="16"
                                                            Foreground="#DC2626"
                                                            Glyph="&#xE74D;" />
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>

                                            <!--  Price  -->
                                            <StackPanel
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                                <TextBlock
                                                    FontSize="20"
                                                    FontWeight="Bold"
                                                    Foreground="#111827"
                                                    Text="{x:Bind Price, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource CurrencyFormat}}"
                                                    TextAlignment="Right" />
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#6B7280"
                                                    Text="each"
                                                    TextAlignment="Right" />
                                                <TextBlock
                                                    Margin="0,8,0,0"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="#00AEEF"
                                                    Text="{x:Bind Total, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource CurrencyFormat}}"
                                                    TextAlignment="Right" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!--  Order Summary Card  -->
                    <Border Grid.Column="1" Style="{StaticResource CardWithShadowStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#111827"
                                Text="Order Summary" />

                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Foreground="#6B7280" Text="Subtotal" />
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="#111827"
                                        Text="{x:Bind ViewModel.Subtotal, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource CurrencyFormat}}" />
                                </Grid>
                                <Grid>
                                    <TextBlock Foreground="#6B7280" Text="Shipping" />
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="#111827"
                                        Text="{x:Bind ViewModel.ShippingFee, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource CurrencyFormat}}" />
                                </Grid>
                                <Grid>
                                    <TextBlock Foreground="#6B7280" Text="Tax (10%)" />
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="#111827"
                                        Text="{x:Bind ViewModel.Tax, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource CurrencyFormat}}" />
                                </Grid>

                                <Border
                                    Height="1"
                                    Margin="0,8"
                                    Background="#E5E7EB" />

                                <Grid>
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Foreground="#111827"
                                        Text="Total" />
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="#00AEEF"
                                        Text="{x:Bind ViewModel.Total, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource CurrencyFormat}}" />
                                </Grid>
                            </StackPanel>

                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Stretch"
                                   Command="{x:Bind ViewModel.ProceedToCheckoutCommand}"
                                   Content="Proceed to Checkout" />

                            <HyperlinkButton
                                HorizontalAlignment="Center"
                                Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                                Content="Continue Shopping"
                                Foreground="#6B7280" />
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
