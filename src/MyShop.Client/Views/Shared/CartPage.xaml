<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shared.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <x:String x:Key="CurrencyFormat">{0:N0} â‚«</x:String>

    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">
                
                <!-- Large Desktop: 1920px+ -->
                <VisualState x:Name="LargeDesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="40"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Desktop: 1280-1919px -->
                <VisualState x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="32"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet: 960-1279px -->
                <VisualState x:Name="TabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="960"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="24"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet Portrait: 640-959px -->
                <VisualState x:Name="TabletPortraitState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="20"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Mobile: 0-639px (Default) -->
                <VisualState x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding" Value="16"/>
                    </VisualState.Setters>
                </VisualState>
                
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid x:Name="MainContent" Padding="24"
                  RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--  Header  -->
                <layout:PageHeader
                    Title="Shopping Cart"
                    Subtitle="Review and manage your items">
                    <layout:PageHeader.ActionContent>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="12">
                            <buttons:IconButton
                                Variant="Outline"
                                IconGlyph="&#xE72B;"
                                Text="Continue Shopping"
                                Command="{x:Bind ViewModel.ContinueShoppingCommand}"/>
                            <buttons:IconButton
                                Variant="Outline"
                                IconGlyph="&#xE74D;"
                                Text="Clear Cart"
                                IconColor="{ThemeResource ErrorRedBrush}"
                                Command="{x:Bind ViewModel.ClearCartCommand}"/>
                        </StackPanel>
                    </layout:PageHeader.ActionContent>
                </layout:PageHeader>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--  Cart Items List  -->
                    <StackPanel Grid.Column="0"
                                Margin="0,0,16,0"
                                Spacing="16">

                        <!--  Empty Cart Message  -->
                        <Border Padding="64,48"
                                Style="{StaticResource CardWithShadowStyle}"
                                Visibility="{x:Bind ViewModel.IsEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center"
                                        Spacing="20">
                                <Viewbox Width="120"
                                         Height="120">
                                    <Grid>
                                        <Ellipse Width="120"
                                                 Height="120"
                                                 Fill="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                        <FontIcon
                                            FontSize="64"
                                            Foreground="{ThemeResource Gray500Brush}"
                                            Glyph="&#xE7BF;"/>
                                    </Grid>
                                </Viewbox>
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextTertiaryBrush}"
                                    Text="Your cart is empty"
                                    TextAlignment="Center"/>
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Browse products and add items to start shopping"
                                    TextAlignment="Center"
                                    MaxWidth="300"
                                    TextWrapping="Wrap"/>

                                <buttons:IconButton
                                        Margin="0,12,0,0"
                                        MinWidth="160"
                                        Variant="Filled"
                                        IconGlyph="&#xE719;"
                                        Text="Start Shopping"
                                        Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                                        Tooltip="Browse available products"/>
                            </StackPanel>
                        </Border>

                        <!--  Cart Items List  -->
                        <!-- ListView with virtualization for performance -->
                        <ListView x:Name="CartItemsListView"
                                  ItemsSource="{Binding Items, Mode=OneWay}"
                                  SelectionMode="None"
                                  IsItemClickEnabled="False">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:CartItemViewModel">
                                    <Border Margin="0,0,0,16"
                                            Style="{StaticResource CardWithShadowStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!--  Product Image with DecodePixelWidth optimization  -->
                                            <Border
                                                Width="96"
                                                Height="96"
                                                Margin="0,0,16,0"
                                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                CornerRadius="8">
                                                <Image Stretch="UniformToFill">
                                                    <Image.Source>
                                                        <BitmapImage UriSource="{x:Bind ImageUrl}"
                                                                     DecodePixelWidth="192"
                                                                     DecodePixelType="Logical"/>
                                                    </Image.Source>
                                                </Image>
                                            </Border>

                                            <!--  Product Info  -->
                                            <StackPanel
                                                Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Spacing="8">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Text="{x:Bind Name}"/>
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="{x:Bind Category}"/>

                                                <!--  Quantity Controls  -->
                                                <StackPanel
                                                    Margin="0,8,0,0"
                                                    Orientation="Horizontal"
                                                    Spacing="12">
                                                    <Button
                                                        Width="32"
                                                        Height="32"
                                                        Padding="0"
                                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        Command="{Binding ElementName=CartItemsListView, Path=DataContext.DecreaseQuantityCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        CornerRadius="6">
                                                        <FontIcon FontSize="12"
                                                                  Glyph="&#xE738;"/>
                                                    </Button>
                                                    <Border
                                                        Width="60"
                                                        Padding="12,6"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="8">
                                                        <TextBlock
                                                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                            Text="{x:Bind Quantity, Mode=OneWay}"
                                                            TextAlignment="Center"/>
                                                    </Border>
                                                    <Button Width="32"
                                                            Height="32"
                                                            Padding="0"
                                                            Background="{ThemeResource PrimaryBrush}"
                                                            BorderThickness="0"
                                                            Command="{Binding ElementName=CartItemsListView, Path=DataContext.IncreaseQuantityCommand}"
                                                            CommandParameter="{x:Bind}"
                                                            CornerRadius="8"
                                                            Foreground="{ThemeResource WhiteBrush}">
                                                        <FontIcon FontSize="12"
                                                                  Glyph="&#xE710;"/>
                                                    </Button>
                                                    <Button
                                                        Margin="12,0,0,0"
                                                        Padding="8"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        Command="{Binding ElementName=CartItemsListView, Path=DataContext.RemoveItemCommand}"
                                                        CommandParameter="{x:Bind}">
                                                        <FontIcon
                                                            FontSize="16"
                                                            Foreground="{ThemeResource ErrorRedBrush}"
                                                            Glyph="&#xE74D;"/>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>

                                            <!--  Price  -->
                                            <StackPanel
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                                <TextBlock
                                                    FontSize="20"
                                                    FontWeight="Bold"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}"
                                                    TextAlignment="Right"/>
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="each"
                                                    TextAlignment="Right"/>
                                                <TextBlock
                                                    Margin="0,8,0,0"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource AccentBlueBrush}"
                                                    Text="{x:Bind Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                    TextAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!--  Order Summary Card  -->
                    <Border Grid.Column="1"
                            Style="{StaticResource CardWithShadowStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="Order Summary"/>

                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Text="Subtotal"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="{x:Bind ViewModel.Subtotal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Text="Shipping"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="{x:Bind ViewModel.ShippingFee, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Text="Tax (10%)"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="{x:Bind ViewModel.Tax, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>

                                <Border
                                    Height="1"
                                    Margin="0,8"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}"/>

                                <Grid>
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="Total"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="{ThemeResource AccentBlueBrush}"
                                        Text="{x:Bind ViewModel.Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>
                            </StackPanel>

                            <buttons:IconButton
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Stretch"
                                    Variant="Filled"
                                    IconGlyph="&#xE8A1;"
                                    Text="Proceed to Checkout"
                                    Command="{x:Bind ViewModel.ProceedToCheckoutCommand}"/>

                            <HyperlinkButton
                                HorizontalAlignment="Center"
                                Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                                Content="Continue Shopping"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
