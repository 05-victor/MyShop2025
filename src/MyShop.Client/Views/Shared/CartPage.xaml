<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shared.CartPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    Background="{ThemeResource PageBackgroundBrush}"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <x:String x:Key="CurrencyFormat">{0:N0} ₫</x:String>

    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">

                <!-- Large Desktop: 1920px+ -->
                <VisualState x:Name="LargeDesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="40"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Desktop: 1280-1919px -->
                <VisualState x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="32"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet: 960-1279px -->
                <VisualState x:Name="TabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="960"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="24"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet Portrait: 640-959px -->
                <VisualState x:Name="TabletPortraitState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="20"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Mobile: 0-639px (Default) -->
                <VisualState x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="16"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid x:Name="MainContent"
                  Padding="24"
                  RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--  Header  -->
                <layout:PageHeader
                    Title="Shopping Cart"
                    Subtitle="Review and manage your items">
                    <layout:PageHeader.ActionContent>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="12">
                            <buttons:IconButton
                                Variant="Outline"
                                IconGlyph="&#xE72B;"
                                Text="Continue Shopping"
                                Command="{x:Bind ViewModel.ContinueShoppingCommand}"/>
                            <buttons:IconButton
                                Variant="Outline"
                                IconGlyph="&#xE74D;"
                                Text="Clear Cart"
                                IconColor="{ThemeResource ErrorRedBrush}"
                                Command="{x:Bind ViewModel.ClearCartCommand}"/>
                        </StackPanel>
                    </layout:PageHeader.ActionContent>
                </layout:PageHeader>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--  Cart Items List  -->
                    <StackPanel Grid.Column="0"
                                Margin="0,0,16,0"
                                Spacing="16">

                        <!--  Empty Cart Message  -->
                        <Border Padding="64,48"
                                Style="{StaticResource CardWithShadowStyle}"
                                Visibility="{x:Bind ViewModel.IsEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center"
                                        Spacing="20">
                                <Viewbox Width="120"
                                         Height="120">
                                    <Grid>
                                        <Ellipse Width="120"
                                                 Height="120"
                                                 Fill="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                        <FontIcon
                                            FontSize="{ThemeResource FontSize_6XL}"
                                            Foreground="{ThemeResource Gray500Brush}"
                                            Glyph="&#xE7BF;"/>
                                    </Grid>
                                </Viewbox>
                                <TextBlock
                                    FontSize="{ThemeResource FontSize_2XL}"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextTertiaryBrush}"
                                    Text="Your cart is empty"
                                    TextAlignment="Center"/>
                                <TextBlock
                                    FontSize="{ThemeResource FontSize_Base}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Browse products and add items to start shopping"
                                    TextAlignment="Center"
                                    MaxWidth="300"
                                    TextWrapping="Wrap"/>

                                <buttons:IconButton
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Center"
                                    MinWidth="160"
                                    Variant="Filled"
                                    IconGlyph="&#xE719;"
                                    Text="Start Shopping"
                                    Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                                    Tooltip="Browse available products"/>
                            </StackPanel>
                        </Border>

                        <!--  Cart Items Grouped by Sales Agent  -->
                        <ItemsRepeater x:Name="AgentGroupsRepeater"
                                       ItemsSource="{x:Bind ViewModel.AgentGroups, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="vm:CartAgentGroup">
                                    <!-- Agent Group Card -->
                                    <Border Margin="0,0,0,16"
                                            Padding="0"
                                            BorderBrush="{x:Bind IsSelected, Mode=OneWay, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Theme:CardStrokeColorDefaultBrush|Theme:AccentFillColorDefaultBrush'}"
                                            Style="{StaticResource CardWithShadowStyle}">
                                        <Border.BorderThickness>
                                            <Thickness>2</Thickness>
                                        </Border.BorderThickness>
                                        <StackPanel Spacing="0">
                                            <!-- Group Header -->
                                            <Grid Padding="20,16"
                                                  Background="{x:Bind IsSelected, Mode=OneWay, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Theme:LayerFillColorDefaultBrush|Theme:SubtleFillColorSecondaryBrush'}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Shop Icon -->
                                                <Border Grid.Row="0"
                                                        Grid.Column="0"
                                                        Width="40"
                                                        Height="40"
                                                        Margin="0,0,12,0"
                                                        Background="{ThemeResource AccentBlueBrush}"
                                                        CornerRadius="20">
                                                    <FontIcon Glyph="&#xE8D1;"
                                                              FontSize="{ThemeResource FontSize_2XL}"
                                                              Foreground="{ThemeResource WhiteBrush}"/>
                                                </Border>

                                                <!-- Shop Info (Name only, no subtotal) -->
                                                <StackPanel Grid.Row="0"
                                                            Grid.Column="1"
                                                            Spacing="4">
                                                    <TextBlock Text="{x:Bind AgentName}"
                                                               FontSize="{ThemeResource FontSize_LG}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                </StackPanel>

                                                <!-- Select Shop Button -->
                                                <Button Grid.Row="0"
                                                        Grid.Column="3"
                                                        Style="{StaticResource PrimaryButtonStyle}"
                                                        Padding="16,8"
                                                        Command="{Binding ElementName=RootPage, Path=ViewModel.SelectShopCommand}"
                                                        CommandParameter="{x:Bind AgentId}"
                                                        Visibility="{x:Bind IsSelected, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                    <StackPanel Orientation="Horizontal"
                                                                Spacing="8">
                                                        <FontIcon Glyph="&#xE73E;"
                                                                  FontSize="{ThemeResource FontSize_Base}"/>
                                                        <TextBlock Text="Select Shop"/>
                                                    </StackPanel>
                                                </Button>

                                                <!-- Selected Badge -->
                                                <Border Grid.Row="0"
                                                        Grid.Column="3"
                                                        Padding="12,6"
                                                        Background="{ThemeResource SuccessGreenBrush}"
                                                        CornerRadius="8"
                                                        Visibility="{x:Bind IsSelected, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <StackPanel Orientation="Horizontal"
                                                                Spacing="6">
                                                        <FontIcon Glyph="&#xE73E;"
                                                                  FontSize="{ThemeResource FontSize_Base}"
                                                                  Foreground="{ThemeResource WhiteBrush}"/>
                                                        <TextBlock Text="Selected"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{ThemeResource WhiteBrush}"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- Subtotal / Tax / Total Summary (Bottom Right) -->
                                                <StackPanel Grid.Row="1"
                                                            Grid.Column="1"
                                                            Grid.ColumnSpan="3"
                                                            Spacing="4"
                                                            Margin="0,8,0,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Bottom">
                                                    <TextBlock FontSize="{ThemeResource FontSize_SM}"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               TextAlignment="Right">
                                                        <Run Text="Subtotal:"/>
                                                        <Run Text="{x:Bind SubtotalFormatted, Mode=OneWay}"
                                                             FontWeight="SemiBold"
                                                             Foreground="{ThemeResource SuccessGreenBrush}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="{ThemeResource FontSize_SM}"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               TextAlignment="Right">
                                                        <Run Text="Tax:"/>
                                                        <Run Text="{x:Bind Tax, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                             FontWeight="SemiBold"
                                                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="{ThemeResource FontSize_SM}"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               TextAlignment="Right">
                                                        <Run Text="Total:"/>
                                                        <Run Text="{x:Bind Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                             FontWeight="Bold"
                                                             Foreground="{ThemeResource AccentBlueBrush}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Items List -->
                                            <ItemsRepeater ItemsSource="{x:Bind Items, Mode=OneWay}"
                                                           Margin="16">
                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:CartItemViewModel">
                                                        <Border Margin="0,0,0,12"
                                                                Padding="12"
                                                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                                CornerRadius="8"
                                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                BorderThickness="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!--  Product Image  -->
                                                                <Border Width="80"
                                                                        Height="80"
                                                                        Margin="0,0,12,0"
                                                                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                                        CornerRadius="6">
                                                                    <Image Stretch="UniformToFill">
                                                                        <Image.Source>
                                                                            <BitmapImage UriSource="{x:Bind ImageUrl}"
                                                                                         DecodePixelWidth="160"
                                                                                         DecodePixelType="Logical"/>
                                                                        </Image.Source>
                                                                    </Image>
                                                                </Border>

                                                                <!--  Product Info  -->
                                                                <StackPanel Grid.Column="1"
                                                                            VerticalAlignment="Center"
                                                                            Spacing="6">
                                                                    <TextBlock Text="{x:Bind Name}"
                                                                               FontSize="{ThemeResource FontSize_Base}"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                                    <TextBlock Text="{x:Bind Category}"
                                                                               FontSize="{ThemeResource FontSize_XS}"
                                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                                                    <!--  Quantity Controls  -->
                                                                    <StackPanel Orientation="Horizontal"
                                                                                Spacing="8"
                                                                                Margin="0,4,0,0">
                                                                        <Button Width="28"
                                                                                Height="28"
                                                                                Padding="0"
                                                                                Style="{StaticResource SecondaryButtonStyle}"
                                                                                Command="{Binding ElementName=RootPage, Path=ViewModel.DecreaseQuantityCommand}"
                                                                                CommandParameter="{x:Bind}">
                                                                            <FontIcon Glyph="&#xE738;"
                                                                                      FontSize="{ThemeResource FontSize_XS}"/>
                                                                        </Button>
                                                                        <Border Width="50"
                                                                                Padding="8,4"
                                                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                                BorderThickness="1"
                                                                                CornerRadius="6">
                                                                            <TextBlock Text="{x:Bind Quantity, Mode=OneWay}"
                                                                                       FontSize="{ThemeResource FontSize_SM}"
                                                                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                                                       TextAlignment="Center"/>
                                                                        </Border>
                                                                        <Button Width="28"
                                                                                Height="28"
                                                                                Padding="0"
                                                                                Style="{StaticResource PrimaryButtonStyle}"
                                                                                Command="{Binding ElementName=RootPage, Path=ViewModel.IncreaseQuantityCommand}"
                                                                                CommandParameter="{x:Bind}">
                                                                            <FontIcon Glyph="&#xE710;"
                                                                                      FontSize="{ThemeResource FontSize_XS}"/>
                                                                        </Button>
                                                                        <Button Margin="8,0,0,0"
                                                                                Width="28"
                                                                                Height="28"
                                                                                Padding="0"
                                                                                Style="{StaticResource IconButtonStyle}"
                                                                                Command="{Binding ElementName=RootPage, Path=ViewModel.RemoveItemCommand}"
                                                                                CommandParameter="{x:Bind}">
                                                                            <FontIcon Glyph="&#xE74D;"
                                                                                      FontSize="{ThemeResource FontSize_SM}"
                                                                                      Foreground="{ThemeResource ErrorRedBrush}"/>
                                                                        </Button>
                                                                    </StackPanel>
                                                                </StackPanel>

                                                                <!--  Price  -->
                                                                <StackPanel Grid.Column="2"
                                                                            HorizontalAlignment="Right"
                                                                            VerticalAlignment="Center"
                                                                            Spacing="4">
                                                                    <TextBlock Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}"
                                                                               FontSize="{ThemeResource FontSize_Base}"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                                               TextAlignment="Right"/>
                                                                    <TextBlock Text="each"
                                                                               FontSize="{ThemeResource FontSize_XS}"
                                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                               TextAlignment="Right"/>
                                                                    <TextBlock Text="{x:Bind Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                                               FontSize="{ThemeResource FontSize_LG}"
                                                                               FontWeight="Bold"
                                                                               Foreground="{ThemeResource AccentBlueBrush}"
                                                                               TextAlignment="Right"
                                                                               Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                            </ItemsRepeater>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!--  Order Summary Card  -->
                    <Border Grid.Column="1"
                            Style="{StaticResource CardWithShadowStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock
                                FontSize="{ThemeResource FontSize_XL}"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="Order Summary"/>

                            <!-- Warning when no shop selected -->
                            <InfoBar
                                IsOpen="True"
                                Severity="Informational"
                                IsClosable="False"
                                Message="Please select a shop above to see order summary"
                                Visibility="{x:Bind ViewModel.CanProceedToCheckout, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Text="Subtotal"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="{x:Bind ViewModel.Subtotal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Text="Shipping"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="{x:Bind ViewModel.ShippingFee, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Text="Tax (10%)"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="{x:Bind ViewModel.Tax, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>

                                <Border
                                    Height="1"
                                    Margin="0,8"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}"/>

                                <Grid>
                                    <TextBlock
                                        FontSize="{ThemeResource FontSize_XL}"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="Total"/>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        FontSize="{ThemeResource FontSize_2XL}"
                                        FontWeight="Bold"
                                        Foreground="{ThemeResource AccentBlueBrush}"
                                        Text="{x:Bind ViewModel.Total, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"/>
                                </Grid>
                            </StackPanel>

                            <buttons:IconButton
                                Margin="0,16,0,0"
                                HorizontalAlignment="Center"
                                Variant="Filled"
                                IconGlyph="&#xE8A1;"
                                Text="Proceed to Checkout"
                                Command="{x:Bind ViewModel.ProceedToCheckoutCommand}"
                                IsEnabled="{x:Bind ViewModel.CanProceedToCheckout, Mode=OneWay}"
                                ToolTipService.ToolTip="Select a shop to continue"/>

                            <HyperlinkButton
                                HorizontalAlignment="Center"
                                Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                                Content="Continue Shopping"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
