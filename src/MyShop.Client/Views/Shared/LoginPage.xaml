<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shared.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:MyShop.Client.Views.Components"
    xmlns:controls="using:MyShop.Client.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.Shared"
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition x:Name="FormColumn"
                    Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--  Left Side: Branding with Mountain Background  -->
        <Grid
            x:Name="BrandingPanel"
            Grid.Column="0"
            Grid.ColumnSpan="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/login-background.jpg"
                        Stretch="UniformToFill"/>
            </Grid.Background>

            <!--  Dark overlay for better text contrast  -->
            <Border Background="#66000000"/>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="{StaticResource Gap_LG}">
                <Image
                    Width="120"
                    Height="120"
                    AutomationProperties.Name="MyShop2025 Logo"
                    Source="/Assets/Image/logo.png"
                    Stretch="Uniform"/>

                <TextBlock
                    HorizontalAlignment="Center"
                    AutomationProperties.HeadingLevel="Level1"
                    Foreground="White"
                    Style="{StaticResource DisplayHeadingStyle}"
                    Text="MyShop2025"/>

                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Opacity="0.9"
                    Style="{StaticResource BodyLargeStyle}"
                    Text="Modern Shop Management System"/>


            </StackPanel>
        </Grid>

        <!--  Right Side: Login Form  -->
        <Grid Grid.Column="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <!--  Mock Mode Banner  -->
            <InfoBar
                x:Name="MockModeBanner"
                Title="ðŸŽ­ Demo Mode"
                Margin="24,24,24,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                IsClosable="False"
                IsOpen="False"
                Message="Using mock data. Try: admin/admin123, salesagent/sales123, or customer/customer123"
                Severity="Informational"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel
                    MaxWidth="400"
                    Padding="{StaticResource Padding_3XL}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="{StaticResource Gap_LG}">

                    <!--  Header  -->
                    <StackPanel Margin="0,0,0,16"
                            Spacing="{StaticResource Gap_SM}">
                        <TextBlock
                            AutomationProperties.HeadingLevel="Level1"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Style="{StaticResource Heading1Style}"
                            Text="Welcome back!"/>

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource SecondaryTextStyle}"
                            Text="Enter your credentials to access your account"
                            TextWrapping="Wrap"/>
                    </StackPanel>

                    <!--  Username/Email Input  -->
                    <StackPanel Spacing="{StaticResource Gap_SM}">
                        <TextBlock
                            AutomationProperties.LabeledBy="{Binding ElementName=UsernameTextBox}"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Style="{StaticResource InputLabelStyle}">
                            <Run Text="Username or Email"/>
                            <Run Foreground="{StaticResource ErrorRedBrush}"
                                    Text="*"/>
                        </TextBlock>

                        <TextBox
                            x:Name="UsernameTextBox"
                            AutomationProperties.HelpText="Enter your username or email address"
                            AutomationProperties.IsRequiredForForm="True"
                            AutomationProperties.Name="Username or Email"
                            IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                            KeyDown="Input_KeyDown"
                            PlaceholderText="Enter your username or email"
                            Style="{StaticResource BaseInputStyle}"
                            Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock
                            AutomationProperties.LiveSetting="Assertive"
                            Style="{StaticResource ValidationErrorStyle}"
                            Text="{x:Bind ViewModel.UsernameError, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.UsernameError, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                            <TextBlock.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-10"/>
                                </TransitionCollection>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>

                    <!--  Password Input  -->
                    <StackPanel Spacing="{StaticResource Gap_SM}">
                        <TextBlock Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Style="{StaticResource InputLabelStyle}">
                            <Run Text="Password"/>
                            <Run Foreground="{StaticResource ErrorRedBrush}"
                                    Text="*"/>
                        </TextBlock>

                        <controls:PasswordInputControl
                            x:Name="PasswordInput"
                            IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                            KeyDown="Input_KeyDown"
                            Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                            PlaceholderText="Enter your password"/>

                        <TextBlock
                            AutomationProperties.LiveSetting="Assertive"
                            Style="{StaticResource ValidationErrorStyle}"
                            Text="{x:Bind ViewModel.PasswordError, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.PasswordError, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                            <TextBlock.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-10"/>
                                </TransitionCollection>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>

                    <!--  Remember Me & Forgot Password  -->
                    <Grid Margin="0,4,0,0">
                        <CheckBox
                            HorizontalAlignment="Left"
                            AutomationProperties.Name="Remember me checkbox"
                            Content="Remember me"
                            IsChecked="{x:Bind ViewModel.IsRememberMe, Mode=TwoWay}"
                            IsTabStop="False"/>

                        <HyperlinkButton
                            HorizontalAlignment="Right"
                            AutomationProperties.Name="Forgot password link"
                            Command="{x:Bind ViewModel.ForgotPasswordCommand}"
                            Content="Forgot password?"
                            Style="{StaticResource LinkButtonStyle}"
                            IsTabStop="False"/>
                    </Grid>

                    <!--  Error Message  -->
                    <TextBlock
                        x:Name="ErrorMessageText"
                        MaxWidth="340"
                        AutomationProperties.LiveSetting="Assertive"
                        Style="{StaticResource ValidationErrorStyle}"
                        Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                        TextAlignment="Center"
                        Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                        <TextBlock.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition/>
                            </TransitionCollection>
                        </TextBlock.Transitions>
                    </TextBlock>

                    <!--  Login Button  -->
                    <Button
                        Margin="0,8,0,0"
                        AutomationProperties.HelpText="Click to sign in with your credentials"
                        AutomationProperties.Name="Sign in button, press Alt+S"
                        AccessKey="S"
                        Command="{x:Bind ViewModel.AttemptLoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        ToolTipService.ToolTip="Sign in to your MyShop account">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="{StaticResource Gap_SM}">
                            <ProgressRing
                                Width="20"
                                Height="20"
                                Foreground="White"
                                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="{x:Bind ViewModel.LoginButtonText, Mode=OneWay}"/>
                        </StackPanel>
                    </Button>

                    <!--  Divider  -->
                    <Grid Margin="0,16,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="0"
                            Height="1"
                            VerticalAlignment="Center"
                            Background="{ThemeResource TextFillColorTertiaryBrush}"
                            IsHitTestVisible="False" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="16,0"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="OR"/>
                        <Border
                            Grid.Column="2"
                            Height="1"
                            VerticalAlignment="Center"
                            Background="{ThemeResource TextFillColorTertiaryBrush}"
                            IsHitTestVisible="False" />
                    </Grid>

                    <!--  Google Login Button  -->
                    <Button
                        AutomationProperties.Name="Sign in with Google"
                        Command="{x:Bind ViewModel.GoogleLoginCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        ToolTipService.ToolTip="Sign in using your Google account">
                        <StackPanel Orientation="Horizontal"
                                Spacing="{StaticResource Gap_MD}">
                            <Image
                                Width="20"
                                Height="20"
                                AutomationProperties.Name="Google logo"
                                Source="/Assets/Google.png"/>
                            <TextBlock VerticalAlignment="Center"
                                    Text="Sign in with Google"/>
                        </StackPanel>
                    </Button>

                    <!--  Register Link  -->
                    <StackPanel
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        Spacing="{StaticResource Gap_SM}">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="6">
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource SecondaryTextStyle}"
                                Text="Don't have an account?"/>

                            <HyperlinkButton
                                x:Name="RegisterButton"
                                AutomationProperties.Name="Register for new account"
                                Command="{x:Bind ViewModel.NavigateToRegisterCommand}"
                                Content="Register here"
                                Style="{StaticResource LinkButtonStyle}"/>
                        </StackPanel>

                        <TextBlock
                            x:Name="RegisterDisabledText"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource WarningAmberBrush}"
                            Style="{StaticResource CaptionStyle}"
                            Text="âš ï¸ Registration disabled in Mock mode"
                            Visibility="Collapsed"/>
                    </StackPanel>

                    <!--  Server Config Link  -->
                    <HyperlinkButton
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        AutomationProperties.Name="Configure server settings"
                        Command="{x:Bind ViewModel.ConfigureServerCommand}"
                        Content="âš™ï¸ Configure Server"
                        Style="{StaticResource LinkButtonStyle}"
                        IsTabStop="False"/>


                </StackPanel>
            </ScrollViewer>

            <!--  Loading Overlay (declared last for proper z-order)  -->
            <components:LoadingOverlay IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                    Message="Signing in..."/>
        </Grid>
        <!--  Visual State Manager for Responsive Design  -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowSizeStates">
                <!--  Wide: Show branding + form  -->
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1100"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="BrandingPanel.Visibility"
                                Value="Visible"/>
                        <Setter Target="FormColumn.Width"
                                Value="1*"/>
                    </VisualState.Setters>
                </VisualState>

                <!--  Narrow: Hide branding, expand form  -->
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="BrandingPanel.Visibility"
                                Value="Collapsed"/>
                        <Setter Target="FormColumn.Width"
                                Value="*"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
