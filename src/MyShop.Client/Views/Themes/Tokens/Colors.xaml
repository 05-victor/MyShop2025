<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================================== -->
    <!-- MYSHOP2025 DESIGN SYSTEM - Raw Color Values                   -->
    <!-- ============================================================== -->
    <!-- SINGLE SOURCE OF TRUTH for all color definitions              -->
    <!-- These are the ONLY raw colors in the system                   -->
    <!-- Brushes.xaml maps these to semantic tokens                    -->
    <!-- LightTheme/DarkTheme override semantic tokens                 -->
    <!-- ============================================================== -->

    <!-- ============================================= -->
    <!-- PRIMARY COLORS                               -->
    <!-- ============================================= -->
    
    <Color x:Key="NavyPrimaryColor">#1A4D8F</Color>
    <Color x:Key="NavyPrimaryHoverColor">#245FAE</Color>
    <Color x:Key="NavyPrimaryPressedColor">#154073</Color>
    <Color x:Key="AccentBlueColor">#00AEEF</Color>
    <Color x:Key="SecondaryBlueColor">#2563EB</Color>
    <Color x:Key="DarkBlueColor">#1E40AF</Color>

    <!-- ============================================= -->
    <!-- STATUS COLORS                                -->
    <!-- ============================================= -->
    
    <!-- Success (Green) -->
    <Color x:Key="SuccessGreenColor">#10B981</Color>
    <Color x:Key="SuccessGreenLightColor">#D1FAE5</Color>
    <Color x:Key="SuccessGreen50Color">#ECFDF5</Color>
    <Color x:Key="SuccessGreenDarkColor">#059669</Color>
    <Color x:Key="SuccessGreenPressedColor">#047857</Color>
    
    <!-- Warning (Amber/Orange) -->
    <Color x:Key="WarningAmberColor">#F59E0B</Color>
    <Color x:Key="WarningAmberLightColor">#FEF3C7</Color>
    <Color x:Key="WarningAmber50Color">#FFFBEB</Color>
    <Color x:Key="WarningAmberDarkColor">#D97706</Color>
    
    <!-- Error (Red) -->
    <Color x:Key="ErrorRedColor">#DC2626</Color>
    <Color x:Key="ErrorRedLightColor">#FEE2E2</Color>
    <Color x:Key="ErrorRed50Color">#FEF2F2</Color>
    <Color x:Key="ErrorRedDarkColor">#B91C1C</Color>
    <Color x:Key="ErrorRedPressedColor">#991B1B</Color>
    
    <!-- Info (Blue) -->
    <Color x:Key="InfoBlueColor">#2563EB</Color>
    <Color x:Key="InfoBlueLightColor">#DBEAFE</Color>
    <Color x:Key="InfoBlue50Color">#EFF6FF</Color>
    <Color x:Key="InfoBlueDarkColor">#1D4ED8</Color>
    
    <!-- Purple -->
    <Color x:Key="PurpleColor">#8B5CF6</Color>
    <Color x:Key="PurpleLightColor">#EDE9FE</Color>
    <Color x:Key="Purple50Color">#F5F3FF</Color>
    <Color x:Key="PurpleDarkColor">#7C3AED</Color>

    <!-- ============================================= -->
    <!-- NEUTRAL COLORS (Gray Scale)                  -->
    <!-- ============================================= -->
    
    <Color x:Key="Gray900Color">#111827</Color>
    <Color x:Key="Gray800Color">#1F2937</Color>
    <Color x:Key="Gray700Color">#374151</Color>
    <Color x:Key="Gray600Color">#6B7280</Color>
    <Color x:Key="Gray500Color">#9CA3AF</Color>
    <Color x:Key="Gray400Color">#D1D5DB</Color>
    <Color x:Key="Gray300Color">#E5E7EB</Color>
    <Color x:Key="Gray200Color">#F3F4F6</Color>
    <Color x:Key="Gray100Color">#F9FAFB</Color>
    <Color x:Key="Gray50Color">#F8FAFC</Color>

    <!-- ============================================= -->
    <!-- DARK THEME COLORS (Slate Scale)              -->
    <!-- ============================================= -->
    
    <Color x:Key="Slate950Color">#020617</Color>
    <Color x:Key="Slate900Color">#0F172A</Color>
    <Color x:Key="Slate800Color">#1E293B</Color>
    <Color x:Key="Slate700Color">#334155</Color>
    <Color x:Key="Slate600Color">#475569</Color>
    <Color x:Key="Slate500Color">#64748B</Color>
    <Color x:Key="Slate400Color">#94A3B8</Color>
    <Color x:Key="Slate300Color">#CBD5E1</Color>
    <Color x:Key="Slate200Color">#E2E8F0</Color>
    <Color x:Key="Slate100Color">#F1F5F9</Color>

    <!-- ============================================= -->
    <!-- BASE COLORS                                  -->
    <!-- ============================================= -->
    
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="BlackColor">#000000</Color>

    <!-- ============================================= -->
    <!-- ADMIN SHELL COLORS (Dark Navy)               -->
    <!-- ============================================= -->
    
    <Color x:Key="AdminNavDarkColor">#1F2937</Color>
    <Color x:Key="AdminNavSelectedColor">#3B82F6</Color>
    <Color x:Key="AdminNavHoverColor">#60A5FA</Color>
    
    <!-- ============================================= -->
    <!-- AGENT SHELL COLORS (Dark Slate)              -->
    <!-- ============================================= -->
    
    <Color x:Key="AgentNavDarkColor">#1E293B</Color>
    <Color x:Key="AgentNavSelectedColor">#0EA5E9</Color>
    <Color x:Key="AgentNavHoverColor">#22D3EE</Color>

</ResourceDictionary>
