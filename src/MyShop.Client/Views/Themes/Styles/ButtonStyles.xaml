    <!-- ============================================= -->
    <!-- ACCENT BUTTON (Alias for compatibility)      -->
    <!-- ============================================= -->

    <Style x:Key="AccentButtonStyle"
            TargetType="Button"
            BasedOn="{StaticResource PrimaryButtonStyle}"/>

    <!-- ============================================= -->
    <!-- LEGACY ALIASES (For backward compatibility)  -->
    <!-- These point to new standardized styles       -->
    <!-- ============================================= -->

    <!-- SmallSuccessButtonStyle → SuccessButtonSmallStyle -->
    <Style x:Key="SmallSuccessButtonStyle"
            TargetType="Button"
            BasedOn="{StaticResource SuccessButtonSmallStyle}"/>

    <!-- SmallDangerButtonStyle → DangerButtonSmallStyle -->
    <Style x:Key="SmallDangerButtonStyle"
