<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="using:MyShop.Client.Common.Converters">

    <!-- ============================================= -->
    <!-- VALUE CONVERTERS                             -->
    <!-- Reusable converters for XAML data binding    -->
    <!-- ============================================= -->
    
    <!-- Boolean Converters -->
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    <converters:BoolToButtonBackgroundConverter x:Key="BoolToButtonBackgroundConverter"/>
    <converters:BoolToButtonForegroundConverter x:Key="BoolToButtonForegroundConverter"/>
    
    <!-- Null/Empty Converters -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
    
    <!-- Count/Collection Converters -->
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    <converters:CountToVisibilityConverter x:Key="InverseCountToVisibilityConverter" IsInverted="True"/>
    
    <!-- String Converters -->
    <converters:StringFormatConverter x:Key="StringFormatConverter"/>
    <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
    
    <!-- Currency/Number Converters -->
    <converters:CurrencyConverter x:Key="CurrencyConverter"/>
    
    <!-- Password Converters -->
    <converters:PasswordStrengthToColorConverter x:Key="PasswordStrengthToColorConverter"/>
    
    <!-- Status Badge Converters -->
    <converters:StatusToVariantConverter x:Key="StatusToVariantConverter"/>
    
    <!-- Enum Converters -->
    <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>

</ResourceDictionary>
