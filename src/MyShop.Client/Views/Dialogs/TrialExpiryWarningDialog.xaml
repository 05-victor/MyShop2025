<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="MyShop.Client.Views.Dialogs.TrialExpiryWarningDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Trial Expiring Soon"
    PrimaryButtonText="Go to Settings"
    SecondaryButtonText="Remind Me Later"
    CloseButtonText="Dismiss"
    DefaultButton="Primary"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <Grid Width="450">
        <StackPanel Spacing="{StaticResource Gap_MD}">

            <!--  Warning Header  -->
            <Border
                Padding="16"
                Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                BorderBrush="{ThemeResource SystemFillColorCautionBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <FontIcon
                        Grid.Column="0"
                        FontSize="36"
                        Foreground="{ThemeResource WarningAmberBrush}"
                        Glyph="&#xE7BA;"
                        VerticalAlignment="Center" />
                    
                    <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="Your Trial is Expiring!" />
                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap">
                            <Run Text="You have" />
                            <Run x:Name="DaysRemainingRun" FontWeight="Bold" Foreground="{ThemeResource WarningAmberBrush}" Text="1" />
                            <Run Text="day(s) remaining in your trial period." />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Consequences Section  -->
            <StackPanel Spacing="8">
                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="What happens when your trial expires?" />
                
                <StackPanel Spacing="4">
                    <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="•" />
                        <Run Text="Your admin privileges will be revoked" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="•" />
                        <Run Text="Your account will be downgraded to Customer role" />
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="•" />
                        <Run Text="You will lose access to admin features" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!--  Action Suggestion  -->
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Text="How to keep your admin access:" />
                    <StackPanel Spacing="4">
                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="1." />
                            <Run Text="Go to Settings → Trial tab" />
                        </TextBlock>
                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="2." />
                            <Run Text="Enter a new trial extension code" />
                        </TextBlock>
                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="3." />
                            <Run Text="Or upgrade to a Permanent license" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</ContentDialog>
