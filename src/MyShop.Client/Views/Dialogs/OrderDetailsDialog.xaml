<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MyShop.Client.Views.Dialogs.OrderDetailsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:badges="using:MyShop.Client.Views.Components.Badges"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:vm="using:MyShop.Client.ViewModels.Shared"
    mc:Ignorable="d"
    Title="Order Details"
    PrimaryButtonText="Close"
    DefaultButton="Primary"
    Style="{StaticResource DefaultContentDialogStyle}">

    <ContentDialog.Resources>
        <converters:StatusToVariantConverter x:Key="StatusToVariantConverter"/>
    </ContentDialog.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
            MaxHeight="700">
        <StackPanel Spacing="24"
                Padding="8">

            <!-- Order Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.OrderId, Mode=OneWay}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="{x:Bind ViewModel.FormattedOrderDate, Mode=OneWay}"
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <badges:StatusBadge Grid.Column="1"
                                    Text="{x:Bind ViewModel.Status, Mode=OneWay}"
                                    Variant="{x:Bind ViewModel.Status, Mode=OneWay, Converter={StaticResource StatusToVariantConverter}}"/>
            </Grid>

            <!-- Order Items -->
            <StackPanel>
                <TextBlock Text="Items Ordered"
                        Style="{StaticResource SectionHeaderStyle}"/>

                <!-- Changed to {Binding} for dynamic order items -->
                <ItemsControl ItemsSource="{Binding Items, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:OrderItemViewModel">
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Product Image -->
                                    <Border Width="80"
                                            Height="80"
                                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                                            CornerRadius="8"
                                            Margin="0,0,16,0">
                                        <Image Source="{x:Bind ImageUrl}"
                                               Stretch="UniformToFill"/>
                                    </Border>

                                    <!-- Product Info -->
                                    <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind ProductName}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="{x:Bind Brand}"
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Margin="0,4,0,0">
                                            <Run Text="Quantity:"/>
                                            <Run Text="{x:Bind Quantity}"
                                                    FontWeight="SemiBold"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Price -->
                                    <StackPanel Grid.Column="2"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right">
                                        <TextBlock Text="{x:Bind Price}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{ThemeResource AccentBlueBrush}"
                                                   TextAlignment="Right"/>
                                        <TextBlock Text="per item"
                                                   FontSize="11"
                                                   Foreground="{ThemeResource Gray500Brush}"
                                                   TextAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Order Summary -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Order Summary"
                            Style="{StaticResource SectionHeaderStyle}"
                            Margin="0,0,0,8"/>

                    <Grid>
                        <TextBlock Text="Subtotal"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                        <TextBlock Text="{x:Bind ViewModel.Subtotal, Mode=OneWay}"
                                   HorizontalAlignment="Right"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                   FontSize="14"/>
                    </Grid>

                    <Grid>
                        <TextBlock Text="Shipping"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                        <TextBlock Text="{x:Bind ViewModel.Shipping, Mode=OneWay}"
                                   HorizontalAlignment="Right"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                   FontSize="14"/>
                    </Grid>

                    <Grid>
                        <TextBlock Text="Tax"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                FontSize="14"/>
                        <TextBlock Text="{x:Bind ViewModel.Tax, Mode=OneWay}"
                                   HorizontalAlignment="Right"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                   FontSize="14"/>
                    </Grid>

                    <Border Height="1"
                            Background="{ThemeResource CardStrokeColorDefaultBrush}"
                            Margin="0,8"/>

                    <Grid>
                        <TextBlock Text="Total"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="{x:Bind ViewModel.Total, Mode=OneWay}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Right"
                                   Foreground="{ThemeResource AccentBlueBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</ContentDialog>
