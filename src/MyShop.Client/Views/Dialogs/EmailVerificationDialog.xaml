<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MyShop.Client.Views.Dialogs.EmailVerificationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Email Verification"
    PrimaryButtonText="Verify Code"
    SecondaryButtonText="Close"
    DefaultButton="Primary"
    PrimaryButtonClick="PrimaryButton_Click"
    SecondaryButtonClick="SecondaryButton_Click"
    Style="{StaticResource DefaultContentDialogStyle}">

    <StackPanel Spacing="16" MaxWidth="440">
        <!-- Header with Icon -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Warning Icon Circle -->
            <Border Grid.Column="0"
                    Width="48" Height="48"
                    Background="{ThemeResource WarningAmberLightBrush}"
                    CornerRadius="24"
                    Margin="0,0,16,0">
                <FontIcon Glyph="&#xE119;" 
                         FontSize="24"
                         Foreground="{ThemeResource WarningAmberBrush}"/>
            </Border>
            
            <!-- Header Text -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                <TextBlock Text="Verify Your Email Address"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="Enter the verification code sent to your email"
                          FontSize="14"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Email Info Card -->
        <Border Background="{ThemeResource InfoBlue50Brush}"
                BorderBrush="{ThemeResource AccentBlueBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0"
                         Glyph="&#xE119;"
                         FontSize="20"
                         Foreground="{ThemeResource SecondaryBlueBrush}"
                         Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="Verification email sent to:"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="{ThemeResource DarkBlueBrush}"/>
                    <TextBlock x:Name="EmailText"
                              Text="user@example.com"
                              FontSize="13"
                              FontFamily="Consolas"
                              Foreground="{ThemeResource PrimaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- OTP Input Section -->
        <StackPanel Spacing="8">
            <TextBlock Text="Enter Verification Code"
                      FontWeight="SemiBold"
                      FontSize="14"
                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            
            <TextBox x:Name="OtpInput"
                    PlaceholderText="Enter 6-digit code"
                    MaxLength="6"
                    FontSize="18"
                    TextAlignment="Center"
                    InputScope="NumericPin"
                    HorizontalAlignment="Stretch"/>
            
            <TextBlock Text="Check your email inbox (and spam folder) for the 6-digit code"
                      FontSize="12"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Resend Email Section -->
        <StackPanel Spacing="8" Margin="0,8,0,0">
            <TextBlock Text="Didn't receive the code?"
                      FontSize="13"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            
            <Button x:Name="ResendButton"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="ResendButton_Click"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon x:Name="ResendIcon"
                             Glyph="&#xE72C;"
                             FontSize="16"/>
                    <TextBlock x:Name="ResendText"
                              Text="Resend Code"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Countdown Timer -->
            <TextBlock x:Name="CountdownText"
                      Text="You can resend in 60 seconds"
                      FontSize="12"
                      Foreground="{ThemeResource WarningAmberBrush}"
                      HorizontalAlignment="Center"
                      Visibility="Collapsed"/>
            
            <!-- Success Message -->
            <Border x:Name="SuccessMessage"
                    Background="{ThemeResource SuccessGreenLightBrush}"
                    BorderBrush="{ThemeResource SuccessGreenBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <FontIcon Grid.Column="0"
                             Glyph="&#xE73E;"
                             FontSize="16"
                             Foreground="{ThemeResource SuccessGreenBrush}"
                             Margin="0,0,8,0"/>
                    
                    <TextBlock Grid.Column="1"
                              Text="Code sent! Check your inbox"
                              FontSize="13"
                              Foreground="{ThemeResource SuccessGreenDarkBrush}"
                              TextWrapping="Wrap"/>
                </Grid>
            </Border>

            <!-- Error Message -->
            <Border x:Name="ErrorMessage"
                    Background="{ThemeResource ErrorRedLightBrush}"
                    BorderBrush="{ThemeResource ErrorRedBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <FontIcon Grid.Column="0"
                             Glyph="&#xE711;"
                             FontSize="16"
                             Foreground="{ThemeResource ErrorRedBrush}"
                             Margin="0,0,8,0"/>
                    
                    <TextBlock x:Name="ErrorText"
                              Grid.Column="1"
                              Text="Invalid code. Please try again."
                              FontSize="13"
                              Foreground="{ThemeResource ErrorRedDarkBrush}"
                              TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </StackPanel>

    </StackPanel>
</ContentDialog>
