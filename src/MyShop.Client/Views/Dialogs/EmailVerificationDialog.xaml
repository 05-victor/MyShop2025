<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MyShop.Client.Views.Dialogs.EmailVerificationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Email Verification Required"
    PrimaryButtonText="I Verified"
    SecondaryButtonText="Close"
    DefaultButton="Primary"
    PrimaryButtonClick="PrimaryButton_Click"
    SecondaryButtonClick="SecondaryButton_Click">

    <StackPanel Spacing="16" MaxWidth="440">
        <!-- Header with Icon -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Warning Icon Circle -->
            <Border Grid.Column="0"
                    Width="48" Height="48"
                    Background="#FEF3C7"
                    CornerRadius="24"
                    Margin="0,0,16,0">
                <FontIcon Glyph="&#xE119;" 
                         FontSize="24"
                         Foreground="#F59E0B"/>
            </Border>
            
            <!-- Header Text -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                <TextBlock Text="Verify Your Email Address"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="#111827"/>
                <TextBlock Text="To use this feature, please verify your email first"
                          FontSize="14"
                          Foreground="#6B7280"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Email Info Card -->
        <Border Background="#EFF6FF"
                BorderBrush="#93C5FD"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <FontIcon Grid.Column="0"
                         Glyph="&#xE119;"
                         FontSize="20"
                         Foreground="#2563EB"
                         Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="Verification email sent to:"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#1E40AF"/>
                    <TextBlock x:Name="EmailText"
                              Text="user@example.com"
                              FontSize="13"
                              FontFamily="Consolas"
                              Foreground="#3B82F6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Instructions -->
        <StackPanel Spacing="8">
            <TextBlock Text="How to verify:"
                      FontWeight="SemiBold"
                      FontSize="14"
                      Foreground="#111827"/>
            
            <StackPanel Spacing="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Width="20" Height="20"
                            Background="#10B981"
                            CornerRadius="10"
                            Margin="0,0,8,0">
                        <TextBlock Text="1"
                                  FontSize="11"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1"
                              Text="Check your email inbox (and spam folder)"
                              FontSize="13"
                              Foreground="#6B7280"
                              TextWrapping="Wrap"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Width="20" Height="20"
                            Background="#10B981"
                            CornerRadius="10"
                            Margin="0,0,8,0">
                        <TextBlock Text="2"
                                  FontSize="11"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1"
                              Text="Click the verification link in the email"
                              FontSize="13"
                              Foreground="#6B7280"
                              TextWrapping="Wrap"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Width="20" Height="20"
                            Background="#10B981"
                            CornerRadius="10"
                            Margin="0,0,8,0">
                        <TextBlock Text="3"
                                  FontSize="11"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Grid.Column="1"
                              Text="Click 'I Verified' button below to check status"
                              FontSize="13"
                              Foreground="#6B7280"
                              TextWrapping="Wrap"/>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Resend Email Section -->
        <StackPanel Spacing="8" Margin="0,8,0,0">
            <TextBlock Text="Didn't receive the email?"
                      FontSize="13"
                      Foreground="#6B7280"/>
            
            <Button x:Name="ResendButton"
                    Click="ResendButton_Click"
                    Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,8"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon x:Name="ResendIcon"
                             Glyph="&#xE72C;"
                             FontSize="16"/>
                    <TextBlock x:Name="ResendText"
                              Text="Resend Email"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Countdown Timer -->
            <TextBlock x:Name="CountdownText"
                      Text="You can resend in 60 seconds"
                      FontSize="12"
                      Foreground="#F59E0B"
                      HorizontalAlignment="Center"
                      Visibility="Collapsed"/>
            
            <!-- Success Message -->
            <Border x:Name="SuccessMessage"
                    Background="#D1FAE5"
                    BorderBrush="#10B981"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <FontIcon Grid.Column="0"
                             Glyph="&#xE73E;"
                             FontSize="16"
                             Foreground="#10B981"
                             Margin="0,0,8,0"/>
                    
                    <TextBlock Grid.Column="1"
                              Text="âœ… Email sent! Check your inbox"
                              FontSize="13"
                              Foreground="#065F46"
                              TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </StackPanel>

    </StackPanel>
</ContentDialog>
