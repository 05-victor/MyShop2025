<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Charts.BarChartCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    x:Name="RootControl">

    <Border Background="#FFFFFF"
            CornerRadius="16"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            Padding="24">
        <Border.Shadow>
            <ThemeShadow/>
        </Border.Shadow>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Title, ElementName=RootControl, Mode=OneWay}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#111827"/>
                    <TextBlock Text="{Binding Subtitle, ElementName=RootControl, Mode=OneWay}"
                               FontSize="14"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"
                               Visibility="{Binding ShowSubtitle, ElementName=RootControl, Mode=OneWay}"/>
                </StackPanel>

                <!-- Menu Button -->
                <Button Grid.Column="1"
                        Width="32" Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="6"
                        Visibility="{Binding ShowMenu, ElementName=RootControl, Mode=OneWay}">
                    <Button.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                            <MenuFlyoutItem Text="Export Data" Icon="Save"/>
                            <MenuFlyoutItem Text="View Details" Icon="View"/>
                        </MenuFlyout>
                    </Button.Flyout>
                    <FontIcon Glyph="&#xE712;" FontSize="16" Foreground="#6B7280"/>
                </Button>
            </Grid>

            <!-- View Toggle (Optional - for switching between vertical/horizontal) -->
            <StackPanel Grid.Row="1"
                       Orientation="Horizontal"
                       Spacing="8"
                       Margin="0,0,0,16"
                       Visibility="{Binding ShowViewToggle, ElementName=RootControl, Mode=OneWay}">
                <ToggleButton Content="Vertical" 
                             Width="90"
                             IsChecked="True"
                             CornerRadius="8"/>
                <ToggleButton Content="Horizontal" 
                             Width="90"
                             CornerRadius="8"/>
            </StackPanel>

            <!-- Chart -->
            <lvc:CartesianChart Grid.Row="2"
                               Series="{Binding Series, ElementName=RootControl, Mode=OneWay}"
                               XAxes="{Binding XAxes, ElementName=RootControl, Mode=OneWay}"
                               YAxes="{Binding YAxes, ElementName=RootControl, Mode=OneWay}"
                               Height="{Binding ChartHeight, ElementName=RootControl, Mode=OneWay}"
                               MinHeight="280"/>
        </Grid>
    </Border>
</UserControl>
