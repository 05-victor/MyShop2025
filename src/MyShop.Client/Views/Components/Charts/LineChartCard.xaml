<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Charts.LineChartCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    mc:Ignorable="d"
    x:Name="RootControl">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="{ThemeResource CardBackgroundBrush}"
            CornerRadius="16"
            BorderBrush="{ThemeResource BorderLightBrush}"
            BorderThickness="1"
            Padding="24">
        <Border.Shadow>
            <ThemeShadow/>
        </Border.Shadow>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Title, ElementName=RootControl, Mode=OneWay}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextPrimaryBrush}"/>
                    <TextBlock Text="{Binding Subtitle, ElementName=RootControl, Mode=OneWay}"
                               FontSize="14"
                               Foreground="{ThemeResource TextMutedBrush}"
                               Margin="0,4,0,0"
                               Visibility="{Binding ShowSubtitle, ElementName=RootControl, Mode=OneWay}"/>
                </StackPanel>

                <!-- Menu Button -->
                <Button Grid.Column="1"
                        Width="32" Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="6"
                        ToolTipService.ToolTip="Chart options"
                        Visibility="{Binding ShowMenu, ElementName=RootControl, Mode=OneWay}">
                    <Button.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                            <MenuFlyoutItem Text="Refresh" Click="RefreshMenuItem_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE72C;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Copy Data" Click="CopyDataMenuItem_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8C8;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutSubItem Text="Export">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon Glyph="&#xE896;"/>
                                </MenuFlyoutSubItem.Icon>
                                <MenuFlyoutItem Text="Export as PNG" Click="ExportPngMenuItem_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xEB9F;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Export as PDF" Click="ExportPdfMenuItem_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xEA90;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Export as CSV" Click="ExportCsvMenuItem_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xF0E7;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </Button.Flyout>
                    <FontIcon Glyph="&#xE712;" FontSize="16" Foreground="{ThemeResource TextMutedBrush}"/>
                </Button>
            </Grid>

            <!-- Legend (Optional) -->
            <StackPanel Grid.Row="1"
                       Orientation="Horizontal"
                       Spacing="20"
                       Margin="0,0,0,16"
                       Visibility="{Binding ShowLegend, ElementName=RootControl, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Width="12" Height="12" 
                           Background="#3B82F6" 
                           CornerRadius="2"/>
                    <TextBlock Text="{Binding Legend1Text, ElementName=RootControl, Mode=OneWay}"
                              FontSize="13"
                              Foreground="{ThemeResource TextMutedBrush}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8"
                           Visibility="{Binding ShowLegend2, ElementName=RootControl, Mode=OneWay}">
                    <Border Width="12" Height="12" 
                           Background="#10B981" 
                           CornerRadius="2"/>
                    <TextBlock Text="{Binding Legend2Text, ElementName=RootControl, Mode=OneWay}"
                              FontSize="13"
                              Foreground="{ThemeResource TextMutedBrush}"/>
                </StackPanel>
            </StackPanel>

            <!-- Chart -->
            <lvc:CartesianChart Grid.Row="2"
                               x:Name="ChartControl"
                               Series="{Binding Series, ElementName=RootControl, Mode=OneWay}"
                               XAxes="{Binding XAxes, ElementName=RootControl, Mode=OneWay}"
                               YAxes="{Binding YAxes, ElementName=RootControl, Mode=OneWay}"
                               Height="{Binding ChartHeight, ElementName=RootControl, Mode=OneWay}"
                               MinHeight="280"
                               Background="{ThemeResource CardBackgroundBrush}"
                               Visibility="{x:Bind IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

            <!-- Loading State -->
            <Grid Grid.Row="2"
                  Visibility="{x:Bind IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                  Background="{ThemeResource CardBackgroundBrush}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <ProgressRing IsActive="True" Width="40" Height="40"/>
                    <TextBlock Text="Loading chart data..." 
                              FontSize="14"
                              Foreground="{ThemeResource TextMutedBrush}"
                              AutomationProperties.LiveSetting="Assertive"/>
                </StackPanel>
            </Grid>

            <!-- Empty State -->
            <Grid Grid.Row="2"
                  Visibility="{x:Bind IsEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                  Background="{ThemeResource CardBackgroundBrush}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <FontIcon Glyph="&#xE7C3;" FontSize="48" Foreground="{ThemeResource TextMutedBrush}"/>
                    <TextBlock Text="No data available" 
                              FontSize="16" FontWeight="SemiBold"
                              Foreground="{ThemeResource TextPrimaryBrush}"/>
                    <TextBlock Text="Try adjusting your filters or date range" 
                              FontSize="14"
                              Foreground="{ThemeResource TextMutedBrush}"/>
                </StackPanel>
            </Grid>

            <!-- Error State -->
            <Grid Grid.Row="2"
                  Visibility="{x:Bind HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                  Background="{ThemeResource CardBackgroundBrush}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <FontIcon Glyph="&#xE783;" FontSize="48" Foreground="#EF4444"/>
                    <TextBlock Text="Failed to load chart" 
                              FontSize="16" FontWeight="SemiBold"
                              Foreground="{ThemeResource TextPrimaryBrush}"/>
                    <TextBlock Text="{x:Bind ErrorMessage, Mode=OneWay}" 
                              FontSize="14"
                              Foreground="{ThemeResource TextMutedBrush}"/>
                    <Button Content="Retry" Click="RetryButton_Click" 
                           AutomationProperties.Name="Retry loading chart"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
