<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Forms.PasswordStrengthMeter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
    PasswordStrengthMeter Component
    ================================
    Shows password strength with visual indicator.
    
    Usage:
    <forms:PasswordStrengthMeter Password="{x:Bind PasswordBox.Password, Mode=OneWay}"/>
    -->

    <StackPanel Spacing="4">
        <!-- Strength Bars -->
        <Grid ColumnSpacing="4" Height="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border x:Name="Bar1" Grid.Column="0" CornerRadius="2" Background="{ThemeResource Gray300Brush}"/>
            <Border x:Name="Bar2" Grid.Column="1" CornerRadius="2" Background="{ThemeResource Gray300Brush}"/>
            <Border x:Name="Bar3" Grid.Column="2" CornerRadius="2" Background="{ThemeResource Gray300Brush}"/>
            <Border x:Name="Bar4" Grid.Column="3" CornerRadius="2" Background="{ThemeResource Gray300Brush}"/>
        </Grid>
        
        <!-- Strength Text -->
        <TextBlock x:Name="StrengthText"
                   FontSize="12"
                   Foreground="{ThemeResource TextMutedBrush}"
                   AutomationProperties.LiveSetting="Polite"/>
    </StackPanel>
</UserControl>
