<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Forms.CharacterCounter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
    CharacterCounter Component
    ===========================
    Shows character count with optional max limit.
    
    Usage:
    <forms:CharacterCounter Text="{x:Bind TextBox.Text, Mode=OneWay}" MaxLength="100"/>
    -->

    <TextBlock x:Name="CounterText"
               FontSize="12"
               Foreground="{ThemeResource TextMutedBrush}"
               HorizontalAlignment="Right"
               AutomationProperties.LiveSetting="Polite"/>
</UserControl>
