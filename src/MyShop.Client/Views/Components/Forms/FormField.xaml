<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Forms.FormField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
    FormField Component
    ===================
    A reusable form field with label, input slot, help text, and error message.
    
    Usage:
    <forms:FormField Label="Email" IsRequired="True" ErrorMessage="{x:Bind ViewModel.EmailError}">
        <forms:FormField.InputContent>
            <TextBox Text="{x:Bind ViewModel.Email, Mode=TwoWay}" PlaceholderText="Enter email"/>
        </forms:FormField.InputContent>
    </forms:FormField>
    -->

    <StackPanel Spacing="6">
        <!-- Label Row -->
        <StackPanel Orientation="Horizontal" Spacing="4">
            <TextBlock Text="{Binding Label, ElementName=RootControl, Mode=OneWay}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
            
            <!-- Required Indicator -->
            <TextBlock Text="*"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{ThemeResource ErrorRedBrush}"
                       Visibility="{Binding IsRequired, ElementName=RootControl, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Input Content Slot -->
        <ContentPresenter Content="{Binding InputContent, ElementName=RootControl, Mode=OneWay}"
                         HorizontalAlignment="Stretch"/>

        <!-- Help Text -->
        <TextBlock Text="{Binding HelpText, ElementName=RootControl, Mode=OneWay}"
                   FontSize="12"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   TextWrapping="Wrap"
                   Visibility="{Binding HelpText, ElementName=RootControl, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>

        <!-- Error Message -->
        <StackPanel Orientation="Horizontal" 
                   Spacing="6"
                   Visibility="{Binding ErrorMessage, ElementName=RootControl, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}">
            <FontIcon Glyph="&#xE7BA;"
                     FontSize="12"
                     Foreground="{ThemeResource ErrorRedBrush}"/>
            <TextBlock Text="{Binding ErrorMessage, ElementName=RootControl, Mode=OneWay}"
                       FontSize="12"
                       Foreground="{ThemeResource ErrorRedBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </StackPanel>
</UserControl>
