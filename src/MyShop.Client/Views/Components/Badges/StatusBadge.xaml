<UserControl x:Class="MyShop.Client.Views.Components.Badges.StatusBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="RootControl">

    <!-- Dynamic ResourceDictionary to hold theme-aware brushes -->
    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Default brushes - overridden by VariantChanged -->
            <SolidColorBrush x:Key="DynamicBadgeBgBrush" Color="#F0F0F0"/>
            <SolidColorBrush x:Key="DynamicBadgeFgBrush" Color="#333333"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border x:Name="BadgeContainer"
            CornerRadius="4"
            Padding="8,4"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="{ThemeResource DynamicBadgeBgBrush}"
            AutomationProperties.Name="{Binding Text, ElementName=RootControl, Mode=OneWay}"
            AutomationProperties.HelpText="Status badge"
            IsTabStop="False">
        
        <StackPanel Orientation="Horizontal" Spacing="4">
            <!-- Optional Icon -->
            <FontIcon x:Name="BadgeIcon"
                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                      FontSize="12"
                      Foreground="{ThemeResource DynamicBadgeFgBrush}"
                      Visibility="Collapsed"/>
            
            <!-- Text -->
            <TextBlock x:Name="BadgeText"
                       Text="{Binding Text, ElementName=RootControl, Mode=OneWay}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="{ThemeResource DynamicBadgeFgBrush}"
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
