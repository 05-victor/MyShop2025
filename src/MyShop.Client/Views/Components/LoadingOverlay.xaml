<UserControl x:Class="MyShop.Client.Views.Components.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <!-- Note: Converters are already merged in App.xaml -> Generic.xaml -->
    <!-- No need to merge them again here to avoid circular dependency -->

    <Grid Background="{ThemeResource SystemControlAcrylicWindowMediumHighBrush}"
          Visibility="{x:Bind IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
        
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">
            
            <!-- Loading Spinner -->
            <ProgressRing Width="48"
                          Height="48"
                          IsActive="{x:Bind IsLoading, Mode=OneWay}"
                          Foreground="{StaticResource SecondaryBlueBrush}"/>
            
            <!-- Loading Message -->
            <TextBlock Text="{x:Bind Message, Mode=OneWay}"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       Visibility="{x:Bind Message, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
            
        </StackPanel>
    </Grid>
</UserControl>
