<UserControl x:Class="MyShop.Client.Views.Components.EmptyStates.EmptyStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="24"
                    MaxWidth="400">
            
            <!-- Icon -->
            <FontIcon Glyph="{x:Bind IconGlyph, Mode=OneWay}"
                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                      FontSize="72"
                      Foreground="{StaticResource TextSecondaryBrush}"/>
            
            <!-- Title -->
            <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
            
            <!-- Description -->
            <TextBlock Text="{x:Bind Description, Mode=OneWay}"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="{x:Bind Description, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
            
            <!-- Action Button -->
            <Button Content="{x:Bind ActionText, Mode=OneWay}"
                    Command="{x:Bind ActionCommand, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    Visibility="{x:Bind ActionText, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
            
        </StackPanel>
    </Grid>
</UserControl>
