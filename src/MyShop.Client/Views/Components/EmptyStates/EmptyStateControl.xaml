<UserControl x:Class="MyShop.Client.Views.Components.EmptyStates.EmptyStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             x:Name="RootControl">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="24"
                    MaxWidth="400">
            
            <!-- Icon -->
            <FontIcon Glyph="{Binding IconGlyph, ElementName=RootControl, Mode=OneWay}"
                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                      FontSize="72"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            
            <!-- Title -->
            <TextBlock Text="{Binding Title, ElementName=RootControl, Mode=OneWay}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
            
            <!-- Description -->
            <TextBlock Text="{Binding Description, ElementName=RootControl, Mode=OneWay}"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Visibility="{Binding Description, ElementName=RootControl, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
            
            <!-- Action Button -->
            <buttons:IconButton
                    Text="{Binding ActionText, ElementName=RootControl, Mode=OneWay}"
                    Command="{Binding ActionCommand, ElementName=RootControl, Mode=OneWay}"
                    Variant="Filled"
                    IconGlyph="&#xE710;"
                    HorizontalAlignment="Center"
                    Visibility="{Binding ActionText, ElementName=RootControl, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
            
        </StackPanel>
    </Grid>
</UserControl>
