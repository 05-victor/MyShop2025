<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Navigation.QuickActionsMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
    QuickActionsMenu Component
    ==========================
    A command palette style menu for quick navigation.
    Triggered by Ctrl+K.
    
    Usage:
    <nav:QuickActionsMenu x:Name="QuickActions"/>
    -->

    <UserControl.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Duration="0:0:0.15" From="0" To="1" 
                           Storyboard.TargetName="OverlayGrid"
                           Storyboard.TargetProperty="Opacity"/>
        </Storyboard>
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Duration="0:0:0.1" From="1" To="0" 
                           Storyboard.TargetName="OverlayGrid"
                           Storyboard.TargetProperty="Opacity"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="OverlayGrid" 
          Background="#80000000" 
          Visibility="Collapsed"
          Opacity="0">
        <!-- Click outside to close -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Background="Transparent" Content="" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Click="CloseOverlay_Click"/>
        <Button Grid.Row="2" Background="Transparent" Content="" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Click="CloseOverlay_Click"/>
        
        <!-- Menu Card -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundBrush}"
                CornerRadius="12"
                MaxWidth="600"
                MinWidth="400"
                Padding="8"
                HorizontalAlignment="Center">
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>
            
            <StackPanel Spacing="8">
                <!-- Search Box -->
                <AutoSuggestBox x:Name="SearchBox"
                               PlaceholderText="Type a command or search..."
                               QueryIcon="Find"
                               Height="40"
                               CornerRadius="8"
                               TextChanged="SearchBox_TextChanged"
                               QuerySubmitted="SearchBox_QuerySubmitted"/>
                
                <!-- Quick Actions List -->
                <ListView x:Name="ActionsList"
                          MaxHeight="300"
                          SelectionMode="Single"
                          IsItemClickEnabled="True"
                          ItemClick="ActionsList_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8,6" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <FontIcon Grid.Column="0" 
                                         Glyph="{Binding IconGlyph}" 
                                         FontSize="16"
                                         Foreground="{ThemeResource TextMutedBrush}"/>
                                
                                <TextBlock Grid.Column="1" 
                                          Text="{Binding Title}" 
                                          FontSize="14"
                                          VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2" 
                                          Text="{Binding Shortcut}" 
                                          FontSize="12"
                                          Foreground="{ThemeResource TextMutedBrush}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <!-- Footer Hint -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Spacing="16"
                           Padding="8,4">
                    <TextBlock Text="↵ to select" FontSize="11" Foreground="{ThemeResource TextMutedBrush}"/>
                    <TextBlock Text="↑↓ to navigate" FontSize="11" Foreground="{ThemeResource TextMutedBrush}"/>
                    <TextBlock Text="Esc to close" FontSize="11" Foreground="{ThemeResource TextMutedBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
