<UserControl x:Class="MyShop.Client.Views.Components.Skeletons.SkeletonLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Pulse Animation for Skeleton -->
        <Storyboard x:Name="PulseStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SkeletonRectangle"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5"
                           To="1.0"
                           Duration="0:0:1.5"
                           AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Rectangle x:Name="SkeletonRectangle"
                   Fill="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                   RadiusX="4"
                   RadiusY="4"
                   Opacity="0.5"/>
    </Grid>
</UserControl>
