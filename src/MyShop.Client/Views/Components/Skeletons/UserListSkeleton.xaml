<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Skeletons.UserListSkeleton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skeletons="using:MyShop.Client.Views.Components.Skeletons"
    mc:Ignorable="d">

    <StackPanel Spacing="8">
        <!-- Skeleton Row 1 -->
        <Border
            Background="{ThemeResource CardBackgroundBrush}"
            CornerRadius="8"
            BorderBrush="{ThemeResource BorderLightBrush}"
            BorderThickness="1"
            Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <skeletons:SkeletonLoader Grid.Column="0" Width="40" Height="40" />
                
                <!-- Name -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Spacing="4">
                    <skeletons:SkeletonLoader Width="140" Height="16" />
                    <skeletons:SkeletonLoader Width="100" Height="12" />
                </StackPanel>
                
                <!-- Email -->
                <skeletons:SkeletonLoader Grid.Column="2" Width="180" Height="14" />
                
                <!-- Phone -->
                <skeletons:SkeletonLoader Grid.Column="3" Width="120" Height="14" />
                
                <!-- Role Badge -->
                <skeletons:SkeletonLoader Grid.Column="4" Width="80" Height="24" />
                
                <!-- Status Badge -->
                <skeletons:SkeletonLoader Grid.Column="5" Width="70" Height="24" />
            </Grid>
        </Border>

        <!-- Skeleton Row 2 -->
        <Border
            Background="{ThemeResource CardBackgroundBrush}"
            CornerRadius="8"
            BorderBrush="{ThemeResource BorderLightBrush}"
            BorderThickness="1"
            Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <skeletons:SkeletonLoader Grid.Column="0" Width="40" Height="40" />
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Spacing="4">
                    <skeletons:SkeletonLoader Width="160" Height="16" />
                    <skeletons:SkeletonLoader Width="110" Height="12" />
                </StackPanel>
                <skeletons:SkeletonLoader Grid.Column="2" Width="200" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="3" Width="130" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="4" Width="80" Height="24" />
                <skeletons:SkeletonLoader Grid.Column="5" Width="70" Height="24" />
            </Grid>
        </Border>

        <!-- Skeleton Row 3 -->
        <Border
            Background="{ThemeResource CardBackgroundBrush}"
            CornerRadius="8"
            BorderBrush="{ThemeResource BorderLightBrush}"
            BorderThickness="1"
            Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <skeletons:SkeletonLoader Grid.Column="0" Width="40" Height="40" />
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Spacing="4">
                    <skeletons:SkeletonLoader Width="130" Height="16" />
                    <skeletons:SkeletonLoader Width="90" Height="12" />
                </StackPanel>
                <skeletons:SkeletonLoader Grid.Column="2" Width="190" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="3" Width="115" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="4" Width="80" Height="24" />
                <skeletons:SkeletonLoader Grid.Column="5" Width="70" Height="24" />
            </Grid>
        </Border>

        <!-- Skeleton Row 4 -->
        <Border
            Background="{ThemeResource CardBackgroundBrush}"
            CornerRadius="8"
            BorderBrush="{ThemeResource BorderLightBrush}"
            BorderThickness="1"
            Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <skeletons:SkeletonLoader Grid.Column="0" Width="40" Height="40" />
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Spacing="4">
                    <skeletons:SkeletonLoader Width="150" Height="16" />
                    <skeletons:SkeletonLoader Width="105" Height="12" />
                </StackPanel>
                <skeletons:SkeletonLoader Grid.Column="2" Width="195" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="3" Width="125" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="4" Width="80" Height="24" />
                <skeletons:SkeletonLoader Grid.Column="5" Width="70" Height="24" />
            </Grid>
        </Border>

        <!-- Skeleton Row 5 -->
        <Border
            Background="{ThemeResource CardBackgroundBrush}"
            CornerRadius="8"
            BorderBrush="{ThemeResource BorderLightBrush}"
            BorderThickness="1"
            Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <skeletons:SkeletonLoader Grid.Column="0" Width="40" Height="40" />
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Spacing="4">
                    <skeletons:SkeletonLoader Width="145" Height="16" />
                    <skeletons:SkeletonLoader Width="95" Height="12" />
                </StackPanel>
                <skeletons:SkeletonLoader Grid.Column="2" Width="185" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="3" Width="120" Height="14" />
                <skeletons:SkeletonLoader Grid.Column="4" Width="80" Height="24" />
                <skeletons:SkeletonLoader Grid.Column="5" Width="70" Height="24" />
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
