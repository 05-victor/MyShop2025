<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.ErrorInfoBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <InfoBar
        x:Name="InfoBarControl"
        IsOpen="{x:Bind IsOpen, Mode=TwoWay}"
        Severity="{x:Bind Severity, Mode=OneWay}"
        Title="{x:Bind Title, Mode=OneWay}"
        Message="{x:Bind Message, Mode=OneWay}"
        IsIconVisible="{x:Bind ShowIcon, Mode=OneWay}"
        IsClosable="{x:Bind IsClosable, Mode=OneWay}"
        AutomationProperties.LiveSetting="Assertive"
        Closed="InfoBarControl_Closed">
        <InfoBar.IconSource>
            <FontIconSource Glyph="{x:Bind IconGlyph, Mode=OneWay}" />
        </InfoBar.IconSource>
    </InfoBar>
</UserControl>
