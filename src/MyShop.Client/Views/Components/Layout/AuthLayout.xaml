<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Layout.AuthLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <!-- Reusable 2-column Auth Layout with Branding and Form -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition x:Name="FormColumn"
                    Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Branding Panel -->
        <Grid x:Name="BrandingPanel"
                Grid.Column="0">
            <Grid.Background>
                <ImageBrush x:Name="BrandingImageBrush"
                        ImageSource="ms-appx:///Assets/login-background.jpg"
                        Stretch="UniformToFill"/>
            </Grid.Background>
            <Border Background="{ThemeResource BlackSemiTransparent}"/>
            <StackPanel x:Name="BrandingContent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="{StaticResource Gap_LG}">
                <Image x:Name="LogoImage"
                        Width="120"
                        Height="120"
                        Source="ms-appx:///Assets/Images/logo.png"
                        Stretch="Uniform"
                        AutomationProperties.Name="App Logo"/>
                <TextBlock x:Name="AppNameBranding"
                        HorizontalAlignment="Center"
                        FontSize="{StaticResource FontSize_6XL}"
                        FontWeight="Bold"
                        Foreground="{ThemeResource WhiteBrush}"
                        Text="MyShop2025"
                        AutomationProperties.HeadingLevel="Level1"/>
                <TextBlock x:Name="BrandingTitleText"
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource WhiteBrush}"
                        Text="Welcome back!"
                        FontSize="32"
                        FontWeight="Bold"/>
                <TextBlock x:Name="BrandingSubtitleText"
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource WhiteBrush}"
                        Opacity="0.9"
                        MaxWidth="400"
                        Text="Enter your credentials to access your account"
                        TextAlignment="Center"
                        TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- RIGHT: Form Panel -->
        <Grid x:Name="FormPanel"
                Grid.Column="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <ContentPresenter x:Name="FormContentPresenter"
                    Content="{x:Bind FormContent, Mode=OneWay}"/>
        </Grid>

        <!-- Responsive States -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowSizeStates">
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1100"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="BrandingPanel.Visibility"
                                Value="Visible"/>
                        <Setter Target="FormColumn.Width"
                                Value="1*"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="BrandingPanel.Visibility"
                                Value="Collapsed"/>
                        <Setter Target="FormColumn.Width"
                                Value="*"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
