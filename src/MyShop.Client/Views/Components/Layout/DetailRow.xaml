<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Layout.DetailRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
    DetailRow Component
    ===================
    A reusable icon + label + value row for detail views.
    
    Usage:
    <layout:DetailRow Icon="&#xE717;" Label="Phone" Value="+1 234 567 890"/>
    <layout:DetailRow Icon="&#xE715;" Label="Email" Value="john@example.com" IsClickable="True"/>
    -->

    <Grid ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Icon -->
        <FontIcon Grid.Column="0"
                 Glyph="{Binding IconGlyph, ElementName=RootControl, Mode=OneWay}"
                 FontSize="16"
                 Foreground="{ThemeResource TextMutedBrush}"
                 VerticalAlignment="Center"/>

        <!-- Label and Value -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <!-- Label (optional) -->
            <TextBlock Text="{Binding Label, ElementName=RootControl, Mode=OneWay}"
                       FontSize="14"
                       Foreground="{ThemeResource TextMutedBrush}"
                       Visibility="{Binding Label, ElementName=RootControl, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}">
                <Run Text=":"/>
            </TextBlock>
            
            <!-- Value -->
            <TextBlock x:Name="ValueText"
                       Text="{Binding Value, ElementName=RootControl, Mode=OneWay}"
                       FontSize="14"
                       Foreground="{ThemeResource TextPrimaryBrush}"
                       TextTrimming="CharacterEllipsis"/>
        </StackPanel>
    </Grid>
</UserControl>
