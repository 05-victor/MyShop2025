<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Layout.AuthFormCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Reusable Form Card for Auth Pages -->
    <Grid Padding="{StaticResource Padding_3XL}" MaxWidth="420" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Spacing="{StaticResource Gap_LG}">
            <!-- Header Section -->
            <StackPanel x:Name="HeaderSection" Spacing="{StaticResource Gap_SM}">
                <TextBlock x:Name="TitleText" FontSize="32" FontWeight="Bold" Text="Sign In" TextAlignment="Center" Foreground="{ThemeResource TextFillColorPrimaryBrush}" AutomationProperties.HeadingLevel="Level1"/>
                <TextBlock x:Name="SubtitleText" FontSize="14" Text="Enter your credentials to access your account" TextAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" Margin="0,0,0,8"/>
            </StackPanel>
            <!-- Content Area -->
            <ContentPresenter x:Name="FormContentPresenter" Content="{x:Bind FormContent, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
