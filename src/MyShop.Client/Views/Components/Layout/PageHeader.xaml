<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Layout.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
    PageHeader Component
    ====================
    A reusable page header with title, subtitle, and action buttons slot.
    
    Usage:
    <layout:PageHeader 
        Title="Users Management"
        Subtitle="Manage all users in the system">
        <layout:PageHeader.Actions>
            <Button Content="Add User" Style="{StaticResource PrimaryButtonStyle}"/>
        </layout:PageHeader.Actions>
    </layout:PageHeader>
    -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Title Section -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Text="{Binding Title, ElementName=RootControl, Mode=OneWay}"
                       Style="{StaticResource DisplayHeadingStyle}"
                       Foreground="{ThemeResource TextPrimaryBrush}"
                       AutomationProperties.HeadingLevel="Level1"/>
            
            <TextBlock Text="{Binding Subtitle, ElementName=RootControl, Mode=OneWay}"
                       FontSize="14"
                       Foreground="{ThemeResource TextMutedBrush}"
                       Margin="0,4,0,0"
                       Visibility="{Binding Subtitle, ElementName=RootControl, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Actions Slot -->
        <ContentPresenter Grid.Column="1"
                         Content="{Binding ActionContent, ElementName=RootControl, Mode=OneWay}"
                         VerticalAlignment="Center"/>
    </Grid>
</UserControl>
