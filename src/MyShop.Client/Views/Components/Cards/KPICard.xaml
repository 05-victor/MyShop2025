<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Cards.KPICard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RootControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Lift Animation Storyboard (WinUI Gallery pattern) -->
        <!-- Note: ThemeShadow doesn't support BlurRadius animation, only translation is animated -->
        <Storyboard x:Name="LiftUpAnimation">
            <DoubleAnimation 
                Storyboard.TargetName="CardBorder"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                From="0" To="-8" 
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Name="LiftDownAnimation">
            <DoubleAnimation 
                Storyboard.TargetName="CardBorder"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                From="-8" To="0" 
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Count-up animation (triggered in code-behind) -->
        <Storyboard x:Name="CountUpAnimation">
            <DoubleAnimation 
                x:Name="ValueAnimation"
                Storyboard.TargetName="ValueTextBlock"
                Storyboard.TargetProperty="Opacity"
                From="0.5" To="1.0" 
                Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <!-- Card Border with Shadow -->
    <Grid>
        <Border x:Name="CardBorder"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="16"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Padding="24"
                PointerEntered="CardBorder_PointerEntered"
                PointerExited="CardBorder_PointerExited">
            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>
            <Border.Shadow>
                <ThemeShadow x:Name="CardShadow"/>
            </Border.Shadow>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header: Icon + Badge -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon Circle -->
                    <Border x:Name="IconCircle"
                            Grid.Column="0"
                            Background="{x:Bind IconBackgroundBrush, Mode=OneWay}"
                            CornerRadius="12"
                            Width="48" Height="48"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                        <FontIcon x:Name="IconGlyph"
                                  Glyph="{x:Bind Icon, Mode=OneWay}" 
                                  FontSize="20"
                                  Foreground="{x:Bind IconForegroundBrush, Mode=OneWay}"/>
                    </Border>

                    <!-- Badge (Top-Right) -->
                    <Border x:Name="TrendBadge"
                            Grid.Column="1"
                            Background="{x:Bind BadgeBackgroundBrush, Mode=OneWay}"
                            CornerRadius="999" 
                            Padding="10,6"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Visibility="{x:Bind ShowBadge, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="{x:Bind TrendIcon, Mode=OneWay}" 
                                      FontSize="12" 
                                      Foreground="{x:Bind BadgeForegroundBrush, Mode=OneWay}"/>
                            <TextBlock Text="{x:Bind TrendText, Mode=OneWay}" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="{x:Bind BadgeForegroundBrush, Mode=OneWay}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Title -->
                <TextBlock Grid.Row="1"
                           Text="{x:Bind Title, Mode=OneWay}" 
                           FontSize="14" 
                           Foreground="#6B7280"
                           Margin="0,0,0,8"/>

                <!-- Value (with count-up animation) -->
                <TextBlock x:Name="ValueTextBlock"
                           Grid.Row="2"
                           Text="{x:Bind DisplayValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#111827"
                           Margin="0,0,0,12"/>

                <!-- Subtitle / Description -->
                <TextBlock Grid.Row="3"
                           Text="{x:Bind Subtitle, Mode=OneWay}" 
                           FontSize="13" 
                           Foreground="#9CA3AF"
                           TextWrapping="Wrap"
                           VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
