<UserControl x:Class="MyShop.Client.Views.Components.Pagination.PaginationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Page Size Selector -->
        <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    Spacing="8"
                    VerticalAlignment="Center">
            <TextBlock Text="Show"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <ComboBox x:Name="PageSizeComboBox"
                      MinWidth="80"
                      SelectedIndex="0"
                      AutomationProperties.Name="Items per page"
                      AutomationProperties.HelpText="Select number of items to show per page"
                      UseSystemFocusVisuals="True"
                      SelectionChanged="OnPageSizeChanged">
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="25"/>
                <ComboBoxItem Content="50"/>
                <ComboBoxItem Content="100"/>
            </ComboBox>
            <TextBlock Text="entries"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Center: Page Numbers -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="4">
            
            <!-- First Page Button -->
            <Button x:Name="FirstButton"
                    Content="&#xE892;"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Width="36"
                    Height="36"
                    Click="OnFirstClick"
                    ToolTipService.ToolTip="First Page"
                    AutomationProperties.Name="First page"
                    UseSystemFocusVisuals="True">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Previous Button -->
            <Button x:Name="PrevButton"
                    Content="&#xE76B;"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Width="36"
                    Height="36"
                    Click="OnPreviousClick"
                    ToolTipService.ToolTip="Previous Page"
                    AutomationProperties.Name="Previous page"
                    UseSystemFocusVisuals="True">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Page Numbers Container -->
            <ItemsControl x:Name="PageNumbersContainer">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding PageNumber}"
                                Tag="{Binding PageNumber}"
                                Width="36"
                                Height="36"
                                Click="OnPageNumberClick">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Next Button -->
            <Button x:Name="NextButton"
                    Content="&#xE76C;"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Width="36"
                    Height="36"
                    Click="OnNextClick"
                    ToolTipService.ToolTip="Next Page"
                    AutomationProperties.Name="Next page"
                    UseSystemFocusVisuals="True">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Last Page Button -->
            <Button x:Name="LastButton"
                    Content="&#xE893;"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Width="36"
                    Height="36"
                    Click="OnLastClick"
                    ToolTipService.ToolTip="Last Page"
                    AutomationProperties.Name="Last page"
                    UseSystemFocusVisuals="True">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Right: Info Text -->
        <TextBlock Grid.Column="2"
                   x:Name="InfoText"
                   VerticalAlignment="Center"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Grid>
</UserControl>
