<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Components.Buttons.IconButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
    IconButton Component
    ====================
    A reusable button with icon and optional text.
    
    Usage:
    <buttons:IconButton 
        IconGlyph="&#xE710;" 
        Text="Add New"
        Variant="Filled"
        Command="{x:Bind ViewModel.AddCommand}"/>
    
    Variants: Ghost, Outline, Filled (styles defined in Views/Themes/Styles/ButtonStyles.xaml)
    Sizes: Auto-sizing based on content (Icon-only: 36x36, Icon+Text: auto width)
    
    DO NOT add inline VisualStateManager - styles from ButtonStyles.xaml handle all states
    DO NOT add inline Background/BorderBrush - use Variant property instead
    -->

    <Button x:Name="ActionButton"
            Padding="0"
            CornerRadius="8"
            Command="{Binding Command, ElementName=RootControl, Mode=OneWay}"
            CommandParameter="{Binding CommandParameter, ElementName=RootControl, Mode=OneWay}"
            ToolTipService.ToolTip="{Binding Tooltip, ElementName=RootControl, Mode=OneWay}"
            AutomationProperties.Name="{Binding Tooltip, ElementName=RootControl, Mode=OneWay}"
            UseSystemFocusVisuals="True"
            Click="ActionButton_Click">
        <StackPanel x:Name="ContentPanel" Orientation="Horizontal" Spacing="8">
            <FontIcon x:Name="LeftIcon"
                      Glyph="{Binding IconGlyph, ElementName=RootControl, Mode=OneWay}"
                      FontSize="{Binding IconSize, ElementName=RootControl, Mode=OneWay}"
                      Foreground="{Binding IconColor, ElementName=RootControl, Mode=OneWay}"
                      IsHitTestVisible="False"/>
            <TextBlock x:Name="ButtonText"
                       Text="{Binding Text, ElementName=RootControl, Mode=OneWay}"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
            <FontIcon x:Name="RightIcon"
                      Visibility="Collapsed"
                      Glyph="{Binding IconGlyph, ElementName=RootControl, Mode=OneWay}"
                      FontSize="{Binding IconSize, ElementName=RootControl, Mode=OneWay}"
                      Foreground="{Binding IconColor, ElementName=RootControl, Mode=OneWay}"
                      IsHitTestVisible="False"/>
        </StackPanel>
    </Button>
</UserControl>
