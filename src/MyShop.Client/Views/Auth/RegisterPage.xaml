<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Auth.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.Client.Views.Converters"
    xmlns:controls="using:MyShop.Client.Views.Controls"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.Auth"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowSizeStates">
                <!-- Wide State: Show branding + form side-by-side -->
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1100"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="BrandingPanel.Visibility" Value="Visible"/>
                        <Setter Target="FormColumn.Width" Value="1*"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Narrow State: Hide branding, full-width form -->
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="BrandingPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="FormColumn.Width" Value="*"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition x:Name="FormColumn" Width="1*"/> 
        </Grid.ColumnDefinitions>

        <!-- Left Side: Branding with Mountain Background -->
        <Grid x:Name="BrandingPanel" Grid.Column="0" Grid.ColumnSpan="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/register-background.jpg" 
                           Stretch="UniformToFill"/>
            </Grid.Background>
            
            <!-- Dark overlay for better text contrast -->
            <Border Background="#66000000"/>
            
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="{StaticResource Gap_LG}">
                <Image Source="/Assets/StoreLogo.png" 
                       Width="120" 
                       Height="120" 
                       Stretch="Uniform"
                       AutomationProperties.Name="MyShop2025 Logo"/>
                <TextBlock Text="Join MyShop2025" 
                           FontSize="48" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           AutomationProperties.HeadingLevel="Level1"/>
                <TextBlock Text="Start managing your shop efficiently" 
                           FontSize="18" 
                           FontWeight="Normal"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           MaxWidth="400"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Right Side: Register Form -->
        <Grid Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel MaxWidth="420" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Spacing="{StaticResource Gap_SM}"
                           Padding="{StaticResource Padding_3XL}">

                    <!-- Header -->
                    <StackPanel Spacing="{StaticResource Gap_XS}" Margin="0,0,0,16">
                        <TextBlock Text="Create Account" 
                                  FontSize="32"
                                  FontWeight="SemiBold"
                                  Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                  AutomationProperties.HeadingLevel="Level1"/>
                        <TextBlock Text="Fill in the information below to get started" 
                                  FontSize="14"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Username Input -->
                    <StackPanel Spacing="{StaticResource Gap_XS}">
                        <TextBlock Style="{StaticResource InputLabelStyle}">
                            <Run Text="Username"/>
                            <Run Text="*" Foreground="{StaticResource SystemErrorTextColor}"/>
                        </TextBlock>
                        <TextBox x:Name="UsernameTextBox"
                                Style="{StaticResource BaseInputStyle}"
                                PlaceholderText="Choose a unique username"
                                Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                AutomationProperties.Name="Username"
                                AutomationProperties.HelpText="Enter a unique username for your account"
                                AutomationProperties.IsRequiredForForm="True"/>
                        <TextBlock x:Name="UsernameErrorText"
                                  Style="{StaticResource ValidationErrorStyle}"
                                  Text="{x:Bind ViewModel.UsernameError, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.UsernameError, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                  AutomationProperties.LiveSetting="Assertive">
                            <TextBlock.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-10"/>
                                </TransitionCollection>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>

                    <!-- Email Input -->
                    <StackPanel Spacing="{StaticResource Gap_XS}">
                        <TextBlock Style="{StaticResource InputLabelStyle}">
                            <Run Text="Email Address"/>
                            <Run Text="*" Foreground="{StaticResource SystemErrorTextColor}"/>
                        </TextBlock>
                        <TextBox Style="{StaticResource BaseInputStyle}"
                                PlaceholderText="your.email@example.com"
                                Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                InputScope="EmailSmtpAddress"
                                AutomationProperties.Name="Email Address"
                                AutomationProperties.HelpText="Enter your email address"
                                AutomationProperties.IsRequiredForForm="True"/>
                        <TextBlock Style="{StaticResource ValidationErrorStyle}"
                                  Text="{x:Bind ViewModel.EmailError, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.EmailError, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                  AutomationProperties.LiveSetting="Assertive">
                            <TextBlock.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-10"/>
                                </TransitionCollection>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>

                    <!-- Phone Number Input -->
                    <StackPanel Spacing="{StaticResource Gap_XS}">
                        <TextBlock Style="{StaticResource InputLabelStyle}">
                            <Run Text="Phone Number"/>
                            <Run Text="*" Foreground="{StaticResource SystemErrorTextColor}"/>
                        </TextBlock>
                        <TextBox Style="{StaticResource BaseInputStyle}"
                                PlaceholderText="0123456789"
                                Text="{x:Bind ViewModel.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                InputScope="TelephoneNumber"
                                AutomationProperties.Name="Phone Number"
                                AutomationProperties.HelpText="Enter your phone number"
                                AutomationProperties.IsRequiredForForm="True"/>
                        <TextBlock Style="{StaticResource ValidationErrorStyle}"
                                  Text="{x:Bind ViewModel.PhoneError, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.PhoneError, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                  AutomationProperties.LiveSetting="Assertive">
                            <TextBlock.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-10"/>
                                </TransitionCollection>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>

                    <!-- Password Input -->
                    <StackPanel Spacing="{StaticResource Gap_XS}">
                        <TextBlock Style="{StaticResource InputLabelStyle}">
                            <Run Text="Password"/>
                            <Run Text="*" Foreground="{StaticResource SystemErrorTextColor}"/>
                        </TextBlock>
                        <controls:PasswordInputControl x:Name="PasswordInput"
                                                      PlaceholderText="Create a strong password (min 6 chars)"
                                                      Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                                                      IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorStyle}"
                                  Text="{x:Bind ViewModel.PasswordError, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.PasswordError, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                  AutomationProperties.LiveSetting="Assertive">
                            <TextBlock.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-10"/>
                                </TransitionCollection>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>

                    <!-- Confirm Password Input -->
                    <StackPanel Spacing="{StaticResource Gap_XS}">
                        <TextBlock Style="{StaticResource InputLabelStyle}">
                            <Run Text="Confirm Password"/>
                            <Run Text="*" Foreground="{StaticResource SystemErrorTextColor}"/>
                        </TextBlock>
                        <controls:PasswordInputControl x:Name="ConfirmPasswordInput"
                                                      PlaceholderText="Re-enter your password"
                                                      Password="{x:Bind ViewModel.ConfirmPassword, Mode=TwoWay}"
                                                      IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorStyle}"
                                  Text="{x:Bind ViewModel.ConfirmPasswordError, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.ConfirmPasswordError, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                  AutomationProperties.LiveSetting="Assertive">
                            <TextBlock.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-10"/>
                                </TransitionCollection>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </StackPanel>

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorMessageText"
                                Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{ThemeResource SystemErrorTextColor}"
                                Margin="0,4,0,0"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                MaxWidth="340"
                                Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                AutomationProperties.LiveSetting="Assertive">
                        <TextBlock.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromVerticalOffset="-10"/>
                            </TransitionCollection>
                        </TextBlock.Transitions>
                    </TextBlock>

                    <!-- Register Button -->
                    <Button Command="{x:Bind ViewModel.AttemptRegisterCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,12,0,0"
                            AutomationProperties.Name="Create Account Button">
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource Gap_XS}" HorizontalAlignment="Center">
                            <ProgressRing Width="20" Height="20"
                                         IsActive="{Binding IsLoading, Mode=OneWay}"
                                         Visibility="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="Create Account" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Divider -->
                    <Grid Margin="0,16,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Height="1" VerticalAlignment="Center" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                        <TextBlock Grid.Column="1" 
                                  Text="OR" 
                                  Margin="12,0" 
                                  Style="{StaticResource CaptionStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Border Grid.Column="2" Height="1" VerticalAlignment="Center" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                    </Grid>

                    <!-- Google Sign-Up Button -->
                    <Button Command="{x:Bind ViewModel.GoogleLoginCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Stretch"
                            AutomationProperties.Name="Sign up with Google">
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource Gap_MD}">
                            <Image Source="/Assets/Google.png" 
                                   Width="20" 
                                   Height="20"
                                   AutomationProperties.Name="Google Logo"/>
                            <TextBlock Text="Sign up with Google" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Login Link -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Spacing="{StaticResource Gap_XS}"
                               Margin="0,12,0,0">
                        <TextBlock Text="Already have an account?" 
                                  Style="{StaticResource BodyStyle}"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <HyperlinkButton Content="Login here"
                                        Command="{x:Bind ViewModel.NavigateToLoginCommand}"
                                        Style="{StaticResource LinkButtonStyle}"
                                        AutomationProperties.Name="Navigate to Login Page"/>
                    </StackPanel>

                    <!-- Terms Notice -->
                    <TextBlock TextWrapping="Wrap"
                              Style="{StaticResource CaptionStyle}"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              TextAlignment="Center"
                              Margin="0,8,0,0">
                        By creating an account, you agree to our 
                        <Hyperlink>Terms of Service</Hyperlink> and 
                        <Hyperlink>Privacy Policy</Hyperlink>
                    </TextBlock>

                </StackPanel>
            </ScrollViewer>

            <!-- Loading Overlay -->
            <Border Background="#80000000"
                   Visibility="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border.Transitions>
                    <TransitionCollection>
                        <EntranceThemeTransition/>
                    </TransitionCollection>
                </Border.Transitions>
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="{StaticResource Gap_MD}">
                    <ProgressRing IsActive="True" 
                                 Width="48" 
                                 Height="48"
                                 Foreground="White"/>
                    <TextBlock Text="Creating your account..." 
                              Style="{StaticResource BodyLargeStyle}"
                              Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
