<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Errors.ServerErrorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--
    500 Server Error Page
    =====================
    Displayed when a server error occurs.
    -->

    <Grid Background="{ThemeResource BackgroundLightBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition FromVerticalOffset="50"/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Spacing="24"
            MaxWidth="500"
            Padding="32">
            
            <!-- Error Illustration -->
            <Grid Width="200" Height="200" HorizontalAlignment="Center">
                <!-- Circle Background -->
                <Ellipse 
                    Width="200" Height="200" 
                    Fill="{ThemeResource ErrorRed50Brush}" 
                    Opacity="0.5"/>
                
                <!-- 500 Text -->
                <TextBlock 
                    Text="500" 
                    FontSize="72" 
                    FontWeight="Bold" 
                    Foreground="{ThemeResource ErrorRedBrush}"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Title -->
            <TextBlock 
                Text="Server Error" 
                FontSize="28" 
                FontWeight="Bold" 
                Foreground="{ThemeResource TextPrimaryBrush}"
                HorizontalAlignment="Center"/>
            
            <!-- Description -->
            <TextBlock 
                Text="Oops! Something went wrong on our end. Our team has been notified. Please try again later or contact support if the problem persists."
                FontSize="15" 
                Foreground="{ThemeResource TextMutedBrush}"
                TextAlignment="Center"
                TextWrapping="Wrap"/>
            
            <!-- Error Details (optional - hidden by default) -->
            <Border 
                x:Name="ErrorDetailsBorder"
                Background="{ThemeResource Gray100Brush}"
                CornerRadius="8"
                Padding="16"
                Visibility="Collapsed">
                <TextBlock 
                    x:Name="ErrorDetailsText"
                    FontSize="12"
                    FontFamily="Consolas"
                    Foreground="{ThemeResource TextMutedBrush}"
                    TextWrapping="Wrap"
                    IsTextSelectionEnabled="True"/>
            </Border>
            
            <!-- Action Buttons -->
            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Spacing="12">
                
                <!-- Retry Button -->
                <Button 
                    x:Name="RetryButton"
                    Padding="24,12"
                    Background="{ThemeResource PrimaryBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="8"
                    Click="RetryButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon x:Name="RetryIcon" Glyph="&#xE72C;" FontSize="14"/>
                        <ProgressRing 
                            x:Name="RetryProgress" 
                            Width="14" Height="14" 
                            Foreground="White"
                            Visibility="Collapsed"/>
                        <TextBlock x:Name="RetryText" Text="Try Again" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                
                <!-- Go Home Button -->
                <Button 
                    x:Name="GoHomeButton"
                    Padding="24,12"
                    Background="Transparent"
                    BorderBrush="{ThemeResource BorderDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Click="GoHomeButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE80F;" FontSize="14"/>
                        <TextBlock Text="Go Home"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!-- Contact Support Link -->
            <HyperlinkButton 
                Content="Contact Support"
                HorizontalAlignment="Center"
                FontSize="13"/>
        </StackPanel>
    </Grid>
</Page>
