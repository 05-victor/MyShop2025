<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Order.AdminOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.Client.Views.Order"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F3F4F6">

    <Grid>
        <!-- Toàn bộ nội dung scroll được, nằm trong Shell -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
            <StackPanel Padding="32" Spacing="24">

                <!-- ===== Header: Title + Action buttons ===== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Orders Overview"
                               FontSize="28"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="12"
                                VerticalAlignment="Center">
                        <Button x:Name="ExportButton"
                                Padding="16,8"
                                CornerRadius="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE118;" />
                                <!-- Save/Export icon -->
                                <TextBlock Text="Export Orders" />
                            </StackPanel>
                        </Button>

                        <Button x:Name="RefreshButton"
                                Padding="16,8"
                                CornerRadius="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE149;" />
                                <!-- Refresh icon -->
                                <TextBlock Text="Refresh" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- ===== Filter Orders Card ===== -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Filter Orders"
                                   FontSize="18"
                                   FontWeight="SemiBold" />

                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <!-- Search -->
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="Search"
                                           FontSize="13"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBox PlaceholderText="Product, customer, order ID..."
                                         CornerRadius="8"
                                         Padding="12,8" />
                            </StackPanel>

                            <!-- Category -->
                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="Category"
                                           FontSize="13"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <ComboBox CornerRadius="8"
                                          Padding="12,4"
                                          PlaceholderText="All Categories"
                                          ItemsSource="{Binding Categories}" />
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock Text="Status"
                                           FontSize="13"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <ComboBox CornerRadius="8"
                                          Padding="12,4"
                                          PlaceholderText="All Status"
                                          ItemsSource="{Binding Statuses}" />
                            </StackPanel>

                            <!-- From Date -->
                            <StackPanel Grid.Column="3" Spacing="4">
                                <TextBlock Text="From Date"
                                           FontSize="13"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <DatePicker CornerRadius="8"
                                            HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- To Date -->
                            <StackPanel Grid.Column="4" Spacing="4">
                                <TextBlock Text="To Date"
                                           FontSize="13"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <DatePicker CornerRadius="8"
                                            HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ===== Product Performance Summary ===== -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Product Performance Summary"
                               FontSize="18"
                               FontWeight="SemiBold" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Header row -->
                            <Grid Grid.Row="0"
                                  ColumnSpacing="12"
                                  Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Product Name"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="1" Text="Category"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="2" Text="Total Orders"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="3" Text="Total Quantity"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="4" Text="Total Revenue"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="5" Text="Avg Order Value"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </Grid>

                            <!-- Data rows -->
                            <ListView Grid.Row="1"
                                      ItemsSource="{Binding ProductPerformanceItems}"
                                      SelectionMode="None"
                                      BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="12" Padding="0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Product Name -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding ProductName}" />

                                            <!-- Category pill -->
                                            <Border Grid.Column="1"
                                                    Padding="8,4"
                                                    CornerRadius="999"
                                                    Background="#EEF2FF">
                                                <TextBlock Text="{Binding CategoryName}"
                                                           FontSize="12"
                                                           Foreground="#4F46E5" />
                                            </Border>

                                            <!-- Total Orders (purple pill) -->
                                            <Border Grid.Column="2"
                                                    HorizontalAlignment="Left"
                                                    Padding="10,4"
                                                    CornerRadius="999"
                                                    Background="#4F46E5">
                                                <TextBlock Text="{Binding TotalOrders}"
                                                           FontSize="12"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center" />
                                            </Border>

                                            <!-- Total Quantity -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding TotalQuantity}" />

                                            <!-- Total Revenue (green) -->
                                            <TextBlock Grid.Column="4">
                                                <Run Text="$" />
                                                <Run Text="{Binding TotalRevenue}" />
                                            </TextBlock>

                                            <!-- Avg Order Value -->
                                            <TextBlock Grid.Column="5">
                                                <Run Text="$" />
                                                <Run Text="{Binding AverageOrderValue}" />
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- ===== Revenue by Product (Top 8) – Chart card ===== -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Revenue by Product (Top 8)"
                               FontSize="18"
                               FontWeight="SemiBold" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="16"
                            Height="320">
                        <!-- TODO: sau này bạn nhúng chart control (LiveCharts / Win2D…) vào đây -->
                        <Grid>
                            <TextBlock Text="Chart placeholder – inject chart control here"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- ===== Recent Orders ===== -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Recent Orders"
                               FontSize="18"
                               FontWeight="SemiBold" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Header row -->
                            <Grid Grid.Row="0"
                                  ColumnSpacing="12"
                                  Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Order ID"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="1" Text="Customer Name"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="2" Text="Product Name"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="3" Text="Quantity"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="4" Text="Total"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="5" Text="Date"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="6" Text="Status"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </Grid>

                            <!-- Data rows -->
                            <ListView Grid.Row="1"
                                      ItemsSource="{Binding RecentOrders}"
                                      SelectionMode="None"
                                      BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="12" Padding="0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Order ID (link style) -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding OrderCode}"
                                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />

                                            <!-- Customer Name -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding CustomerName}" />

                                            <!-- Product Name -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding ProductName}" />

                                            <!-- Quantity -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding Quantity}" />

                                            <!-- Total (green) -->
                                            <TextBlock Grid.Column="4"
                                                       Foreground="#059669">
                                                <Run Text="$" />
                                                <Run Text="{Binding Total}" />
                                            </TextBlock>

                                            <!-- Date -->
                                            <TextBlock Grid.Column="5"
                                                       Text="{Binding OrderDate}" />

                                            <!-- Status badge -->
                                            <!--<badges:StatusBadge Grid.Column="6"
                                                                Text="{Binding Status}" />-->
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- ===== All Orders ===== -->
                <StackPanel Spacing="12">
                    <TextBlock Text="All Orders"
                               FontSize="18"
                               FontWeight="SemiBold" />

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Header row -->
                            <Grid Grid.Row="0"
                                  ColumnSpacing="12"
                                  Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Order ID"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="1" Text="Customer Name"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="2" Text="Product Name"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="3" Text="Quantity"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="4" Text="Total"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="5" Text="Date"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Column="6" Text="Status"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </Grid>

                            <!-- Data rows -->
                            <ListView Grid.Row="1"
                                      ItemsSource="{Binding AllOrders}"
                                      SelectionMode="None"
                                      BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="12" Padding="0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding OrderCode}"
                                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding CustomerName}" />

                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding ProductName}" />

                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding Quantity}" />

                                            <TextBlock Grid.Column="4"
                                                       Foreground="#059669">
                                                <Run Text="$" />
                                                <Run Text="{Binding Total}" />
                                            </TextBlock>

                                            <TextBlock Grid.Column="5"
                                                       Text="{Binding OrderDate}" />

                                            <!--<badges:StatusBadge Grid.Column="6"
                                                                Text="{Binding Status}" />-->
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Footer: Showing X of Y orders -->
                            <TextBlock Grid.Row="2"
                                       Text="{Binding AllOrdersSummaryText}"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Right"
                                       Margin="0,8,0,0" />
                        </Grid>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
