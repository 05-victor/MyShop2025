<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Order.AdminOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:badges="using:MyShop.Client.Views.Components.Badges"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyShop.Client.Views.Order"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#F3F4F6"
    mc:Ignorable="d">

    <Grid>
        <!--  Toàn bộ nội dung scroll được, nằm trong Shell  -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
            <StackPanel Padding="32" Spacing="24">

                <!--  ===== Header: Title + Action buttons =====  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="28"
                        FontWeight="SemiBold"
                        Text="Orders Overview" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="12">
                        <Button
                            x:Name="ExportButton"
                            Padding="16,8"
                            CornerRadius="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE118;" />
                                <!--  Save/Export icon  -->
                                <TextBlock Text="Export Orders" />
                            </StackPanel>
                        </Button>

                        <Button
                            x:Name="RefreshButton"
                            Padding="16,8"
                            CornerRadius="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE149;" />
                                <!--  Refresh icon  -->
                                <TextBlock Text="Refresh" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  ===== Filter Orders Card =====  -->
                <Border
                    Padding="24"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="16">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Filter Orders" />

                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <!--  Search  -->
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Search" />
                                <TextBox
                                    Padding="12,8"
                                    CornerRadius="8"
                                    PlaceholderText="Product, customer, order ID..." />
                            </StackPanel>

                            <!--  Category  -->
                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Category" />
                                <ComboBox
                                    Padding="12,4"
                                    HorizontalAlignment="Stretch"
                                    CornerRadius="8"
                                    ItemsSource="{Binding Categories}"
                                    PlaceholderText="All Categories" />
                            </StackPanel>

                            <!--  Status  -->
                            <StackPanel Grid.Column="2" Spacing="4">
                                <TextBlock
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Status" />
                                <ComboBox
                                    Padding="12,4"
                                    HorizontalAlignment="Stretch"
                                    CornerRadius="8"
                                    ItemsSource="{Binding Statuses}"
                                    PlaceholderText="All Status" />
                            </StackPanel>

                            <!--  From Date  -->
                            <StackPanel Grid.Column="3" Spacing="4">
                                <TextBlock
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="From Date" />
                                <DatePicker HorizontalAlignment="Stretch" CornerRadius="8" />
                            </StackPanel>

                            <!--  To Date  -->
                            <StackPanel Grid.Column="4" Spacing="4">
                                <TextBlock
                                    FontSize="13"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="To Date" />
                                <DatePicker HorizontalAlignment="Stretch" CornerRadius="8" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  ===== Product Performance Summary =====  -->
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Product Performance Summary" />

                    <Border
                        Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header row  -->
                            <Grid
                                Grid.Row="0"
                                Margin="0,0,0,8"
                                ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Product Name" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Category" />
                                <TextBlock
                                    Grid.Column="2"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Total Orders" />
                                <TextBlock
                                    Grid.Column="3"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Total Quantity" />
                                <TextBlock
                                    Grid.Column="4"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Total Revenue" />
                                <TextBlock
                                    Grid.Column="5"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Avg Order Value" />
                            </Grid>

                            <!--  Data rows  -->
                            <ListView
                                Grid.Row="1"
                                BorderThickness="0"
                                ItemsSource="{Binding ProductPerformanceItems}"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,6" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Product Name  -->
                                            <TextBlock Grid.Column="0" Text="{Binding ProductName}" />

                                            <!--  Category pill  -->
                                            <Border
                                                Grid.Column="1"
                                                Padding="8,4"
                                                CornerRadius="999">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#4F46E5"
                                                    Text="{Binding CategoryName}" />
                                            </Border>

                                            <!--  Total Orders (purple pill)  -->
                                            <Border
                                                Grid.Column="2"
                                                Padding="10,4"
                                                HorizontalAlignment="Left"
                                                Background="#4F46E5"
                                                CornerRadius="999">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="White"
                                                    Text="{Binding TotalOrders}" />
                                            </Border>

                                            <!--  Total Quantity  -->
                                            <TextBlock Grid.Column="3" Text="{Binding TotalQuantity}" />

                                            <!--  Total Revenue (green)  -->
                                            <TextBlock Grid.Column="4">
                                                <Run Text="$" />
                                                <Run Text="{Binding TotalRevenue}" />
                                            </TextBlock>

                                            <!--  Avg Order Value  -->
                                            <TextBlock Grid.Column="5">
                                                <Run Text="$" />
                                                <Run Text="{Binding AverageOrderValue}" />
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </StackPanel>

                <!--  ===== Revenue by Product (Top 8) – Chart card =====  -->
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Revenue by Product (Top 8)" />

                    <Border
                        Height="320"
                        Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="16">
                        <!--  TODO: sau này bạn nhúng chart control (LiveCharts / Win2D…) vào đây  -->
                        <Grid>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Chart placeholder – inject chart control here" />
                        </Grid>
                    </Border>
                </StackPanel>

                <!--  ===== Recent Orders =====  -->
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Recent Orders" />

                    <Border
                        Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header row  -->
                            <Grid
                                Grid.Row="0"
                                Margin="0,0,0,8"
                                ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Order ID" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Customer Name" />
                                <TextBlock
                                    Grid.Column="2"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Product Name" />
                                <TextBlock
                                    Grid.Column="3"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Quantity" />
                                <TextBlock
                                    Grid.Column="4"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Total" />
                                <TextBlock
                                    Grid.Column="5"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Date" />
                                <TextBlock
                                    Grid.Column="6"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Status" />
                            </Grid>

                            <!--  Data rows  -->
                            <ListView
                                Grid.Row="1"
                                BorderThickness="0"
                                ItemsSource="{Binding RecentOrders}"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,6" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Order ID (link style)  -->
                                            <TextBlock
                                                Grid.Column="0"
                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                Text="{Binding OrderCode}" />

                                            <!--  Customer Name  -->
                                            <TextBlock Grid.Column="1" Text="{Binding CustomerName}" />

                                            <!--  Product Name  -->
                                            <TextBlock Grid.Column="2" Text="{Binding ProductName}" />

                                            <!--  Quantity  -->
                                            <TextBlock Grid.Column="3" Text="{Binding Quantity}" />

                                            <!--  Total (green)  -->
                                            <TextBlock Grid.Column="4" Foreground="#059669">
                                                <Run Text="$" />
                                                <Run Text="{Binding Total}" />
                                            </TextBlock>

                                            <!--  Date  -->
                                            <TextBlock Grid.Column="5" Text="{Binding OrderDate}" />

                                            <!--  Status badge  -->
                                            <!--<badges:StatusBadge Grid.Column="6"
                                                                Text="{Binding Status}" />-->
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </StackPanel>

                <!--  ===== All Orders =====  -->
                <StackPanel Spacing="12">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="All Orders" />

                    <Border
                        Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Header row  -->
                            <Grid
                                Grid.Row="0"
                                Margin="0,0,0,8"
                                ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Order ID" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Customer Name" />
                                <TextBlock
                                    Grid.Column="2"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Product Name" />
                                <TextBlock
                                    Grid.Column="3"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Quantity" />
                                <TextBlock
                                    Grid.Column="4"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Total" />
                                <TextBlock
                                    Grid.Column="5"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Date" />
                                <TextBlock
                                    Grid.Column="6"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Status" />
                            </Grid>

                            <!--  Data rows  -->
                            <ListView
                                Grid.Row="1"
                                BorderThickness="0"
                                ItemsSource="{Binding AllOrders}"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,6" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                Text="{Binding OrderCode}" />

                                            <TextBlock Grid.Column="1" Text="{Binding CustomerName}" />

                                            <TextBlock Grid.Column="2" Text="{Binding ProductName}" />

                                            <TextBlock Grid.Column="3" Text="{Binding Quantity}" />

                                            <TextBlock Grid.Column="4" Foreground="#059669">
                                                <Run Text="$" />
                                                <Run Text="{Binding Total}" />
                                            </TextBlock>

                                            <TextBlock Grid.Column="5" Text="{Binding OrderDate}" />

                                            <!--<badges:StatusBadge Grid.Column="6"
                                                                Text="{Binding Status}" />-->
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!--  Footer: Showing X of Y orders  -->
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Right"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{Binding AllOrdersSummaryText}" />
                        </Grid>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
