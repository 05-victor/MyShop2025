<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shell.SalesAgentDashboardShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avatars="using:MyShop.Client.Views.Components.Avatars"
    xmlns:chat="using:MyShop.Client.Views.Components.Chat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#FF1E293B" />
        <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#FF1E293B" />
        <SolidColorBrush x:Key="NavigationViewItemForeground" Color="#FFD1D5DB" />
        <SolidColorBrush x:Key="NavigationViewItemForegroundSelected" Color="White" />
        <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver" Color="White" />
        <SolidColorBrush x:Key="NavigationViewItemBackgroundSelectedPointerOver" Color="#FF00AEEF" />
        <SolidColorBrush x:Key="NavigationViewItemBackgroundSelected" Color="#FF00AEEF" />
        <SolidColorBrush x:Key="NavigationViewItemBackgroundPointerOver" Color="#1A00AEEF" />
    </Page.Resources>

    <Grid>
        <NavigationView
            x:Name="Nav"
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="True"
            IsSettingsVisible="False"
            OpenPaneLength="260"
            PaneDisplayMode="Auto"
            SelectionChanged="Nav_SelectionChanged"
            CompactModeThresholdWidth="641"
            ExpandedModeThresholdWidth="1008">

        <NavigationView.PaneHeader>
            <Grid Height="72" Padding="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo/Icon -->
                <Border Grid.Column="0" Width="48" Height="48" 
                        Background="#00AEEF" CornerRadius="12" 
                        VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE8F2;" FontSize="24" Foreground="White"/>
                </Border>
                
                <!-- Title - Only visible when pane is open -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center"
                            Visibility="{x:Bind Nav.IsPaneOpen, Mode=OneWay}">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="MyShop2025" />
                    <TextBlock
                        FontSize="11"
                        Foreground="#9CA3AF"
                        Text="Sales Agent" />
                </StackPanel>
            </Grid>
        </NavigationView.PaneHeader>

        <!-- SALESAGENT MENU ITEMS -->
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Dashboard" Tag="dashboard">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE80F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="My Products" Tag="myProducts">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7B8;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Sales Orders" Tag="salesOrders">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7BF;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Earnings" Tag="earnings">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7DB;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Reports" Tag="reports">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE9D9;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Shopping" Tag="shopping">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE719;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Cart" Tag="cart">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7BF;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Purchase Orders" Tag="purchaseOrders">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8F1;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Content="Profile" Tag="profile">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE77B;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Settings" Tag="settings">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE713;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <NavigationViewItem Content="Logout" Tag="logout" Tapped="LogoutItem_Tapped">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7E8;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
        
        <!-- AI Chat Assistant -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,24">
            <!-- Chat Panel (Hidden by default) -->
            <chat:ChatPanel x:Name="ChatPanel" 
                           Visibility="Collapsed"
                           Margin="0,0,0,72"
                           VerticalAlignment="Bottom"/>
            
            <!-- Floating Chat Button -->
            <chat:ChatButton x:Name="ChatButton" 
                            Click="ChatButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Page>
