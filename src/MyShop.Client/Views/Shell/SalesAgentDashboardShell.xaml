<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shell.SalesAgentDashboardShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avatars="using:MyShop.Client.Views.Components.Avatars"
    xmlns:chat="using:MyShop.Client.Views.Components.Chat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- NavigationView HARDCODED colors - NO theme dependency -->
        <!-- Sidebar background: Always navy, never changes -->
        <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#1E293B"/>
        <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#1E293B"/>
        
        <!-- Text colors: ALWAYS WHITE for visibility -->
        <SolidColorBrush x:Key="NavigationViewItemForeground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavigationViewItemForegroundSelected" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavigationViewItemForegroundSelectedPointerOver" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavigationViewItemForegroundPressed" Color="#FFFFFF"/>
        
        <!-- Toggle Button (Hamburger Menu) colors -->
        <SolidColorBrush x:Key="NavigationViewItemForegroundCollapsed" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavigationViewButtonForeground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavigationViewButtonForegroundPointerOver" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavigationViewButtonForegroundPressed" Color="#FFFFFF"/>
        
        <!-- Background colors for states (Cyan theme for Agent) -->
        <SolidColorBrush x:Key="NavigationViewItemBackgroundSelected" Color="#0EA5E9"/>
        <!-- Cyan-500: Selected state -->
        <SolidColorBrush x:Key="NavigationViewItemBackgroundSelectedPointerOver" Color="#22D3EE"/>
        <!-- Cyan-400: Selected + Hover -->
        <SolidColorBrush x:Key="NavigationViewItemBackgroundPointerOver" Color="#0891B2"/>
        <!-- Cyan-600: Hover only -->
        <SolidColorBrush x:Key="NavigationViewItemBackgroundPressed" Color="#0E7490"/>
        <!-- Cyan-700: Pressed -->
    </Page.Resources>

    <Grid>
        <NavigationView
            x:Name="Nav"
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="True"
            IsSettingsVisible="False"
            OpenPaneLength="260"
            PaneDisplayMode="Auto"
            SelectionChanged="Nav_SelectionChanged"
            CompactModeThresholdWidth="641"
            ExpandedModeThresholdWidth="1008">

        <NavigationView.PaneHeader>
            <Grid Height="72" Padding="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image Grid.Column="0" 
                       Width="48" 
                       Height="48" 
                       Source="/Assets/Images/logo.png"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
                
                <!-- Title - Only visible when pane is open -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center"
                            Visibility="{x:Bind Nav.IsPaneOpen, Mode=OneWay}">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{ThemeResource AgentNavHeaderForeground}"
                        Text="MyShop2025" />
                    <TextBlock
                        FontSize="11"
                        Foreground="{ThemeResource Gray500Brush}"
                        Text="Sales Agent" />
                </StackPanel>
            </Grid>
        </NavigationView.PaneHeader>

        <!-- SALESAGENT MENU ITEMS -->
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Dashboard" Tag="dashboard" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE80F;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="My Products" Tag="myProducts" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7B8;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Sales Orders" Tag="salesOrders" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7BF;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Earnings" Tag="earnings" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7DB;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Reports" Tag="reports" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE9D9;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Shopping" Tag="shopping" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE719;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Cart" Tag="cart" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7BF;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Purchase Orders" Tag="purchaseOrders" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE8F1;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Content="Profile" Tag="profile" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE77B;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Settings" Tag="settings" Foreground="#FFFFFF">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE713;" Foreground="#FFFFFF" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <NavigationViewItem Content="Logout" Tag="logout" Tapped="LogoutItem_Tapped" Foreground="#FFFFFF">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7E8;" Foreground="#FFFFFF"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
        
        <!-- AI Chat Assistant -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,24">
            <!-- Chat Panel (Hidden by default) -->
            <chat:ChatPanel x:Name="ChatPanel" 
                           Visibility="Collapsed"
                           Margin="0,0,0,72"
                           VerticalAlignment="Bottom"/>
            
            <!-- Floating Chat Button -->
            <chat:ChatButton x:Name="ChatButton" 
                            Click="ChatButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Page>
