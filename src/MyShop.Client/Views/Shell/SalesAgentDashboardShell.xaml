<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shell.SalesAgentDashboardShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avatars="using:MyShop.Client.Views.Components.Avatars"
    xmlns:chat="using:MyShop.Client.Views.Components.Chat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Navigation colors from theme resources - use AgentNav* brushes from DarkTheme/LightTheme -->
        <StaticResource x:Key="NavigationViewExpandedPaneBackground" ResourceKey="AgentNavPaneBackground"/>
        <StaticResource x:Key="NavigationViewDefaultPaneBackground" ResourceKey="AgentNavPaneBackground"/>
        
        <!-- Text colors: Use theme resources -->
        <StaticResource x:Key="NavigationViewItemForeground" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewItemForegroundSelected" ResourceKey="AgentNavItemForegroundSelected"/>
        <StaticResource x:Key="NavigationViewItemForegroundPointerOver" ResourceKey="AgentNavItemForegroundPointerOver"/>
        <StaticResource x:Key="NavigationViewItemForegroundSelectedPointerOver" ResourceKey="AgentNavItemForegroundSelected"/>
        <StaticResource x:Key="NavigationViewItemForegroundPressed" ResourceKey="AgentNavItemForeground"/>
        
        <!-- Toggle Button (Hamburger Menu) colors -->
        <StaticResource x:Key="NavigationViewItemForegroundCollapsed" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewButtonForeground" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewButtonForegroundPointerOver" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewButtonForegroundPressed" ResourceKey="AgentNavItemForeground"/>
        
        <!-- Background colors for states (Cyan theme for Agent) - use theme resources -->
        <StaticResource x:Key="NavigationViewItemBackgroundSelected" ResourceKey="AgentNavItemBackgroundSelected"/>
        <StaticResource x:Key="NavigationViewItemBackgroundSelectedPointerOver" ResourceKey="AgentNavItemBackgroundSelectedPointerOver"/>
        <StaticResource x:Key="NavigationViewItemBackgroundPointerOver" ResourceKey="AgentNavItemBackgroundPointerOver"/>
        <StaticResource x:Key="NavigationViewItemBackgroundPressed" ResourceKey="AgentNavItemBackgroundPointerOver"/>
    </Page.Resources>

    <Grid>
        <NavigationView
            x:Name="Nav"
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="True"
            IsSettingsVisible="False"
            OpenPaneLength="260"
            PaneDisplayMode="Auto"
            SelectionChanged="Nav_SelectionChanged"
            CompactModeThresholdWidth="641"
            ExpandedModeThresholdWidth="1008">

        <NavigationView.PaneHeader>
            <Grid Height="72" Padding="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image Grid.Column="0" 
                       Width="48" 
                       Height="48" 
                       Source="/Assets/Images/logo.png"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
                
                <!-- Title - Only visible when pane is open -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center"
                            Visibility="{x:Bind Nav.IsPaneOpen, Mode=OneWay}">
                    <TextBlock
                        FontSize="{StaticResource FontSize_XL}"
                        FontWeight="Bold"
                        Foreground="{ThemeResource AgentNavHeaderForeground}"
                        Text="MyShop2025" />
                    <TextBlock
                        FontSize="{StaticResource FontSize_XS}"
                        Foreground="{ThemeResource Gray500Brush}"
                        Text="Sales Agent" />
                </StackPanel>
            </Grid>
        </NavigationView.PaneHeader>

        <!-- SALESAGENT MENU ITEMS - Populated dynamically from NavRegistry in code-behind -->

            <NavigationView.PaneFooter>
                <NavigationViewItem Content="Logout" Tag="logout" Tapped="LogoutItem_Tapped" Foreground="{ThemeResource AgentNavItemForeground}">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7E8;" Foreground="{ThemeResource AgentNavItemForeground}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
        
        <!-- AI Chat Assistant -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,24">
            <!-- Chat Panel (Hidden by default) -->
            <chat:ChatPanel x:Name="ChatPanel" 
                           Visibility="Collapsed"
                           Margin="0,0,0,72"
                           VerticalAlignment="Bottom"/>
            
            <!-- Floating Chat Button -->
            <chat:ChatButton x:Name="ChatButton" 
                            Click="ChatButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Page>
