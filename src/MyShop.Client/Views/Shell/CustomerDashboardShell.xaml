<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shell.CustomerDashboardShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avatars="using:MyShop.Client.Views.Components.Avatars"
    xmlns:chat="using:MyShop.Client.Views.Components.Chat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Navigation colors from theme resources - use AgentNav* brushes from DarkTheme/LightTheme -->
        <StaticResource x:Key="NavigationViewExpandedPaneBackground" ResourceKey="AgentNavPaneBackground"/>
        <StaticResource x:Key="NavigationViewDefaultPaneBackground" ResourceKey="AgentNavPaneBackground"/>
        
        <!-- Text colors: Use theme resources -->
        <StaticResource x:Key="NavigationViewItemForeground" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewItemForegroundSelected" ResourceKey="AgentNavItemForegroundSelected"/>
        <StaticResource x:Key="NavigationViewItemForegroundPointerOver" ResourceKey="AgentNavItemForegroundPointerOver"/>
        <StaticResource x:Key="NavigationViewItemForegroundSelectedPointerOver" ResourceKey="AgentNavItemForegroundSelected"/>
        <StaticResource x:Key="NavigationViewItemForegroundPressed" ResourceKey="AgentNavItemForeground"/>
        
        <!-- Toggle Button (Hamburger Menu) colors -->
        <StaticResource x:Key="NavigationViewItemForegroundCollapsed" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewButtonForeground" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewButtonForegroundPointerOver" ResourceKey="AgentNavItemForeground"/>
        <StaticResource x:Key="NavigationViewButtonForegroundPressed" ResourceKey="AgentNavItemForeground"/>
        
        <!-- Background colors for states (Cyan theme for Customer) - use theme resources -->
        <StaticResource x:Key="NavigationViewItemBackgroundSelected" ResourceKey="AgentNavItemBackgroundSelected"/>
        <StaticResource x:Key="NavigationViewItemBackgroundSelectedPointerOver" ResourceKey="AgentNavItemBackgroundSelectedPointerOver"/>
        <StaticResource x:Key="NavigationViewItemBackgroundPointerOver" ResourceKey="AgentNavItemBackgroundPointerOver"/>
        <StaticResource x:Key="NavigationViewItemBackgroundPressed" ResourceKey="AgentNavItemBackgroundPointerOver"/>
    </Page.Resources>

    <Grid>
        <NavigationView
            x:Name="Nav"
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="True"
            IsSettingsVisible="False"
            OpenPaneLength="245"
            PaneDisplayMode="Auto"
            SelectionChanged="Nav_SelectionChanged"
            CompactModeThresholdWidth="641"
            ExpandedModeThresholdWidth="1008">

        <NavigationView.PaneHeader>
            <Grid Height="72" Padding="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image Grid.Column="0" 
                       Width="48" 
                       Height="48" 
                       Source="ms-appx:///Assets/Images/logo.png"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
                
                <!-- Title - Only visible when pane is open -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center"
                            Visibility="{x:Bind Nav.IsPaneOpen, Mode=OneWay}">
                    <TextBlock
                        FontSize="{StaticResource FontSize_XL}"
                        FontWeight="Bold"
                        Foreground="{ThemeResource AgentNavHeaderForeground}"
                        Text="MyShop2025" />
                    <TextBlock
                        FontSize="{StaticResource FontSize_XS}"
                        Foreground="{ThemeResource Gray500Brush}"
                        Text="Welcome back!" />
                </StackPanel>
            </Grid>
        </NavigationView.PaneHeader>

        <!-- CUSTOMER MENU ITEMS -->
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Home" Tag="home" Foreground="{ThemeResource WhiteBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE80F;" Foreground="{ThemeResource WhiteBrush}" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Shopping" Tag="shopping" Foreground="{ThemeResource WhiteBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE719;" Foreground="{ThemeResource WhiteBrush}" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Cart" Tag="cart" Foreground="{ThemeResource WhiteBrush}">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7BF;" Foreground="{ThemeResource WhiteBrush}" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

            <NavigationViewItem Content="Purchase Orders" Tag="purchaseOrders" Foreground="{ThemeResource WhiteBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7B8;" Foreground="{ThemeResource WhiteBrush}" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Content="Profile" Tag="profile" Foreground="{ThemeResource WhiteBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE77B;" Foreground="{ThemeResource WhiteBrush}" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Settings" Tag="settings" Foreground="{ThemeResource WhiteBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE713;" Foreground="{ThemeResource WhiteBrush}" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <!--  Become Sales Agent - Visible for all customers  -->
            <NavigationViewItem Content="Become Sales Agent" 
                                Tag="becomeAgent"
                                Foreground="{ThemeResource WhiteBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE735;" Foreground="{ThemeResource AccentBlueBrush}"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator x:Name="BecomeAdminSeparator" Visibility="Collapsed"/>

            <!--  Become Admin - Only visible when no admin exists  -->
            <NavigationViewItem x:Name="BecomeAdminItem" 
                                Content="Become Admin" 
                                Tag="becomeAdmin"
                                Visibility="Collapsed"
                                Tapped="BecomeAdminItem_Tapped"
                                Foreground="{ThemeResource WhiteBrush}">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7EE;" Foreground="{ThemeResource WarningAmberBrush}"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <NavigationViewItem Content="Logout" Tag="logout" Tapped="LogoutItem_Tapped" Foreground="{ThemeResource WhiteBrush}">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7E8;" Foreground="{ThemeResource WhiteBrush}"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
        
        <!-- AI Chat Assistant -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,24">
            <!-- Chat Panel (Hidden by default) -->
            <chat:ChatPanel x:Name="ChatPanel" 
                           Visibility="Collapsed"
                           Margin="0,0,0,72"
                           VerticalAlignment="Bottom"/>
            
            <!-- Floating Chat Button -->
            <chat:ChatButton x:Name="ChatButton" 
                            Click="ChatButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Page>
