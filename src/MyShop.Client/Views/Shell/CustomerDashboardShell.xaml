<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Shell.CustomerDashboardShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avatars="using:MyShop.Client.Views.Components.Avatars"
    xmlns:chat="using:MyShop.Client.Views.Components.Chat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- NavigationView theme overrides - Reference centralized theme colors -->
        <!-- Use StaticResource to reference theme-defined brushes -->
        <StaticResource x:Key="NavigationViewExpandedPaneBackground" ResourceKey="AgentNavPaneBackground" />
        <StaticResource x:Key="NavigationViewDefaultPaneBackground" ResourceKey="AgentNavPaneBackground" />
        <StaticResource x:Key="NavigationViewItemForeground" ResourceKey="AgentNavItemForeground" />
        <StaticResource x:Key="NavigationViewItemForegroundSelected" ResourceKey="AgentNavItemForegroundSelected" />
        <StaticResource x:Key="NavigationViewItemForegroundPointerOver" ResourceKey="AgentNavItemForegroundPointerOver" />
        <StaticResource x:Key="NavigationViewItemBackgroundSelectedPointerOver" ResourceKey="AgentNavItemBackgroundSelectedPointerOver" />
        <StaticResource x:Key="NavigationViewItemBackgroundSelected" ResourceKey="AgentNavItemBackgroundSelected" />
        <StaticResource x:Key="NavigationViewItemBackgroundPointerOver" ResourceKey="AgentNavItemBackgroundPointerOver" />
    </Page.Resources>

    <Grid>
        <NavigationView
            x:Name="Nav"
            CompactPaneLength="48"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="True"
            IsSettingsVisible="False"
            OpenPaneLength="260"
            PaneDisplayMode="Auto"
            SelectionChanged="Nav_SelectionChanged"
            CompactModeThresholdWidth="641"
            ExpandedModeThresholdWidth="1008">

        <NavigationView.PaneHeader>
            <Grid Height="72" Padding="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image Grid.Column="0" 
                       Width="48" 
                       Height="48" 
                       Source="/Assets/Images/logo.png"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
                
                <!-- Title - Only visible when pane is open -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center"
                            Visibility="{x:Bind Nav.IsPaneOpen, Mode=OneWay}">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{ThemeResource AgentNavHeaderForeground}"
                        Text="MyShop2025" />
                    <TextBlock
                        FontSize="11"
                        Foreground="{ThemeResource Gray500Brush}"
                        Text="Welcome back!" />
                </StackPanel>
            </Grid>
        </NavigationView.PaneHeader>

        <!-- CUSTOMER MENU ITEMS -->
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Home" Tag="home">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE80F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Shopping" Tag="shopping">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE719;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Cart" Tag="cart">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7BF;" />
                </NavigationViewItem.Icon>
                <NavigationViewItem.InfoBadge>
                    <InfoBadge Value="{x:Bind ViewModel.CartCount, Mode=OneWay}" />
                </NavigationViewItem.InfoBadge>
            </NavigationViewItem>

            <NavigationViewItem Content="Purchase Orders" Tag="purchaseOrders">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7B8;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem Content="Profile" Tag="profile">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE77B;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Settings" Tag="settings">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE713;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator x:Name="BecomeAdminSeparator" Visibility="Collapsed"/>

            <!--  Become Admin - Only visible when no admin exists  -->
            <NavigationViewItem x:Name="BecomeAdminItem" 
                                Content="Become Admin" 
                                Tag="becomeAdmin"
                                Visibility="Collapsed"
                                Tapped="BecomeAdminItem_Tapped">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE7EE;" Foreground="{ThemeResource WarningAmberBrush}"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <NavigationViewItem Content="Logout" Tag="logout" Tapped="LogoutItem_Tapped">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7E8;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
        
        <!-- AI Chat Assistant -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,24">
            <!-- Chat Panel (Hidden by default) -->
            <chat:ChatPanel x:Name="ChatPanel" 
                           Visibility="Collapsed"
                           Margin="0,0,0,72"
                           VerticalAlignment="Bottom"/>
            
            <!-- Floating Chat Button -->
            <chat:ChatButton x:Name="ChatButton" 
                            Click="ChatButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Page>
