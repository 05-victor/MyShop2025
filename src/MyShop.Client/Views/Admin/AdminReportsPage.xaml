<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Admin.AdminReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.Admin"
    xmlns:charts="using:MyShop.Client.Views.Components.Charts"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />

        <!--  Style cho các Card  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Padding" Value="24" />
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
        <StackPanel Padding="24" Spacing="24">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        Foreground="#111827"
                        Style="{StaticResource DisplayHeadingStyle}"
                        Text="My Reports" />
                    <TextBlock
                        Margin="0,4,0,0"
                        FontSize="14"
                        Foreground="#6B7280"
                        Text="View performance insights and revenue trends" />
                </StackPanel>

                <!--
                    Right side actions (optional)
                    Nếu muốn sau này có thể thêm nút Refresh/Export giống SalesOrdersPage ở đây
                -->
            </Grid>

            <!--  Header với Filters  -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <!--  First Row: Preset Date Range and Category  -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ComboBox
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            DisplayMemberPath="Display"
                            Header="Quick Date Range"
                            ItemsSource="{Binding DateRanges, Mode=OneWay}"
                            SelectedItem="{x:Bind ViewModel.SelectedDateRange, Mode=TwoWay}"
                            SelectedValuePath="Value" />

                        <ComboBox
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Header="Category"
                            ItemsSource="{Binding Categories, Mode=OneWay}"
                            SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}" />
                    </Grid>

                    <!--  Second Row: Custom Date Range  -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CalendarDatePicker
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}"
                            Header="Custom Start Date"
                            PlaceholderText="Select start date" />

                        <CalendarDatePicker
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}"
                            Header="Custom End Date"
                            PlaceholderText="Select end date" />

                        <Button
                            Grid.Column="3"
                            VerticalAlignment="Bottom"
                            Command="{x:Bind ViewModel.ExportReportCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE896;" />
                                <TextBlock Text="Export Report" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!--  Charts Grid  -->
            <Grid ColumnSpacing="24" RowSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Revenue Trend  -->
                <charts:LineChartCard
                    Grid.Row="0"
                    Grid.Column="0"
                    Title="Revenue Trend"
                    Series="{Binding RevenueSeries, Mode=OneWay}"
                    ChartHeight="300"
                    ShowLegend="Visible"
                    Legend1Text="Revenue"
                    ShowMenu="Visible" />

                <!--  Orders per Category  -->
                <charts:BarChartCard
                    Grid.Row="0"
                    Grid.Column="1"
                    Title="Orders per Category"
                    Series="{Binding OrdersByCategorySeries, Mode=OneWay}"
                    ChartHeight="300"
                    ShowMenu="Visible" />

                <!--  Admin Only - Product Rating Breakdown  -->
                <charts:PieChartCard
                    Grid.Row="1"
                    Grid.Column="0"
                    Title="Product Rating Breakdown"
                    Series="{Binding RatingDistributionSeries, Mode=OneWay}"
                    ChartHeight="300"
                    ShowMenu="Visible" />

                <!--  Admin Only - Salesperson Contributions  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Salesperson Contributions" />
                        <!-- COPILOT-FIX STEP 6: Changed to {Binding} to prevent ItemsControl crash -->
                        <ItemsControl ItemsSource="{Binding SalespersonData, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Margin="0,0,0,8"
                                        Padding="12"
                                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        CornerRadius="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Width="40"
                                            Height="40"
                                            Margin="0,0,12,0"
                                            Background="CornflowerBlue"
                                            CornerRadius="20">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{Binding Initials}" />
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                            <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{Binding Sales}" />
                                                <Run Text=" sales" />
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                            <TextBlock FontWeight="SemiBold" Foreground="Green">
                                                <Run Text="$" /><Run Text="{Binding Revenue}" />
                                            </TextBlock>
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="revenue" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Summary Table  -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,16"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Product Summary" />
                    <!-- COPILOT-FIX STEP 6: Changed {x:Bind} to {Binding Mode=OneWay} to prevent DataGrid crash -->
                    <controls:DataGrid AutoGenerateColumns="False" ItemsSource="{Binding FilteredProducts, Mode=OneWay}">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name}"
                                Header="Product" />

                            <controls:DataGridTemplateColumn Header="Category">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Padding="6,4"
                                            HorizontalAlignment="Left"
                                            BorderBrush="{ThemeResource TextFillColorDisabledBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <TextBlock FontSize="12" Text="{Binding Category}" />
                                        </Border>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTextColumn Binding="{Binding Sold}" Header="Total Orders" />
                            <controls:DataGridTemplateColumn Header="Total Revenue">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock><Run Text="$" /><Run Text="{Binding Revenue}" /></TextBlock>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTemplateColumn Header="Avg Rating">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock><Run Text="{Binding Rating}" /><Run Text=" ★" /></TextBlock>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTemplateColumn Header="My Commission" Visibility="Collapsed">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock><Run Text="$" /><Run Text="{Binding Commission}" /></TextBlock>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTextColumn Binding="{Binding Stock}" Header="Stock" />

                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </StackPanel>
            </Border>

            <!--  Generate Full Report Button  -->
            <Button
                Padding="32,8"
                HorizontalAlignment="Center"
                Command="{x:Bind ViewModel.ExportReportCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE896;" />
                    <TextBlock Text="Generate Full Report" />
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="{ThemeResource LayerFillColorDefaultBrush}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="24">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                              Width="64"
                              Height="64" />
                <TextBlock Text="Loading reports..."
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
