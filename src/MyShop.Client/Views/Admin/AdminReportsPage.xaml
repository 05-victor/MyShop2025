<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Admin.AdminReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.Admin"
    xmlns:charts="using:MyShop.Client.Views.Components.Charts"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:forms="using:MyShop.Client.Views.Components.Forms"
    xmlns:cards="using:MyShop.Client.Views.Components.Cards"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:StockToStatusConverter x:Key="StockToStatusConverter" />

        <!--  Style cho các Card  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Padding" Value="24" />
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
        <StackPanel Padding="24" Spacing="24">

            <layout:PageHeader
                Title="My Reports"
                Subtitle="View performance insights and revenue trends" />

            <!--  Header với Filters  -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#111827"
                        Text="Filters" />

                    <!--  First Row: Quick Date Range and Category  -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <forms:LabeledComboBox
                            x:Name="DateRangeComboBox"
                            Grid.Column="0"
                            Label="Quick Date Range"
                            ItemsSource="{Binding DateRanges, Mode=OneWay}"
                            DisplayMemberPath="Display"
                            SelectedValuePath="Value"
                            SelectedIndex="0"
                            SelectionChanged="DateRangeComboBox_SelectionChanged" />

                        <forms:LabeledComboBox
                            x:Name="CategoryComboBox"
                            Grid.Column="1"
                            Label="Category"
                            ItemsSource="{Binding Categories, Mode=OneWay}"
                            SelectedIndex="0"
                            SelectionChanged="CategoryComboBox_SelectionChanged" />
                    </Grid>

                    <!--  Second Row: Custom Date Range  -->
                    <forms:DateRangePicker
                        StartLabel="Custom Start Date"
                        EndLabel="Custom End Date"
                        StartDate="{x:Bind ViewModel.StartDate, Mode=TwoWay}"
                        EndDate="{x:Bind ViewModel.EndDate, Mode=TwoWay}"
                        StartDateChanged="StartDatePicker_DateChanged"
                        EndDateChanged="EndDatePicker_DateChanged" />

                    <!--  Apply Filters Button  -->
                    <buttons:IconButton
                        Margin="0,8,0,0"
                        HorizontalAlignment="Right"
                        Variant="Filled"
                        IconGlyph="&#xE71C;"
                        Text="Apply Filters"
                        Click="ApplyFiltersButton_Click" />
                </StackPanel>
            </Border>

            <!--  Export Section  -->
            <cards:ExportCard
                Title="Export Report"
                Description="Download the current report data as a CSV file"
                ButtonText="Export CSV"
                Tooltip="Export report to CSV file"
                ExportRequested="ExportButton_Click" />

            <!--  Charts Grid  -->
            <Grid ColumnSpacing="24" RowSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Revenue Trend  -->
                <charts:LineChartCard
                    x:Name="RevenueChart"
                    Grid.Row="0"
                    Grid.Column="0"
                    Title="Revenue Trend"
                    Series="{Binding RevenueSeries, Mode=OneWay}"
                    ChartHeight="300"
                    ShowLegend="Visible"
                    Legend1Text="Revenue"
                    ShowMenu="Visible"
                    RefreshRequested="Chart_RefreshRequested"
                    ExportRequested="Chart_ExportRequested" />

                <!--  Orders per Category  -->
                <charts:BarChartCard
                    x:Name="OrdersChart"
                    Grid.Row="0"
                    Grid.Column="1"
                    Title="Orders per Category"
                    Series="{Binding OrdersByCategorySeries, Mode=OneWay}"
                    ChartHeight="300"
                    ShowMenu="Visible"
                    RefreshRequested="Chart_RefreshRequested"
                    ExportRequested="Chart_ExportRequested" />

                <!--  Admin Only - Product Rating Breakdown  -->
                <charts:PieChartCard
                    x:Name="RatingsChart"
                    Grid.Row="1"
                    Grid.Column="0"
                    Title="Product Rating Breakdown"
                    Series="{Binding RatingDistributionSeries, Mode=OneWay}"
                    ChartHeight="300"
                    ShowMenu="Visible"
                    RefreshRequested="Chart_RefreshRequested"
                    ExportRequested="Chart_ExportRequested" />

                <!--  Admin Only - Salesperson Contributions  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    x:Name="SalespersonCard"
                    Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Salesperson Contributions" />
                        <!-- Changed to {Binding} to prevent ItemsControl crash -->
                        <ItemsControl ItemsSource="{Binding SalespersonData, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Margin="0,0,0,8"
                                        Padding="12"
                                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        CornerRadius="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Width="40"
                                            Height="40"
                                            Margin="0,0,12,0"
                                            Background="CornflowerBlue"
                                            CornerRadius="20">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{Binding Initials}" />
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                            <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{Binding Sales}" />
                                                <Run Text=" sales" />
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Column="2"
                                            Margin="0,0,12,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                            <TextBlock FontWeight="SemiBold" Foreground="Green">
                                                <Run Text="$" /><Run Text="{Binding Revenue}" />
                                            </TextBlock>
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="revenue" />
                                        </StackPanel>
                                        <!--  View Details Button  -->
                                        <buttons:IconButton
                                            Grid.Column="3"
                                            Variant="Ghost"
                                            IconGlyph="&#xE8A7;"
                                            IconColor="#6B7280"
                                            Click="ViewSalespersonDetails_Click"
                                            Tag="{Binding}"
                                            ToolTipService.ToolTip="View details" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Summary Table  -->
            <Border x:Name="ProductSummaryCard" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,16"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="Product Summary" />
                    <!-- Changed {x:Bind} to {Binding Mode=OneWay} to prevent DataGrid crash -->
                    <controls:DataGrid 
                        x:Name="ProductSummaryDataGrid"
                        AutoGenerateColumns="False" 
                        ItemsSource="{Binding FilteredProducts, Mode=OneWay}"
                        IsReadOnly="True"
                        SelectionMode="Single">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name}"
                                Header="Product" />

                            <controls:DataGridTemplateColumn Header="Category">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Padding="6,4"
                                            HorizontalAlignment="Left"
                                            BorderBrush="{ThemeResource TextFillColorDisabledBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <TextBlock FontSize="12" Text="{Binding Category}" />
                                        </Border>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTextColumn Binding="{Binding Sold}" Header="Total Orders" />
                            <controls:DataGridTemplateColumn Header="Total Revenue">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="#10B981"><Run Text="$" /><Run Text="{Binding Revenue}" /></TextBlock>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTemplateColumn Header="Avg Rating">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="{Binding Rating}" />
                                            <FontIcon FontSize="12" Foreground="#F59E0B" Glyph="&#xE735;" />
                                        </StackPanel>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTemplateColumn Header="Status">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            CornerRadius="4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#D1FAE5" />
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#059669">
                                                <TextBlock.Text>
                                                    <Binding Path="Stock" Converter="{StaticResource StockToStatusConverter}" FallbackValue="In Stock" />
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTemplateColumn Header="Actions">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <buttons:IconButton
                                            Variant="Ghost"
                                            IconGlyph="&#xE8A7;"
                                            IconColor="#6B7280"
                                            Click="ViewProductDetails_Click"
                                            Tag="{Binding}"
                                            ToolTipService.ToolTip="View details" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="{ThemeResource LayerFillColorDefaultBrush}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="24">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                              Width="64"
                              Height="64" />
                <TextBlock Text="Loading reports..."
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Product Details Dialog -->
        <ContentDialog
            x:Name="ProductDetailsDialog"
            Title="Product Performance Details"
            PrimaryButtonText="Close"
            DefaultButton="Primary"
            MinWidth="500">
            <StackPanel Spacing="16" MinWidth="400">
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Text="Product:" />
                    <TextBlock x:Name="ProductDetailName" Grid.Row="0" Grid.Column="1" />

                    <TextBlock Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Text="Category:" />
                    <Border Grid.Row="1" Grid.Column="1" Padding="8,4" HorizontalAlignment="Left" CornerRadius="4" BorderThickness="1" BorderBrush="{ThemeResource TextFillColorDisabledBrush}">
                        <TextBlock x:Name="ProductDetailCategory" FontSize="12" />
                    </Border>

                    <TextBlock Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Text="Total Orders:" />
                    <TextBlock x:Name="ProductDetailOrders" Grid.Row="2" Grid.Column="1" />

                    <TextBlock Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Text="Revenue:" />
                    <TextBlock x:Name="ProductDetailRevenue" Grid.Row="3" Grid.Column="1" Foreground="#10B981" />

                    <TextBlock Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" Text="Rating:" />
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                        <TextBlock x:Name="ProductDetailRating" />
                        <FontIcon FontSize="12" Foreground="#F59E0B" Glyph="&#xE735;" />
                    </StackPanel>

                    <TextBlock Grid.Row="5" Grid.Column="0" FontWeight="SemiBold" Text="Stock:" />
                    <TextBlock x:Name="ProductDetailStock" Grid.Row="5" Grid.Column="1" />
                </Grid>
            </StackPanel>
        </ContentDialog>

        <!-- Salesperson Details Dialog -->
        <ContentDialog
            x:Name="SalespersonDetailsDialog"
            Title="Salesperson Performance Details"
            PrimaryButtonText="Close"
            DefaultButton="Primary"
            MinWidth="500">
            <StackPanel Spacing="16" MinWidth="400">
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Text="Name:" />
                    <TextBlock x:Name="SalespersonDetailName" Grid.Row="0" Grid.Column="1" />

                    <TextBlock Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Text="Total Sales:" />
                    <TextBlock x:Name="SalespersonDetailSales" Grid.Row="1" Grid.Column="1" />

                    <TextBlock Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Text="Revenue:" />
                    <TextBlock x:Name="SalespersonDetailRevenue" Grid.Row="2" Grid.Column="1" Foreground="#10B981" />

                    <TextBlock Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Text="Commission:" />
                    <TextBlock x:Name="SalespersonDetailCommission" Grid.Row="3" Grid.Column="1" Foreground="#8B5CF6" />
                </Grid>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>
