<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Admin.AdminUsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#F8FAFC"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:CountToVisibilityConverter x:Key="CountToVisibility" />
        <converters:CountToVisibilityConverter x:Key="InvertCountToVisibility" IsInverted="True" />

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="24" />
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="32" Spacing="24">

                <!--  Header  -->
                <Grid>
                    <StackPanel>
                        <TextBlock
                            Foreground="#111827"
                            Style="{StaticResource DisplayHeadingStyle}"
                            Text="Users Management" />
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="14"
                            Foreground="#6B7280"
                            Text="Manage all users in the system" />
                    </StackPanel>
                    <Button
                        Padding="16,12"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="#2563EB"
                        CornerRadius="8"
                        Foreground="White">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE710;" />
                                <TextBlock Text="Add New User" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>

                <!--  Filters Card  -->
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Search  -->
                        <TextBox
                            Width="300"
                            HorizontalAlignment="Left"
                            BorderBrush="#E5E7EB"
                            PlaceholderText="Search users...">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Padding" Value="12" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!--  Role Filter  -->
                        <ComboBox
                            Grid.Column="1"
                            Width="150"
                            Margin="12,0"
                            Padding="12"
                            BorderBrush="#E5E7EB"
                            PlaceholderText="All Roles">
                            <ComboBoxItem Content="All Roles" IsSelected="True" />
                            <ComboBoxItem Content="Admin" />
                            <ComboBoxItem Content="Salesman" />
                            <ComboBoxItem Content="Customer" />
                        </ComboBox>

                        <!--  Status Filter  -->
                        <ComboBox
                            Grid.Column="2"
                            Width="150"
                            Padding="12"
                            BorderBrush="#E5E7EB"
                            PlaceholderText="All Status">
                            <ComboBoxItem Content="All Status" IsSelected="True" />
                            <ComboBoxItem Content="Active" />
                            <ComboBoxItem Content="Inactive" />
                        </ComboBox>
                    </Grid>
                </Border>

                <!--  Users Table  -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">

                        <!--  Empty State - shown when no users  -->
                        <StackPanel
                            Padding="48"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="16"
                            Visibility="Collapsed">
                            <FontIcon
                                FontSize="64"
                                Foreground="#D1D5DB"
                                Glyph="&#xE77B;" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#6B7280"
                                Text="No users found"
                                TextAlignment="Center" />
                            <TextBlock
                                FontSize="14"
                                Foreground="#9CA3AF"
                                Text="Add your first user to get started"
                                TextAlignment="Center" />
                        </StackPanel>

                        <!--  Table Header  -->
                        <Grid
                            Padding="16,12"
                            Background="#F9FAFB"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#6B7280"
                                Text="User" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#6B7280"
                                Text="Role" />
                            <TextBlock
                                Grid.Column="2"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#6B7280"
                                Text="Phone" />
                            <TextBlock
                                Grid.Column="3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#6B7280"
                                Text="Status" />
                            <TextBlock
                                Grid.Column="4"
                                HorizontalAlignment="Right"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#6B7280"
                                Text="Actions" />
                        </Grid>

                        <!--  Sample User Row 1  -->
                        <Grid
                            Padding="16"
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,1,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <!--  User Info  -->
                            <StackPanel
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Spacing="12">
                                <PersonPicture
                                    Width="40"
                                    Height="40"
                                    DisplayName="John Doe" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#111827"
                                        Text="John Doe" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#6B7280"
                                        Text="john.doe@example.com" />
                                </StackPanel>
                            </StackPanel>

                            <!--  Role Badge  -->
                            <Border
                                Grid.Column="1"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#FEE2E2"
                                CornerRadius="6">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#DC2626"
                                    Text="Admin" />
                            </Border>

                            <!--  Phone  -->
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#111827"
                                Text="+1 234 567 8900" />

                            <!--  Status Badge  -->
                            <Border
                                Grid.Column="3"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#D1FAE5"
                                CornerRadius="6">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Fill="#10B981" />
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="#10B981"
                                        Text="Active" />
                                </StackPanel>
                            </Border>

                            <!--  Actions  -->
                            <StackPanel
                                Grid.Column="4"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Change Role">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE8AB;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Reset Password">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE72E;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Edit Tax Rate">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE8C8;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="#FEE2E2"
                                    BorderBrush="#FEE2E2"
                                    ToolTipService.ToolTip="Deactivate">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#DC2626"
                                        Glyph="&#xE8D8;" />
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!--  Sample User Row 2  -->
                        <Grid
                            Padding="16"
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,1,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <!--  User Info  -->
                            <StackPanel
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Spacing="12">
                                <PersonPicture
                                    Width="40"
                                    Height="40"
                                    DisplayName="Jane Smith" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#111827"
                                        Text="Jane Smith" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#6B7280"
                                        Text="jane.smith@example.com" />
                                </StackPanel>
                            </StackPanel>

                            <!--  Role Badge  -->
                            <Border
                                Grid.Column="1"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#DBEAFE"
                                CornerRadius="6">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#2563EB"
                                    Text="Salesman" />
                            </Border>

                            <!--  Phone  -->
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#111827"
                                Text="+1 234 567 8901" />

                            <!--  Status Badge  -->
                            <Border
                                Grid.Column="3"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#D1FAE5"
                                CornerRadius="6">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Fill="#10B981" />
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="#10B981"
                                        Text="Active" />
                                </StackPanel>
                            </Border>

                            <!--  Actions  -->
                            <StackPanel
                                Grid.Column="4"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Change Role">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE8AB;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Reset Password">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE72E;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Edit Tax Rate">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE8C8;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="#FEE2E2"
                                    BorderBrush="#FEE2E2"
                                    ToolTipService.ToolTip="Deactivate">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#DC2626"
                                        Glyph="&#xE8D8;" />
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!--  Sample User Row 3  -->
                        <Grid
                            Padding="16"
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,1,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <!--  User Info  -->
                            <StackPanel
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Spacing="12">
                                <PersonPicture
                                    Width="40"
                                    Height="40"
                                    DisplayName="Mike Johnson" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#111827"
                                        Text="Mike Johnson" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#6B7280"
                                        Text="mike.johnson@example.com" />
                                </StackPanel>
                            </StackPanel>

                            <!--  Role Badge  -->
                            <Border
                                Grid.Column="1"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#D1FAE5"
                                CornerRadius="6">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#10B981"
                                    Text="Customer" />
                            </Border>

                            <!--  Phone  -->
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#111827"
                                Text="+1 234 567 8902" />

                            <!--  Status Badge (Inactive)  -->
                            <Border
                                Grid.Column="3"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#F3F4F6"
                                CornerRadius="6">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Fill="#6B7280" />
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="#6B7280"
                                        Text="Inactive" />
                                </StackPanel>
                            </Border>

                            <!--  Actions  -->
                            <StackPanel
                                Grid.Column="4"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Change Role">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE8AB;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Reset Password">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE72E;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="Transparent"
                                    BorderBrush="#E5E7EB"
                                    ToolTipService.ToolTip="Edit Tax Rate">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#6B7280"
                                        Glyph="&#xE8C8;" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Background="#D1FAE5"
                                    BorderBrush="#D1FAE5"
                                    ToolTipService.ToolTip="Activate">
                                    <FontIcon
                                        FontSize="16"
                                        Foreground="#10B981"
                                        Glyph="&#xE73E;" />
                                </Button>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>

                <!--  Pagination  -->
                <Grid>
                    <StackPanel
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="#6B7280"
                            Text="Showing 1-10 of 45 users" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Padding="12,8"
                            Background="Transparent"
                            BorderBrush="#E5E7EB"
                            Content="Previous"
                            CornerRadius="8" />
                        <Button
                            Padding="12,8"
                            Background="#2563EB"
                            Content="1"
                            CornerRadius="8"
                            Foreground="White" />
                        <Button
                            Padding="12,8"
                            Background="Transparent"
                            BorderBrush="#E5E7EB"
                            Content="2"
                            CornerRadius="8" />
                        <Button
                            Padding="12,8"
                            Background="Transparent"
                            BorderBrush="#E5E7EB"
                            Content="3"
                            CornerRadius="8" />
                        <Button
                            Padding="12,8"
                            Background="Transparent"
                            BorderBrush="#E5E7EB"
                            Content="Next"
                            CornerRadius="8" />
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
