<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.Admin.AdminUsersPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:badges="using:MyShop.Client.Views.Components.Badges"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:components="using:MyShop.Client.Views.Components"
    xmlns:controls="using:MyShop.Client.Views.Components.Controls"
    xmlns:forms="using:MyShop.Client.Views.Components.Forms"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skeletons="using:MyShop.Client.Views.Components.Skeletons"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.Admin"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    xmlns:tables="using:MyShop.Client.Views.Components.Tables"
    Background="{ThemeResource PageBackgroundBrush}"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:StatusToVariantConverter x:Key="StatusToVariantConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
        <converters:CountToVisibilityConverter x:Key="InvertCountToVisibility"
                                               IsInverted="True"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <converters:BoolToGlyphConverter x:Key="BoolToGlyphConverter"/>
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">

                <!-- Large Desktop: 1920px+ -->
                <VisualState x:Name="LargeDesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="40"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Desktop: 1280-1919px -->
                <VisualState x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="32"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet: 960-1279px -->
                <VisualState x:Name="TabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="960"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="24"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet Portrait: 640-959px -->
                <VisualState x:Name="TabletPortraitState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="20"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Mobile: 0-639px (Default) -->
                <VisualState x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="16"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <RefreshContainer RefreshRequested="RefreshContainer_RefreshRequested">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Background="{ThemeResource PageBackgroundBrush}">
                <Grid x:Name="MainContent"
                      Padding="24"
                      RowSpacing="16"
                      Background="{ThemeResource PageBackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--  Header  -->
                    <layout:PageHeader
                        Grid.Row="0"
                        Title="Users Management"
                        Subtitle="Manage all users in the system">

                    </layout:PageHeader>


                    <!-- Main Content -->
                    <StackPanel Grid.Row="1"
                                Spacing="20">

                        <!--  Search Card  -->
                        <Border Style="{StaticResource CardWithShadowStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Spacing="4">
                                    <TextBlock
                                        FontSize="{StaticResource FontSize_Base}"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextTertiaryBrush}"
                                        Text="Search Users"
                                        AutomationProperties.HeadingLevel="Level2"/>
                                    <TextBlock
                                        FontSize="{StaticResource FontSize_SM}"
                                        Foreground="{ThemeResource TextSecondaryBrush}"
                                        Text="Find users by name, email, or phone number"/>
                                </StackPanel>

                                <forms:SearchCard
                                    x:Name="UserSearchCard"
                                    Grid.Column="1"
                                    Width="350"
                                    HorizontalAlignment="Right"
                                    PlaceholderText="Search users..."
                                    SearchText="{x:Bind ViewModel.PendingSearchQuery, Mode=TwoWay}"
                                    ShowSearchButton="Collapsed"
                                    TextChanged="SearchCard_TextChanged"
                                    SuggestionChosen="SearchCard_SuggestionChosen"
                                    QuerySubmitted="SearchCard_QuerySubmitted"/>
                            </Grid>
                        </Border>

                        <!--  Filters Card  -->
                        <Border Style="{StaticResource CardWithShadowStyle}">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">
                                <!--  Column 0: Role Filter (Left)  -->
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock
                                        FontSize="{StaticResource FontSize_SM}"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextSecondaryBrush}"
                                        Text="Role"/>
                                    <ComboBox
                                        x:Name="RoleComboBox"
                                        Width="150"
                                        Padding="12"
                                        BorderBrush="{ThemeResource CardStrokeBrush}"
                                        PlaceholderText="All Roles"
                                        AutomationProperties.Name="Role filter"
                                        AutomationProperties.HelpText="Filter users by role"
                                        UseSystemFocusVisuals="True"
                                        SelectionChanged="RoleComboBox_SelectionChanged">
                                        <ComboBoxItem Content="All Roles"
                                                      Tag="All Roles"
                                                      IsSelected="True"/>
                                        <ComboBoxItem Content="Admin"
                                                      Tag="Admin"/>
                                        <ComboBoxItem Content="Sales Agent"
                                                      Tag="SalesAgent"/>
                                        <ComboBoxItem Content="Customer"
                                                      Tag="Customer"/>
                                    </ComboBox>
                                </StackPanel>

                                <!--  Column 1: Spacer (fills remaining space)  -->
                                <!--  Implicit, handled by Grid column definition  -->

                                <!--  Column 2: Apply Filters Button (Right)  -->
                                <buttons:IconButton
                                    Grid.Column="2"
                                    VerticalAlignment="Bottom"
                                    Variant="Filled"
                                    IconGlyph="&#xE71C;"
                                    Text="Apply"
                                    Command="{x:Bind ViewModel.ApplyFiltersCommand}"
                                    ToolTipService.ToolTip="Apply filters"/>

                                <!--  Column 3: Reset Filters Button (Right)  -->
                                <buttons:IconButton
                                    Grid.Column="3"
                                    Margin="8,0,0,0"
                                    MinWidth="110"
                                    VerticalAlignment="Bottom"
                                    Variant="Outline"
                                    IconGlyph="&#xE72C;"
                                    Text="Reset"
                                    Command="{x:Bind ViewModel.ResetFiltersCommand}"
                                    ToolTipService.ToolTip="Reset all filters"/>

                                <!--  Column 4: Export Button with Dropdown (Right)  -->
                                <Button
                                    Grid.Column="4"
                                    Margin="8,0,0,0"
                                    MinWidth="130"
                                    Padding="16,0"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource SecondaryButtonSmallStyle}"
                                    ToolTipService.ToolTip="Export users">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE898;" FontSize="{StaticResource FontSize_Base}"/>
                                        <TextBlock Text="Export"/>
                                        <FontIcon Glyph="&#xE70D;" FontSize="{StaticResource FontSize_XS}"/>
                                    </StackPanel>
                                    <Button.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <MenuFlyoutItem Text="Export to CSV" 
                                                            Click="ExportCsvButton_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE9F9;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="Export to PDF" 
                                                            Click="ExportPdfButton_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xEA90;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                        </Border>

                        <!--  Users Table  -->
                        <Border Style="{StaticResource CardWithShadowStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--  Loading Skeleton  -->
                                <skeletons:UserListSkeleton
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!--  Empty State - shown when no users  -->
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Padding="80,60"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="20"
                                    Visibility="Collapsed">
                                    <StackPanel.ChildrenTransitions>
                                        <TransitionCollection>
                                            <EntranceThemeTransition FromVerticalOffset="50"/>
                                        </TransitionCollection>
                                    </StackPanel.ChildrenTransitions>

                                    <Viewbox Width="120"
                                             Height="120">
                                        <Grid>
                                            <Ellipse Width="120"
                                                     Height="120"
                                                     Fill="{ThemeResource SubtleBackgroundBrush}"/>
                                            <FontIcon
                                                FontSize="{StaticResource FontSize_5XL}"
                                                Foreground="{ThemeResource Gray500Brush}"
                                                Glyph="&#xE77B;"/>
                                        </Grid>
                                    </Viewbox>

                                    <TextBlock
                                        FontSize="{StaticResource FontSize_2XL}"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextTertiaryBrush}"
                                        Text="No users found"
                                        TextAlignment="Center"/>
                                    <TextBlock
                                        FontSize="{StaticResource FontSize_Base}"
                                        Foreground="{ThemeResource TextSecondaryBrush}"
                                        Text="Start by adding your first user to the system"
                                        TextAlignment="Center"
                                        MaxWidth="300"
                                        TextWrapping="Wrap"/>

                                    <buttons:IconButton
                                        Variant="Filled"
                                        IconGlyph="&#xE710;"
                                        Text="Add First User"
                                        Margin="0,12,0,0"
                                        ToolTipService.ToolTip="Create a new user account"/>
                                </StackPanel>

                                <!--  Table Header  -->
                                <tables:TableHeader Grid.Row="0">
                                    <tables:TableHeader.Columns>
                                        <x:String>3*|User</x:String>
                                        <x:String>*|Role</x:String>
                                        <x:String>2*|Phone</x:String>
                                        <x:String>*|Status</x:String>
                                        <x:String>3*|Actions|Right</x:String>
                                    </tables:TableHeader.Columns>
                                </tables:TableHeader>

                                <!--  Users List  -->
                                <ItemsRepeater Grid.Row="1"
                                        ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="viewmodels:UserViewModel">
                                            <Grid
                                                Padding="16"
                                                BorderBrush="{ThemeResource CardStrokeBrush}"
                                                BorderThickness="0,1,0,0">
                                                <Grid.ChildrenTransitions>
                                                    <TransitionCollection>
                                                        <EntranceThemeTransition/>
                                                        <RepositionThemeTransition/>
                                                    </TransitionCollection>
                                                </Grid.ChildrenTransitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>

                                                <!--  User Info  -->
                                                <tables:UserAvatarInfo
                                                    Grid.Column="0"
                                                    DisplayName="{x:Bind Name, Mode=OneWay}"
                                                    SecondaryText="{x:Bind Email, Mode=OneWay}"
                                                    AvatarUrl="{x:Bind Avatar, Mode=OneWay}"/>

                                                <!--  Role Badge  -->
                                                <Border
                                                    Grid.Column="1"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Background="{x:Bind RoleBgColor, Mode=OneWay}"
                                                    CornerRadius="6">
                                                    <TextBlock
                                                        FontSize="{StaticResource FontSize_SM}"
                                                        FontWeight="SemiBold"
                                                        Foreground="{x:Bind RoleColor, Mode=OneWay}"
                                                        Text="{x:Bind Role, Mode=OneWay}"/>
                                                </Border>

                                                <!--  Phone  -->
                                                <TextBlock
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    FontSize="{StaticResource FontSize_Base}"
                                                    Foreground="{ThemeResource TextPrimaryBrush}"
                                                    Text="{x:Bind Phone, Mode=OneWay}"/>

                                                <!--  Status Badge  -->
                                                <badges:StatusBadge
                                                    Grid.Column="3"
                                                    Text="{x:Bind Status, Mode=OneWay}"
                                                    Variant="{x:Bind Status, Mode=OneWay, Converter={StaticResource StatusToVariantConverter}}"
                                                    ShowIcon="True"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"/>

                                                <!--  Actions  -->
                                                <StackPanel
                                                    Grid.Column="4"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal"
                                                    Spacing="8">
                                                    <Button
                                                        x:Name="ViewDetailsButtonInTemplate"
                                                        Style="{StaticResource SecondaryButtonSmallStyle}"
                                                        ToolTipService.ToolTip="View user details"
                                                        CommandParameter="{x:Bind}"
                                                        Click="ViewDetailsButton_Click">
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="6">
                                                            <FontIcon FontSize="{StaticResource FontSize_Base}"
                                                                      Glyph="&#xE71B;"/>
                                                            <TextBlock Text="View Details"/>
                                                        </StackPanel>
                                                    </Button>
                                                    <Button
                                                        x:Name="DeleteButtonInTemplate"
                                                        Style="{StaticResource DangerButtonSmallStyle}"
                                                        ToolTipService.ToolTip="Delete user account"
                                                        CommandParameter="{x:Bind}"
                                                        Click="DeleteButton_Click">
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="6">
                                                            <FontIcon FontSize="{StaticResource FontSize_Base}"
                                                                      Glyph="&#xE74D;"/>
                                                            <TextBlock Text="Delete"/>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>

                            </Grid>
                        </Border>

                        <!--  Pagination (Standardized Component)  -->
                        <controls:PaginationControl
                            CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}"
                            TotalPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                            TotalItems="{x:Bind ViewModel.TotalItems, Mode=OneWay}"
                            PageSize="{x:Bind ViewModel.PageSize, Mode=TwoWay}"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </RefreshContainer>

        <!-- USER DETAILS DIALOG -->
        <ContentDialog
            x:Name="UserDetailsDialog"
            Style="{StaticResource InfoDialogStyle}"
            Title="User Details"
            DefaultButton="Close"
            CloseButtonText="Close">
            <ScrollViewer MaxWidth="500"
                          MaxHeight="600">
                <StackPanel Spacing="16"
                            Padding="0,0,16,0">

                    <!-- Loading Indicator -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsDetailsLoading, Mode=OneWay}"
                                  Visibility="{x:Bind ViewModel.IsDetailsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Width="40"
                                  Height="40"
                                  HorizontalAlignment="Center"/>

                    <!-- Avatar + Basic Info -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Ellipse x:Name="UserAvatarEllipse"
                                 Grid.Column="0"
                                 Width="80"
                                 Height="80"
                                 Fill="{ThemeResource SecondaryBlueBrush}">
                        </Ellipse>
                        <TextBlock Grid.Column="0"
                                   x:Name="UserAvatarText"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_5XL}"
                                   FontWeight="Bold"
                                   Foreground="{ThemeResource WhiteBrush}"
                                   Text="A"/>

                        <!-- Basic Info -->
                        <StackPanel Grid.Column="1"
                                    Spacing="4">
                            <TextBlock x:Name="UserFullNameText"
                                       FontSize="{StaticResource FontSize_LG}"
                                       FontWeight="Bold"
                                       Foreground="{ThemeResource TextPrimaryBrush}"
                                       Text="Full Name"/>
                            <TextBlock x:Name="UserRoleText"
                                       FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       Text="Role"/>
                        </StackPanel>
                    </Grid>

                    <!-- Divider -->
                    <Rectangle Height="1"
                               Fill="{ThemeResource CardStrokeBrush}"/>

                    <!-- Account Information -->
                    <StackPanel Spacing="12">
                        <TextBlock FontSize="{StaticResource FontSize_Base}"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextPrimaryBrush}"
                                   Text="Account Information"/>

                        <!-- Username -->
                        <StackPanel Spacing="4">
                            <TextBlock FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       Text="Username"/>
                            <TextBlock x:Name="UserUsernameText"
                                       FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextPrimaryBrush}"
                                       Text="username"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Spacing="4">
                            <TextBlock FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       Text="Email"/>
                            <TextBlock x:Name="UserEmailText"
                                       FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextPrimaryBrush}"
                                       Text="email@example.com"/>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Spacing="4">
                            <TextBlock FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       Text="Phone Number"/>
                            <TextBlock x:Name="UserPhoneText"
                                       FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextPrimaryBrush}"
                                       Text="N/A"/>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Spacing="4">
                            <TextBlock FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       Text="Address"/>
                            <TextBlock x:Name="UserAddressText"
                                       FontSize="{StaticResource FontSize_SM}"
                                       Foreground="{ThemeResource TextPrimaryBrush}"
                                       Text="N/A"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </ContentDialog>
    </Grid>
</Page>

