<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.SalesAgent.SalesAgentOrdersPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:MyShop.Client.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:badges="using:MyShop.Client.Views.Components.Badges"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:cards="using:MyShop.Client.Views.Components.Cards"
    xmlns:controls="using:MyShop.Client.Views.Components.Controls"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    xmlns:tables="using:MyShop.Client.Views.Components.Tables"
    xmlns:forms="using:MyShop.Client.Views.Components.Forms"
    xmlns:pagination="using:MyShop.Client.Views.Components.Controls"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:orderConverters="using:MyShop.Client.Converters"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.SalesAgent"
    mc:Ignorable="d"
    Background="{ThemeResource PageBackgroundBrush}">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:StatusToVariantConverter x:Key="StatusToVariantConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <orderConverters:StatusEqualsToVisibilityConverter x:Key="StatusEqualsToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">

                <!-- Large Desktop: 1920px+ -->
                <VisualState x:Name="LargeDesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainGrid.Padding"
                                Value="40"/>
                        <Setter Target="KPIGrid.ColumnSpacing"
                                Value="24"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Desktop: 1280-1919px -->
                <VisualState x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainGrid.Padding"
                                Value="32"/>
                        <Setter Target="KPIGrid.ColumnSpacing"
                                Value="20"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet: 960-1279px -->
                <VisualState x:Name="TabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="960"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainGrid.Padding"
                                Value="24"/>
                        <Setter Target="KPIGrid.ColumnSpacing"
                                Value="16"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet Portrait: 640-959px -->
                <VisualState x:Name="TabletPortraitState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainGrid.Padding"
                                Value="20"/>
                        <Setter Target="KPIGrid.ColumnSpacing"
                                Value="12"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Mobile: 0-639px (Default) -->
                <VisualState x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainGrid.Padding"
                                Value="16"/>
                        <Setter Target="KPIGrid.ColumnSpacing"
                                Value="8"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid RowDefinitions="*,Auto">
            <!-- Layer 0: Main Content (Hidden during loading) -->
            <Grid x:Name="MainContent"
                  Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <Grid.Transitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromVerticalOffset="50"/>
                    </TransitionCollection>
                </Grid.Transitions>
                <RefreshContainer RefreshRequested="RefreshContainer_RefreshRequested">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="MainGrid"
                              Padding="24"
                              RowSpacing="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Page Header Section -->
                            <StackPanel Grid.Row="0"
                                        Spacing="16">

                                <!-- PAGE HEADER -->
                                <layout:PageHeader
                                    Title="Sales Orders"
                                    Subtitle="Track and manage orders for your products">
                                    <layout:PageHeader.ActionContent>
                                        <StackPanel Orientation="Horizontal"
                                                    Spacing="12">
                                            <buttons:IconButton
                                                Variant="Outline"
                                                IconGlyph="&#xE72C;"
                                                Text="Refresh"
                                                Command="{x:Bind ViewModel.RefreshCommand}"
                                                ToolTipService.ToolTip="Reload orders from server"/>
                                            <buttons:IconButton
                                                Variant="Outline"
                                                IconGlyph="&#xE898;"
                                                Text="Export"
                                                Command="{x:Bind ViewModel.ExportOrdersCommand}"
                                                ToolTipService.ToolTip="Export orders to CSV file"/>
                                        </StackPanel>
                                    </layout:PageHeader.ActionContent>
                                </layout:PageHeader>

                            </StackPanel>

                            <!-- Main Content -->
                            <StackPanel Grid.Row="1"
                                        Spacing="20">

                                <!-- SUMMARY CARDS -->
                                <Grid x:Name="KPIGrid"
                                      ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <cards:SimpleStatCard
                                        Grid.Column="0"
                                        Label="Total Orders"
                                        Value="{x:Bind ViewModel.TotalOrders, Mode=OneWay}"/>

                                    <cards:SimpleStatCard
                                        Grid.Column="1"
                                        Label="Pending"
                                        Value="{x:Bind ViewModel.PendingOrders, Mode=OneWay}"
                                        ValueColor="{ThemeResource WarningAmberBrush}"/>

                                    <cards:SimpleStatCard
                                        Grid.Column="2"
                                        Label="Processing"
                                        Value="0"
                                        ValueColor="{ThemeResource PrimaryBrush}"/>

                                    <cards:SimpleStatCard
                                        Grid.Column="3"
                                        Label="Completed"
                                        Value="{x:Bind ViewModel.CompletedOrders, Mode=OneWay}"
                                        ValueColor="{ThemeResource SuccessGreenBrush}"/>
                                </Grid>

                                <!-- SEARCH CARD with Auto-Complete -->
                                <forms:SearchCard
                                    x:Name="OrderSearchCard"
                                    PlaceholderText="Search by order ID, customer, or product..."
                                    SearchText="{x:Bind ViewModel.SearchQuery, Mode=TwoWay}"
                                    ShowSearchButton="Collapsed"
                                    TextChanged="SearchCard_TextChanged"
                                    SuggestionChosen="SearchCard_SuggestionChosen"
                                    QuerySubmitted="SearchCard_QuerySubmitted"/>

                                <!-- FILTERS CARD with Apply Button -->
                                <forms:FilterCard Title="Filters"
                                                  ApplyCommand="{x:Bind ViewModel.ApplyFiltersCommand}"
                                                  ResetCommand="{x:Bind ViewModel.ResetFiltersCommand}"
                                                  ShowActions="True"
                                                  ShowResetButton="True">
                                    <forms:FilterCard.FilterContent>
                                        <Grid ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Order Status"
                                                           FontSize="{StaticResource FontSize_SM}"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           Margin="0,0,0,4"/>
                                                <ComboBox x:Name="StatusComboBox"
                                                          HorizontalAlignment="Stretch"
                                                          CornerRadius="8"
                                                          SelectedIndex="0"
                                                          SelectionChanged="StatusComboBox_SelectionChanged">
                                                    <ComboBoxItem Content="All Status"
                                                                  Tag="All"/>
                                                    <ComboBoxItem Content="Pending"
                                                                  Tag="Pending"/>
                                                    <ComboBoxItem Content="Confirmed"
                                                                  Tag="Confirmed"/>
                                                    <ComboBoxItem Content="Processing"
                                                                  Tag="Processing"/>
                                                    <ComboBoxItem Content="Shipped"
                                                                  Tag="Shipped"/>
                                                    <ComboBoxItem Content="Delivered"
                                                                  Tag="Delivered"/>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Payment Status"
                                                           FontSize="{StaticResource FontSize_SM}"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           Margin="0,0,0,4"/>
                                                <ComboBox x:Name="PaymentStatusComboBox"
                                                          HorizontalAlignment="Stretch"
                                                          CornerRadius="8"
                                                          SelectedIndex="0"
                                                          SelectionChanged="PaymentStatusComboBox_SelectionChanged">
                                                    <ComboBoxItem Content="All Payment Status"
                                                                  Tag="All"/>
                                                    <ComboBoxItem Content="Unpaid"
                                                                  Tag="UNPAID"/>
                                                    <ComboBoxItem Content="Paid"
                                                                  Tag="PAID"/>
                                                    <ComboBoxItem Content="Refunded"
                                                                  Tag="REFUNDED"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>
                                    </forms:FilterCard.FilterContent>
                                </forms:FilterCard>

                                <!-- ORDERS TABLE -->
                                <Border Style="{StaticResource CardWithShadowStyle}"
                                        Padding="{StaticResource Padding_None}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Table Header -->
                                        <Grid Grid.Row="0"
                                              Padding="24,16"
                                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                              BorderThickness="0,0,0,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="108"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="96"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="ORDER ID"/>
                                            <TextBlock Grid.Column="1"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="CUSTOMER"/>
                                            <TextBlock Grid.Column="2"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="ITEMS"/>
                                            <TextBlock Grid.Column="3"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="DATE"/>
                                            <TextBlock Grid.Column="4"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="TOTAL"/>
                                            <TextBlock Grid.Column="5"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="STATUS"/>
                                            <TextBlock Grid.Column="6"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="PAYMENT"/>
                                            <TextBlock Grid.Column="7"
                                                       FontWeight="SemiBold"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Text="ACTIONS"/>
                                        </Grid>

                                        <!-- Table Body -->
                                        <ItemsRepeater Grid.Row="1"
                                                       ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate x:DataType="viewmodels:OrderViewModel">
                                                    <Grid Padding="24,16"
                                                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                          BorderThickness="0,0,0,1">
                                                        <Grid.ChildrenTransitions>
                                                            <TransitionCollection>
                                                                <EntranceThemeTransition/>
                                                                <RepositionThemeTransition/>
                                                            </TransitionCollection>
                                                        </Grid.ChildrenTransitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="108"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="120"/>
                                                            <ColumnDefinition Width="96"/>
                                                            <ColumnDefinition Width="80"/>
                                                            <ColumnDefinition Width="100"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                                                   Text="{x:Bind OrderId, Mode=OneWay}"
                                                                   FontSize="{StaticResource FontSize_SM}"
                                                                   FontFamily="Consolas"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="1"
                                                                   Text="{x:Bind CustomerName, Mode=OneWay}"
                                                                   FontSize="{StaticResource FontSize_Base}"
                                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                                   VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="2"
                                                                   Text="{x:Bind ProductDescription, Mode=OneWay}"
                                                                   FontSize="{StaticResource FontSize_Base}"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="3"
                                                                   Text="{x:Bind FormattedDate, Mode=OneWay}"
                                                                   FontSize="{StaticResource FontSize_SM}"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="4"
                                                                   Text="{x:Bind TotalAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                                   FontSize="{StaticResource FontSize_Base}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                                   VerticalAlignment="Center"/>

                                                        <badges:StatusBadge Grid.Column="5"
                                                                            Text="{x:Bind Status, Mode=OneWay}"
                                                                            Variant="{x:Bind Status, Mode=OneWay, Converter={StaticResource StatusToVariantConverter}}"
                                                                            HorizontalAlignment="Left"
                                                                            VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="6"
                                                                   Text="{x:Bind PaymentStatus, Mode=OneWay}"
                                                                   FontSize="{StaticResource FontSize_SM}"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="7"
                                                                    Orientation="Horizontal"
                                                                    Spacing="8"
                                                                    VerticalAlignment="Center">
                                                            <!-- View Details Button (Always shown) -->
                                                            <Button Style="{StaticResource IconButtonStyle}"
                                                                    Command="{Binding ElementName=RootPage, Path=ViewModel.ViewOrderDetailsCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    ToolTipService.ToolTip="View order details">
                                                                <FontIcon Glyph="&#xE7A6;"
                                                                          FontSize="16"
                                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                            </Button>

                                                            <!-- Mark as Processing Button (Visible when Status == "Confirmed") -->
                                                            <Button Style="{StaticResource IconButtonStyle}"
                                                                    Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource StatusEqualsToVisibilityConverter}, ConverterParameter=Confirmed}"
                                                                    Command="{Binding ElementName=RootPage, Path=ViewModel.MarkAsProcessingCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    ToolTipService.ToolTip="Mark as processing">
                                                                <FontIcon Glyph="&#xE896;"
                                                                          FontSize="16"
                                                                          Foreground="{ThemeResource WarningAmberBrush}"/>
                                                            </Button>

                                                            <!-- Ship Button (Visible when Status == "Processing") -->
                                                            <Button Style="{StaticResource IconButtonStyle}"
                                                                    Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource StatusEqualsToVisibilityConverter}, ConverterParameter=Processing}"
                                                                    Command="{Binding ElementName=RootPage, Path=ViewModel.MarkAsShippedCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    ToolTipService.ToolTip="Mark as shipped">
                                                                <FontIcon Glyph="&#xE897;"
                                                                          FontSize="16"
                                                                          Foreground="{ThemeResource WarningAmberBrush}"/>
                                                            </Button>

                                                            <!-- Deliver Button (Visible when Status == "Shipped") -->
                                                            <Button Style="{StaticResource IconButtonStyle}"
                                                                    Visibility="{x:Bind Status, Mode=OneWay, Converter={StaticResource StatusEqualsToVisibilityConverter}, ConverterParameter=Shipped}"
                                                                    Command="{Binding ElementName=RootPage, Path=ViewModel.MarkAsDeliveredCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    ToolTipService.ToolTip="Mark as delivered">
                                                                <FontIcon Glyph="&#xE930;"
                                                                          FontSize="16"
                                                                          Foreground="{ThemeResource SuccessGreenBrush}"/>
                                                            </Button>
                                                        </StackPanel>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                    </Grid>
                                </Border>

                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </RefreshContainer>
            </Grid>

            <!-- Pagination (Migrated to PaginationControl) -->
            <Border Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,12">
                <controls:PaginationControl
                    CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}"
                    TotalPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                    TotalItems="{x:Bind ViewModel.TotalItems, Mode=OneWay}"
                    PageSize="{x:Bind ViewModel.PageSize, Mode=TwoWay}"
                    Margin="0,16,0,0"/>
            </Border>

            <!-- Layer 2: Loading Overlay (Shown during loading) -->
            <Grid x:Name="LoadingOverlay"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="24"
                            Padding="{StaticResource Padding_3XL}">
                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                  Width="64"
                                  Height="64"/>
                    <TextBlock Text="Loading orders..."
                               FontSize="{StaticResource FontSize_XL}"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Please wait while we fetch your sales orders"
                               FontSize="{StaticResource FontSize_Base}"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>