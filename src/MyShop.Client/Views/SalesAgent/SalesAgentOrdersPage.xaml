<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.SalesAgent.SalesOrdersPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:MyShop.Client.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:badges="using:MyShop.Client.Views.Components.Badges"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.SalesAgent"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <!-- No local styles needed - using Design System -->
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="24" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Page Header Section -->
            <StackPanel Grid.Row="0" Spacing="16">

            <!-- PAGE HEADER -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Sales Orders" 
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#1B1D1F"/>
                    <TextBlock Text="Track and manage orders for your products" 
                              FontSize="14" 
                              Foreground="#4A5568"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                           MinWidth="100"
                           Command="{x:Bind ViewModel.RefreshCommand}"
                           ToolTipService.ToolTip="Reload orders from server">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                            <TextBlock Text="Refresh" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}"
                           MinWidth="100"
                           Command="{x:Bind ViewModel.ExportOrdersCommand}"
                           ToolTipService.ToolTip="Export orders to CSV file">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE896;" FontSize="16"/>
                            <TextBlock Text="Export" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            </StackPanel>
            
            <!-- Main Content -->
            <StackPanel Grid.Row="1" Spacing="20">
            
            <!-- SUMMARY CARDS -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardWithShadowStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Total Orders" FontSize="14" Foreground="#6B7280"/>
                        <TextBlock Text="{x:Bind ViewModel.TotalOrders, Mode=OneWay}" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardWithShadowStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Pending" FontSize="14" Foreground="#F59E0B"/>
                        <TextBlock Text="{x:Bind ViewModel.PendingOrders, Mode=OneWay}" FontSize="32" FontWeight="Bold" Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardWithShadowStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Processing" FontSize="14" Foreground="#3B82F6"/>
                        <TextBlock Text="0" FontSize="32" FontWeight="Bold" Foreground="#3B82F6"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource CardWithShadowStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Completed" FontSize="14" Foreground="#10B981"/>
                        <TextBlock Text="{x:Bind ViewModel.CompletedOrders, Mode=OneWay}" FontSize="32" FontWeight="Bold" Foreground="#10B981"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FILTERS -->
            <Border Style="{StaticResource CardWithShadowStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.ColumnSpacing>16</Grid.ColumnSpacing>

                    <components:SearchBox Grid.Column="0"
                            PlaceholderText="Search by order ID, customer, or product..."
                            Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <ComboBox x:Name="StatusComboBox"
                             Grid.Column="1"
                             SelectedIndex="0"
                             HorizontalAlignment="Stretch"
                             CornerRadius="8"
                             SelectionChanged="StatusComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Status" Tag="All"/>
                        <ComboBoxItem Content="Pending" Tag="Pending"/>
                        <ComboBoxItem Content="Processing" Tag="Processing"/>
                        <ComboBoxItem Content="Shipped" Tag="Shipped"/>
                        <ComboBoxItem Content="Delivered" Tag="Delivered"/>
                    </ComboBox>

                    <ComboBox x:Name="SortComboBox"
                             Grid.Column="2"
                             SelectedIndex="0"
                             HorizontalAlignment="Stretch"
                             CornerRadius="8">
                        <ComboBoxItem Content="Date: Newest First" Tag="date-desc"/>
                        <ComboBoxItem Content="Date: Oldest First" Tag="date-asc"/>
                        <ComboBoxItem Content="Amount: High to Low" Tag="amount-desc"/>
                        <ComboBoxItem Content="Amount: Low to High" Tag="amount-asc"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- ORDERS TABLE -->
            <Border Style="{StaticResource CardWithShadowStyle}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Grid Grid.Row="0" 
                         Padding="24,16"
                         BorderBrush="#E5E7EB"
                         BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ORDER ID" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="1" Text="CUSTOMER" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="2" Text="PRODUCT" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="3" Text="DATE" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="4" Text="AMOUNT" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="5" Text="STATUS" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="6" Text="ACTION" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                    </Grid>

                    <!-- Table Body -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 MaxHeight="600">
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:OrderViewModel">
                                    <Grid Padding="24,16" 
                                         BorderBrush="#E5E7EB"
                                         BorderThickness="0,0,0,1">
                                        <Grid.ChildrenTransitions>
                                            <TransitionCollection>
                                                <EntranceThemeTransition />
                                                <RepositionThemeTransition />
                                            </TransitionCollection>
                                        </Grid.ChildrenTransitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="{x:Bind OrderId, Mode=OneWay}" 
                                                  FontSize="13" 
                                                  FontFamily="Consolas"
                                                  Foreground="#6B7280"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1" 
                                                  Text="{x:Bind CustomerName, Mode=OneWay}" 
                                                  FontSize="14" 
                                                  Foreground="#111827"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                  Text="{x:Bind ProductDescription, Mode=OneWay}" 
                                                  FontSize="14" 
                                                  Foreground="#6B7280"
                                                  TextTrimming="CharacterEllipsis"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="3" 
                                                  Text="{x:Bind FormattedDate, Mode=OneWay}" 
                                                  FontSize="13" 
                                                  Foreground="#6B7280"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="4" 
                                                  Text="{x:Bind TotalAmount, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#111827"
                                                  VerticalAlignment="Center"/>

                                        <Border Grid.Column="5"
                                               Padding="8,4"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Background="{x:Bind StatusBgColor, Mode=OneWay}"
                                               CornerRadius="999">
                                            <TextBlock Text="{x:Bind Status, Mode=OneWay}"
                                                      FontSize="12"
                                                      FontWeight="SemiBold"
                                                      Foreground="{x:Bind StatusColor, Mode=OneWay}"/>
                                        </Border>

                                        <Button Grid.Column="6"
                                               Padding="8"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Command="{Binding ElementName=RootPage, Path=ViewModel.ViewOrderDetailsCommand}"
                                               CommandParameter="{x:Bind}"
                                               VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xE7A6;" FontSize="16" Foreground="#6B7280"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Grid>
            </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
