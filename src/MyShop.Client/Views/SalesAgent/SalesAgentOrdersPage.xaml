<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.SalesAgent.SalesOrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:badges="using:MyShop.Client.Views.Components.Badges"
    mc:Ignorable="d"
    Background="#F3F4F6">

    <Page.Resources>
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="24" />
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="32" Spacing="24">

            <!-- PAGE HEADER -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Sales Orders" 
                              Style="{StaticResource DisplayHeadingStyle}"
                              Foreground="#111827"/>
                    <TextBlock Text="Track and manage orders for your products" 
                              FontSize="14" 
                              Foreground="#6B7280"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center">
                    <Button Padding="12,10"
                           Background="Transparent"
                           BorderBrush="#E5E7EB"
                           BorderThickness="1"
                           CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="16" Foreground="#6B7280"/>
                            <TextBlock Text="Refresh" FontSize="14" Foreground="#111827"/>
                        </StackPanel>
                    </Button>

                    <Button Padding="12,10"
                           Background="Transparent"
                           BorderBrush="#E5E7EB"
                           BorderThickness="1"
                           CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE896;" FontSize="16" Foreground="#6B7280"/>
                            <TextBlock Text="Export" FontSize="14" Foreground="#111827"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- SUMMARY CARDS -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.ColumnSpacing>16</Grid.ColumnSpacing>

                <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Total Orders" FontSize="14" Foreground="#6B7280"/>
                        <TextBlock Text="156" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Pending" FontSize="14" Foreground="#F59E0B"/>
                        <TextBlock Text="12" FontSize="32" FontWeight="Bold" Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Processing" FontSize="14" Foreground="#3B82F6"/>
                        <TextBlock Text="28" FontSize="32" FontWeight="Bold" Foreground="#3B82F6"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource CardBorderStyle}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Completed" FontSize="14" Foreground="#10B981"/>
                        <TextBlock Text="116" FontSize="32" FontWeight="Bold" Foreground="#10B981"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FILTERS -->
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.ColumnSpacing>16</Grid.ColumnSpacing>

                    <TextBox Grid.Column="0"
                            PlaceholderText="Search by order ID, customer, or product..."
                            CornerRadius="8"/>

                    <ComboBox Grid.Column="1"
                             SelectedIndex="0"
                             HorizontalAlignment="Stretch"
                             CornerRadius="8">
                        <ComboBoxItem Content="All Status"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Processing"/>
                        <ComboBoxItem Content="Shipped"/>
                        <ComboBoxItem Content="Delivered"/>
                    </ComboBox>

                    <ComboBox Grid.Column="2"
                             SelectedIndex="0"
                             HorizontalAlignment="Stretch"
                             CornerRadius="8">
                        <ComboBoxItem Content="Date: Newest First"/>
                        <ComboBoxItem Content="Date: Oldest First"/>
                        <ComboBoxItem Content="Amount: High to Low"/>
                        <ComboBoxItem Content="Amount: Low to High"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- ORDERS TABLE -->
            <Border Style="{StaticResource CardBorderStyle}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Grid Grid.Row="0" 
                         Padding="24,16"
                         BorderBrush="#E5E7EB"
                         BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ORDER ID" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="1" Text="CUSTOMER" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="2" Text="PRODUCT" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="3" Text="DATE" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="4" Text="AMOUNT" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="5" Text="STATUS" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="6" Text="ACTION" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                    </Grid>

                    <!-- Table Body -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 MaxHeight="600">
                        <StackPanel>
                            <!-- Order Row 1 -->
                            <Grid Padding="24,16" 
                                 BorderBrush="#E5E7EB"
                                 BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                          Text="ORD-156" 
                                          FontSize="13" 
                                          FontFamily="Consolas"
                                          Foreground="#6B7280"
                                          VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1" 
                                          Text="John Smith" 
                                          FontSize="14" 
                                          Foreground="#111827"
                                          VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2" 
                                          Text="iPhone 15 Pro Max" 
                                          FontSize="14" 
                                          Foreground="#6B7280"
                                          TextTrimming="CharacterEllipsis"
                                          VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="3" 
                                          Text="2025-11-20" 
                                          FontSize="13" 
                                          Foreground="#6B7280"
                                          VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="4" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#111827"
                                          VerticalAlignment="Center">
                                    <Run Text="$"/>
                                    <Run Text="1,199.00"/>
                                </TextBlock>

                                <badges:StatusBadge Grid.Column="5" 
                                                   Text="Delivered"
                                                   Variant="Success"
                                                   VerticalAlignment="Center"/>

                                <Button Grid.Column="6"
                                       Padding="8"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE7A6;" FontSize="16" Foreground="#6B7280"/>
                                </Button>
                            </Grid>

                            <!-- Order Row 2 -->
                            <Grid Padding="24,16" 
                                 BorderBrush="#E5E7EB"
                                 BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="ORD-155" 
                                          FontSize="13" FontFamily="Consolas"
                                          Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Sarah Johnson" 
                                          FontSize="14" Foreground="#111827" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="MacBook Pro 16 inch" 
                                          FontSize="14" Foreground="#6B7280"
                                          TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="2025-11-19" 
                                          FontSize="13" Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" FontSize="14" FontWeight="SemiBold"
                                          Foreground="#111827" VerticalAlignment="Center">
                                    <Run Text="$"/><Run Text="2,499.00"/>
                                </TextBlock>
                                <badges:StatusBadge Grid.Column="5" Text="Processing" Variant="Warning" VerticalAlignment="Center"/>
                                <Button Grid.Column="6" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE7A6;" FontSize="16" Foreground="#6B7280"/>
                                </Button>
                            </Grid>

                            <!-- Order Row 3 -->
                            <Grid Padding="24,16" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="ORD-154" FontSize="13" FontFamily="Consolas"
                                          Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Mike Brown" FontSize="14" Foreground="#111827" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="AirPods Pro 2" FontSize="14" Foreground="#6B7280"
                                          TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="2025-11-19" FontSize="13" Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" FontSize="14" FontWeight="SemiBold" Foreground="#111827" VerticalAlignment="Center">
                                    <Run Text="$"/><Run Text="249.00"/>
                                </TextBlock>
                                <badges:StatusBadge Grid.Column="5" Text="Pending" Variant="Warning" VerticalAlignment="Center"/>
                                <Button Grid.Column="6" Padding="8" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE7A6;" FontSize="16" Foreground="#6B7280"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
