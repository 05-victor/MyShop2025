<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.SalesAgent.SalesAgentReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShop.Client.ViewModels"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <!-- Style cho các Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="24">

            <!-- Header với Filters -->
            <Border Style="{StaticResource CardStyle}">
                <Grid ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Header="Date Range"
                              ItemsSource="{x:Bind ViewModel.DateRanges}"
                              SelectedItem="{x:Bind ViewModel.SelectedDateRange, Mode=TwoWay}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value" />

                    <ComboBox Grid.Column="1" Header="Category"
                              ItemsSource="{x:Bind ViewModel.Categories}"
                              SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}" />

                    <Button Grid.Column="2" VerticalAlignment="Bottom" 
                            Command="{x:Bind ViewModel.ExportReportCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE896;" FontSize="16"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Charts Grid -->
            <Grid ColumnSpacing="24" RowSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Revenue Trend -->
                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Revenue Trend" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                        <lvc:CartesianChart Series="{x:Bind ViewModel.RevenueSeries}" Height="300" />
                    </StackPanel>
                </Border>

                <!-- Orders per Category -->
                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Orders per Category" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                        <lvc:CartesianChart Series="{x:Bind ViewModel.OrdersByCategorySeries}" Height="300" />
                    </StackPanel>
                </Border>

                <!-- Admin Only - Product Rating Breakdown -->
                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardStyle}"
                        Visibility="{x:Bind ViewModel.IsAdmin, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Product Rating Breakdown" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                        <lvc:PieChart Series="{x:Bind ViewModel.RatingDistributionSeries}" Height="300" />
                    </StackPanel>
                </Border>

                <!-- Admin Only - Salesperson Contributions -->
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource CardStyle}"
                        Visibility="{x:Bind ViewModel.IsAdmin, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Salesperson Contributions" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{x:Bind ViewModel.SalespersonData}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="12" CornerRadius="6" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="40" Height="40" CornerRadius="20" Background="CornflowerBlue" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Initials}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{Binding Sales}"/>
                                                <Run Text=" sales"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <TextBlock FontWeight="SemiBold" Foreground="Green">
                                                <Run Text="$"/><Run Text="{Binding Revenue}"/>
                                            </TextBlock>
                                            <TextBlock Text="revenue" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Summary Table -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Product Summary" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>
                    <controls:DataGrid ItemsSource="{x:Bind ViewModel.FilteredProducts}" AutoGenerateColumns="False">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn Header="Product" Binding="{Binding Name}" Width="*"/>

                            <controls:DataGridTemplateColumn Header="Category">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,4" CornerRadius="4" BorderBrush="{ThemeResource TextFillColorDisabledBrush}" BorderThickness="1" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Category}" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTextColumn Header="Total Orders" Binding="{Binding Sold}"/>
                            <controls:DataGridTemplateColumn Header="Total Revenue">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock><Run Text="$"/><Run Text="{Binding Revenue}"/></TextBlock>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTemplateColumn Header="Avg Rating">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock><Run Text="{Binding Rating}"/><Run Text=" ★"/></TextBlock>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTemplateColumn Header="My Commission" 
                                                         Visibility="{x:Bind ViewModel.IsSalesAgent, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock><Run Text="$"/><Run Text="{Binding Commission}"/></TextBlock>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <controls:DataGridTemplateColumn Header="Status">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,4" CornerRadius="10" 
                                                Background="{Binding Stock, Converter={StaticResource StockToBrushConverter}}">
                                            <TextBlock Text="{Binding Stock, Converter={StaticResource StockToTextConverter}}" 
                                                       FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </StackPanel>
            </Border>

            <!-- Generate Full Report Button -->
            <Button Command="{x:Bind ViewModel.ExportReportCommand}" HorizontalAlignment="Center" Padding="32,8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE896;" FontSize="16"/>
                    <TextBlock Text="Generate Full Report"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</Page>
