<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MyShop.Client.Views.SalesAgent.SalesAgentReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:MyShop.Client.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:buttons="using:MyShop.Client.Views.Components.Buttons"
    xmlns:forms="using:MyShop.Client.Views.Components.Forms"
    xmlns:layout="using:MyShop.Client.Views.Components.Layout"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.SalesAgent"
    Background="{ThemeResource PageBackgroundBrush}"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:StockToBrushConverter x:Key="StockToBrushConverter"/>
        <converters:StockToTextConverter x:Key="StockToTextConverter"/>
        <converters:StockToStatusConverter x:Key="StockToStatusConverter"/>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ResponsiveStates">

                <!-- Large Desktop: 1920px+ -->
                <VisualState x:Name="LargeDesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="40"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Desktop: 1280-1919px -->
                <VisualState x:Name="DesktopState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="32"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet: 960-1279px -->
                <VisualState x:Name="TabletState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="960"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="24"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Tablet Portrait: 640-959px -->
                <VisualState x:Name="TabletPortraitState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="20"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Mobile: 0-639px (Default) -->
                <VisualState x:Name="MobileState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainContent.Padding"
                                Value="16"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Main Content -->
        <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="50"/>
                </TransitionCollection>
            </Grid.Transitions>
            <RefreshContainer RefreshRequested="RefreshContainer_RefreshRequested">
                <ScrollViewer>
                    <StackPanel x:Name="MainContent"
                                Padding="24"
                                Spacing="24">

                        <layout:PageHeader
                            Title="My Reports"
                            Subtitle="View performance insights and revenue trends"/>

                        <!--  FILTERS CARD with Apply Button  -->
                        <forms:FilterCard Title="Report Filters"
                                          ApplyCommand="{x:Bind ViewModel.ApplyFiltersCommand}"
                                          ResetCommand="{x:Bind ViewModel.ResetFiltersCommand}"
                                          ShowActions="True"
                                          ShowResetButton="True">
                            <forms:FilterCard.FilterContent>
                                <Grid ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <forms:LabeledComboBox
                                        Grid.Column="0"
                                        Label="Date Range"
                                        ItemsSource="{x:Bind ViewModel.DateRanges, Mode=OneWay}"
                                        DisplayMemberPath="Display"
                                        SelectedValuePath="Value"
                                        SelectedValue="{x:Bind ViewModel.SelectedDateRange, Mode=TwoWay}"/>

                                    <forms:LabeledComboBox
                                        Grid.Column="1"
                                        Label="Category"
                                        ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                                        SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"/>
                                </Grid>
                            </forms:FilterCard.FilterContent>
                        </forms:FilterCard>

                        <!--  Export Section  -->
                        <Border Style="{StaticResource CardWithShadowStyle}">
                            <StackPanel Spacing="16">
                                <TextBlock
                                    FontSize="{StaticResource FontSize_LG}"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                    Text="Export Report"/>

                                <TextBlock
                                    FontSize="{StaticResource FontSize_Base}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Download the current report data"/>

                                <StackPanel Orientation="Horizontal"
                                            Spacing="12">
                                    <buttons:IconButton
                                        IconGlyph="&#xE74E;"
                                        Text="Export CSV"
                                        Variant="Filled"
                                        Command="{x:Bind ViewModel.ExportReportCommand}"
                                        ToolTipService.ToolTip="Export report as CSV"
                                        AutomationProperties.Name="Export report as CSV"/>

                                    <buttons:IconButton
                                        IconGlyph="&#xEA90;"
                                        Text="Export PDF"
                                        Variant="Filled"
                                        Click="ExportPdfButton_Click"
                                        Command="{x:Bind ViewModel.ExportReportCommand}"
                                        ToolTipService.ToolTip="Export report as PDF"
                                        AutomationProperties.Name="Export report as PDF"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--  Charts Grid  -->
                        <Grid ColumnSpacing="24"
                              RowSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--  Revenue Trend  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Style="{StaticResource CardWithShadowStyle}">
                                <StackPanel>
                                    <!-- Header with Title and Predict Button -->
                                    <Grid ColumnSpacing="12"
                                          Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource SubtitleTextBlockStyle}"
                                            Text="Revenue Trend"/>
                                        <buttons:IconButton
                                            x:Name="PredictThisWeekButton"
                                            Grid.Column="1"
                                            IconGlyph="&#xE9D9;"
                                            Text="Predict this week"
                                            Variant="Filled"
                                            Click="PredictThisWeekButton_Click"
                                            ToolTipService.ToolTip="Predict this week's revenue"
                                            AutomationProperties.Name="Predict this week's revenue"/>
                                    </Grid>
                                    <!-- Full crash prevention for chart rendering -->
                                    <lvc:CartesianChart
                                        Height="300"
                                        MinHeight="200"
                                        AnimationsSpeed="0"
                                        IsHitTestVisible="False"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        Series="{x:Bind ViewModel.RevenueSeries, Mode=OneWay}"/>
                                </StackPanel>
                            </Border>

                            <!--  Orders per Category  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Style="{StaticResource CardWithShadowStyle}">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Text="Orders per Category"/>
                                    <!-- Full crash prevention for chart rendering -->
                                    <lvc:CartesianChart
                                        Height="300"
                                        MinHeight="200"
                                        AnimationsSpeed="0"
                                        IsHitTestVisible="False"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        Series="{x:Bind ViewModel.OrdersByCategorySeries, Mode=OneWay}"/>
                                </StackPanel>
                            </Border>

                            <!--  Admin Only - Product Rating Breakdown  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Style="{StaticResource CardWithShadowStyle}"
                                Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Text="Product Rating Breakdown"/>
                                    <!-- Full crash prevention for chart rendering -->
                                    <lvc:PieChart
                                        Height="300"
                                        MinHeight="200"
                                        AnimationsSpeed="0"
                                        IsHitTestVisible="False"
                                        Series="{x:Bind ViewModel.RatingDistributionSeries, Mode=OneWay}"/>
                                </StackPanel>
                            </Border>

                            <!--  Admin Only - Salesperson Contributions  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource CardWithShadowStyle}"
                                Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,16"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Text="Salesperson Contributions"/>
                                    <!-- ListView with virtualization for performance -->
                                    <ListView ItemsSource="{x:Bind ViewModel.SalespersonData, Mode=OneWay}"
                                              SelectionMode="None"
                                              IsItemClickEnabled="False"
                                              MaxHeight="400">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Stretch"/>
                                                <Setter Property="Padding"
                                                        Value="0"/>
                                                <Setter Property="Margin"
                                                        Value="0"/>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid
                                                    Margin="0,0,0,8"
                                                    Padding="{StaticResource Padding_MD}"
                                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                    CornerRadius="6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border
                                                        Width="40"
                                                        Height="40"
                                                        Margin="0,0,12,0"
                                                        Background="{ThemeResource PrimaryBrush}"
                                                        CornerRadius="8">
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="{ThemeResource WhiteBrush}"
                                                            Text="{Binding Initials}"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1"
                                                                VerticalAlignment="Center">
                                                        <TextBlock FontWeight="SemiBold"
                                                                   Text="{Binding Name}"/>
                                                        <TextBlock FontSize="{StaticResource FontSize_SM}"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{Binding Sales}"/>
                                                <Run Text=" sales"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <StackPanel
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center">
                                                        <TextBlock FontWeight="SemiBold"
                                                                   Foreground="{ThemeResource SuccessGreenBrush}">
                                                <Run Text="{Binding Revenue, Converter={StaticResource CurrencyConverter}}"/>
                                                        </TextBlock>
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            FontSize="{StaticResource FontSize_SM}"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            Text="revenue"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!--  Summary Table  -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,16"
                                    Style="{StaticResource SubtitleTextBlockStyle}"
                                    Text="Product Summary"/>
                                <!-- Changed to {x:Bind} to prevent DataGrid crash -->
                                <controls:DataGrid AutoGenerateColumns="False"
                                                   CanUserReorderColumns="False"
                                                   ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}">
                                    <controls:DataGrid.Columns>
                                        <controls:DataGridTextColumn
                                            Width="*"
                                            Binding="{Binding Name}"
                                            Header="Product"/>

                                        <controls:DataGridTemplateColumn Header="Category">
                                            <controls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        MinWidth="100"
                                                        Padding="6,4"
                                                        HorizontalAlignment="Left"
                                                        BorderBrush="{ThemeResource TextFillColorDisabledBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4">
                                                        <TextBlock FontSize="{StaticResource FontSize_SM}"
                                                                   Text="{Binding Category}"/>
                                                    </Border>
                                                </DataTemplate>
                                            </controls:DataGridTemplateColumn.CellTemplate>
                                        </controls:DataGridTemplateColumn>

                                        <controls:DataGridTextColumn Binding="{Binding Sold}"
                                                                     Header="Total Orders"/>
                                        <controls:DataGridTemplateColumn Header="Total Revenue">
                                            <controls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        FontWeight="SemiBold"
                                                        Foreground="{ThemeResource SuccessGreenBrush}"
                                                        Text="{Binding Revenue, Converter={StaticResource CurrencyConverter}}"
                                                        TextAlignment="Right"/>
                                                </DataTemplate>
                                            </controls:DataGridTemplateColumn.CellTemplate>
                                        </controls:DataGridTemplateColumn>

                                        <controls:DataGridTemplateColumn Header="Status">
                                            <controls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        MinWidth="132"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Background="{Binding Stock, Converter={StaticResource StockToBrushConverter}, ConverterParameter=Background}"
                                                        CornerRadius="4">
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            FontSize="{StaticResource FontSize_SM}"
                                                            FontWeight="SemiBold"
                                                            Foreground="{Binding Stock, Converter={StaticResource StockToBrushConverter}, ConverterParameter=Foreground}"
                                                            Text="{Binding Stock, Converter={StaticResource StockToStatusConverter}, FallbackValue='In Stock'}"
                                                            TextAlignment="Center"/>
                                                    </Border>
                                                </DataTemplate>
                                            </controls:DataGridTemplateColumn.CellTemplate>
                                        </controls:DataGridTemplateColumn>

                                    </controls:DataGrid.Columns>
                                </controls:DataGrid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </RefreshContainer>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="{ThemeResource LayerFillColorDefaultBrush}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="24">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                              Width="64"
                              Height="64"/>
                <TextBlock Text="Loading reports..."
                           FontSize="{StaticResource FontSize_XL}"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

