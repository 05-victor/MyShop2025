<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.SalesAgent.SalesAgentProductsPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:MyShop.Client.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:badges="using:MyShop.Client.Views.Components.Badges"
    xmlns:pagination="using:MyShop.Client.Views.Components.Pagination"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.SalesAgent"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="50"/>
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <!-- No local styles needed - using Design System -->
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="24" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Page Header Section -->
            <StackPanel Grid.Row="0" Spacing="16">

            <!-- PAGE HEADER -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="My Products" 
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#1B1D1F"/>
                    <TextBlock Text="Manage your product listings and inventory" 
                              FontSize="14" 
                              Foreground="#4A5568"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="12"
                           VerticalAlignment="Center">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                           MinWidth="100">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                            <TextBlock Text="Refresh" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}"
                           MinWidth="100">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE896;" FontSize="16"/>
                            <TextBlock Text="Export" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource PrimaryButtonStyle}"
                           MinWidth="140">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="16"/>
                            <TextBlock Text="Add Product" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            </StackPanel>
            
            <!-- Main Content -->
            <StackPanel Grid.Row="1" Spacing="20">
            
            <!-- FILTERS & SEARCH -->
            <Border Style="{StaticResource CardWithShadowStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.ColumnSpacing>16</Grid.ColumnSpacing>

                    <!-- Search -->
                    <components:SearchBox Grid.Column="0"
                            PlaceholderText="Search products..." />

                    <!-- Category Filter -->
                    <ComboBox Grid.Column="1"
                             Height="40"
                             CornerRadius="10"
                             BorderBrush="#D0D7E2"
                             SelectedIndex="0"
                             HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="All Categories"/>
                        <ComboBoxItem Content="Smartphones"/>
                        <ComboBoxItem Content="Laptops"/>
                        <ComboBoxItem Content="Audio"/>
                        <ComboBoxItem Content="Tablets"/>
                    </ComboBox>

                    <!-- Brand Filter -->
                    <ComboBox Grid.Column="2"
                             Height="40"
                             CornerRadius="10"
                             BorderBrush="#D0D7E2"
                             SelectedIndex="0"
                             HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="All Brands"/>
                        <ComboBoxItem Content="Apple"/>
                        <ComboBoxItem Content="Samsung"/>
                        <ComboBoxItem Content="Dell"/>
                        <ComboBoxItem Content="Sony"/>
                    </ComboBox>

                    <!-- Sort By -->
                    <ComboBox Grid.Column="3"
                             Height="40"
                             CornerRadius="10"
                             BorderBrush="#D0D7E2"
                             SelectedIndex="0"
                             HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="Rating (High to Low)"/>
                        <ComboBoxItem Content="Price (High to Low)"/>
                        <ComboBoxItem Content="Price (Low to High)"/>
                        <ComboBoxItem Content="Name (A-Z)"/>
                        <ComboBoxItem Content="Name (Z-A)"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- PRODUCTS TABLE -->
            <Border Style="{StaticResource CardWithShadowStyle}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Grid Grid.Row="0" 
                         Padding="24,16"
                         BorderBrush="#E5E7EB"
                         BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="PRODUCT" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="1" Text="CATEGORY" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="2" Text="PRICE" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="3" Text="STOCK" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="4" Text="RATING" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                        <TextBlock Grid.Column="5" Text="ACTIONS" 
                                  FontSize="11" FontWeight="SemiBold" 
                                  Foreground="#6B7280"/>
                    </Grid>

                    <!-- Table Body -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 MaxHeight="600">
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:ProductViewModel">
                                    <Grid Padding="24,16" 
                                         BorderBrush="#E5E7EB"
                                         BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                            <Border Width="48" Height="48" 
                                                   Background="#F9FAFB" 
                                                   CornerRadius="8">
                                                <FontIcon Glyph="&#xE7B8;" 
                                                         FontSize="24" 
                                                         Foreground="#6B7280"/>
                                            </Border>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind Name, Mode=OneWay}" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold"
                                                          Foreground="#111827"/>
                                                <TextBlock Text="{x:Bind Category, Mode=OneWay}" 
                                                          FontSize="12" 
                                                          Foreground="#6B7280"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Category -->
                                        <TextBlock Grid.Column="1" 
                                                  Text="{x:Bind Category, Mode=OneWay}"
                                                  FontSize="14"
                                                  Foreground="#6B7280"
                                                  VerticalAlignment="Center"/>

                                        <!-- Price -->
                                        <TextBlock Grid.Column="2" 
                                                  Text="{x:Bind Price, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="#111827"
                                                  VerticalAlignment="Center"/>

                                        <!-- Stock -->
                                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                            <badges:StockBadge Stock="{x:Bind Stock, Mode=OneWay}" LowStockThreshold="10"/>
                                        </StackPanel>

                                        <!-- Commission Rate -->
                                        <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                            <TextBlock FontSize="14" 
                                                      Foreground="#10B981">
                                                <Run Text="{x:Bind CommissionRate, Mode=OneWay}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="5" 
                                                   Orientation="Horizontal" 
                                                   Spacing="4"
                                                   VerticalAlignment="Center">
                                            <Button Style="{StaticResource IconButtonStyle}"
                                                   Command="{Binding ElementName=RootPage, Path=ViewModel.ViewProductDetailsCommand}"
                                                   CommandParameter="{x:Bind Id}"
                                                   ToolTipService.ToolTip="View">
                                                <FontIcon Glyph="&#xE7A6;" FontSize="16" Foreground="#6B7280"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>

                    <!-- Pagination -->
                    <Grid Grid.Row="2" 
                         Padding="24,16"
                         BorderBrush="#E5E7EB"
                         BorderThickness="0,1,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                  VerticalAlignment="Center"
                                  FontSize="14"
                                  Foreground="#6B7280">
                            <Run Text="Showing"/>
                            <Run Text="1-5" FontWeight="SemiBold"/>
                            <Run Text="of"/>
                            <Run Text="5" FontWeight="SemiBold"/>
                            <Run Text="products"/>
                        </TextBlock>

                        <pagination:PaginationControl Grid.Column="1"
                                                     CurrentPage="1"
                                                     VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
