<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.SalesAgent.EarningsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cards="using:MyShop.Client.Views.Components.Cards"
    mc:Ignorable="d"
    Background="#F3F4F6">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="32" Spacing="24">

            <!-- PAGE HEADER -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="My Earnings" 
                              FontSize="28" 
                              FontWeight="SemiBold"
                              Foreground="#111827"/>
                    <TextBlock Text="Track your income and platform fees" 
                              FontSize="14" 
                              Foreground="#6B7280"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <ComboBox Grid.Column="1"
                         Width="180"
                         SelectedIndex="0"
                         VerticalAlignment="Center"
                         CornerRadius="8">
                    <ComboBoxItem Content="All Time"/>
                    <ComboBoxItem Content="This Month"/>
                    <ComboBoxItem Content="Last Month"/>
                    <ComboBoxItem Content="Last 3 Months"/>
                </ComboBox>
            </Grid>

            <!-- Platform Fee Info Banner -->
            <InfoBar Severity="Informational"
                    Title="Platform Fee Rate"
                    Message="Platform fee is 10% of order total. Your net earnings = Order Total - (10% platform fee)"
                    IsOpen="True"
                    IsClosable="False">
                <InfoBar.IconSource>
                    <FontIconSource Glyph="&#xE946;"/>
                </InfoBar.IconSource>
            </InfoBar>

            <!-- KPI Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.ColumnSpacing>20</Grid.ColumnSpacing>

                <!-- Total Earnings -->
                <cards:KPICard 
                    Grid.Column="0"
                    Title="Total Earnings"
                    Icon="&#xE7DB;"
                    Value="$4,850.00"
                    Subtitle="Gross revenue"
                    ShowBadge="Visible"
                    TrendIcon="&#xE74E;"
                    TrendText="+12.5%"
                    IconBackgroundBrush="#D1FAE5"
                    IconForegroundBrush="#10B981"
                    BadgeBackgroundBrush="#D1FAE5"
                    BadgeForegroundBrush="#10B981"/>

                <!-- Platform Fees -->
                <cards:KPICard 
                    Grid.Column="1"
                    Title="Platform Fees"
                    Icon="&#xE946;"
                    Value="$485.00"
                    Subtitle="10% commission"
                    ShowBadge="Collapsed"
                    IconBackgroundBrush="#FEE2E2"
                    IconForegroundBrush="#DC2626"/>

                <!-- Net Earnings -->
                <cards:KPICard 
                    Grid.Column="2"
                    Title="Net Earnings"
                    Icon="&#xE8EC;"
                    Value="$4,365.00"
                    Subtitle="After fees"
                    ShowBadge="Visible"
                    TrendIcon="&#xE74E;"
                    TrendText="+8.2%"
                    IconBackgroundBrush="#DFF0FF"
                    IconForegroundBrush="#3B82F6"
                    BadgeBackgroundBrush="#DFF0FF"
                    BadgeForegroundBrush="#3B82F6"/>

                <!-- Paid Out -->
                <cards:KPICard 
                    Grid.Column="3"
                    Title="Paid Out"
                    Icon="&#xE8AB;"
                    Value="$3,200.00"
                    Subtitle="This month"
                    ShowBadge="Collapsed"
                    IconBackgroundBrush="#FCE7F3"
                    IconForegroundBrush="#EC4899"/>
            </Grid>

            <!-- Transactions Table -->
            <cards:DataTableCard Title="Earning Transactions" 
                                ViewAllText="Export Report"
                                ShowViewAll="Visible">
                <cards:DataTableCard.TableContent>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filters -->
                        <Grid Grid.Row="0" Padding="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                    PlaceholderText="Search by order, product, or customer..."
                                    CornerRadius="8"/>

                            <ComboBox Grid.Column="2"
                                     SelectedIndex="0"
                                     HorizontalAlignment="Stretch"
                                     CornerRadius="8">
                                <ComboBoxItem Content="All Status"/>
                                <ComboBoxItem Content="Paid"/>
                                <ComboBoxItem Content="Approved"/>
                                <ComboBoxItem Content="Pending"/>
                            </ComboBox>
                        </Grid>

                        <!-- Table Header -->
                        <Grid Grid.Row="1" 
                             Padding="0,12"
                             BorderBrush="#E5E7EB"
                             BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ORDER ID" 
                                      FontSize="11" FontWeight="SemiBold" 
                                      Foreground="#6B7280"/>
                            <TextBlock Grid.Column="1" Text="PRODUCT" 
                                      FontSize="11" FontWeight="SemiBold" 
                                      Foreground="#6B7280"/>
                            <TextBlock Grid.Column="2" Text="CUSTOMER" 
                                      FontSize="11" FontWeight="SemiBold" 
                                      Foreground="#6B7280"/>
                            <TextBlock Grid.Column="3" Text="TOTAL" 
                                      FontSize="11" FontWeight="SemiBold" 
                                      Foreground="#6B7280"/>
                            <TextBlock Grid.Column="4" Text="FEE (10%)" 
                                      FontSize="11" FontWeight="SemiBold" 
                                      Foreground="#6B7280"/>
                            <TextBlock Grid.Column="5" Text="NET" 
                                      FontSize="11" FontWeight="SemiBold" 
                                      Foreground="#6B7280"/>
                            <TextBlock Grid.Column="6" Text="STATUS" 
                                      FontSize="11" FontWeight="SemiBold" 
                                      Foreground="#6B7280"/>
                        </Grid>

                        <!-- Table Body (Mock Data) -->
                        <ScrollViewer Grid.Row="2" MaxHeight="400">
                            <StackPanel>
                                <!-- Row 1 -->
                                <Grid Padding="0,12" 
                                     BorderBrush="#E5E7EB"
                                     BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="ORD-001" 
                                              FontSize="13" FontFamily="Consolas"
                                              Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="1" Text="iPhone 15 Pro" 
                                              FontSize="14" Foreground="#111827"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="2" Text="John Doe" 
                                              FontSize="14" Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="3" Text="$1,199" 
                                              FontSize="14" FontWeight="SemiBold"
                                              Foreground="#111827"/>
                                    <TextBlock Grid.Column="4" Text="$119.90" 
                                              FontSize="14" Foreground="#DC2626"/>
                                    <TextBlock Grid.Column="5" Text="$1,079.10" 
                                              FontSize="14" FontWeight="Bold"
                                              Foreground="#10B981"/>
                                    <Border Grid.Column="6"
                                           Background="#D1FAE5"
                                           CornerRadius="999"
                                           Padding="8,4"
                                           HorizontalAlignment="Left">
                                        <TextBlock Text="Paid"
                                                  FontSize="12"
                                                  FontWeight="SemiBold"
                                                  Foreground="#10B981"/>
                                    </Border>
                                </Grid>

                                <!-- Row 2 -->
                                <Grid Padding="0,12" 
                                     BorderBrush="#E5E7EB"
                                     BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="ORD-002" 
                                              FontSize="13" FontFamily="Consolas"
                                              Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="1" Text="MacBook Pro 16 inch" 
                                              FontSize="14" Foreground="#111827"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="2" Text="Jane Smith" 
                                              FontSize="14" Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="3" Text="$2,499" 
                                              FontSize="14" FontWeight="SemiBold"
                                              Foreground="#111827"/>
                                    <TextBlock Grid.Column="4" Text="$249.90" 
                                              FontSize="14" Foreground="#DC2626"/>
                                    <TextBlock Grid.Column="5" Text="$2,249.10" 
                                              FontSize="14" FontWeight="Bold"
                                              Foreground="#10B981"/>
                                    <Border Grid.Column="6"
                                           Background="#DFF0FF"
                                           CornerRadius="999"
                                           Padding="8,4"
                                           HorizontalAlignment="Left">
                                        <TextBlock Text="Approved"
                                                  FontSize="12"
                                                  FontWeight="SemiBold"
                                                  Foreground="#3B82F6"/>
                                    </Border>
                                </Grid>

                                <!-- Row 3 -->
                                <Grid Padding="0,12" 
                                     BorderBrush="#E5E7EB"
                                     BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="ORD-003" 
                                              FontSize="13" FontFamily="Consolas"
                                              Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="1" Text="AirPods Pro 2" 
                                              FontSize="14" Foreground="#111827"
                                              TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="2" Text="Mike Johnson" 
                                              FontSize="14" Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="3" Text="$249" 
                                              FontSize="14" FontWeight="SemiBold"
                                              Foreground="#111827"/>
                                    <TextBlock Grid.Column="4" Text="$24.90" 
                                              FontSize="14" Foreground="#DC2626"/>
                                    <TextBlock Grid.Column="5" Text="$224.10" 
                                              FontSize="14" FontWeight="Bold"
                                              Foreground="#10B981"/>
                                    <Border Grid.Column="6"
                                           Background="#FEF3C7"
                                           CornerRadius="999"
                                           Padding="8,4"
                                           HorizontalAlignment="Left">
                                        <TextBlock Text="Pending"
                                                  FontSize="12"
                                                  FontWeight="SemiBold"
                                                  Foreground="#F59E0B"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </cards:DataTableCard.TableContent>
            </cards:DataTableCard>

        </StackPanel>
    </ScrollViewer>
</Page>
