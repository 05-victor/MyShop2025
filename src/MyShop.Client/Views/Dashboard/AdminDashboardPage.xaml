<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Dashboard.AdminDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.Client.Views.Converters"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.Dashboard"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar Navigation -->
        <Grid Grid.Column="0" Background="#1F2937">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo & Branding -->
            <StackPanel Grid.Row="0" Padding="20,24" Spacing="8">
                <Border Width="40" Height="40" Background="White" CornerRadius="8" HorizontalAlignment="Left">
                    <FontIcon Glyph="&#xE7B8;" FontSize="20" Foreground="#1F2937" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="MyShop2025" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Welcome back, admin!" FontSize="12" Foreground="#9CA3AF"/>
            </StackPanel>

            <!-- Navigation Menu -->
            <StackPanel Grid.Row="1" Padding="12,0" Spacing="4">
                <!-- Dashboard - Active -->
                <Border Background="#3B82F6" CornerRadius="8" Padding="12,10" Margin="0,0,0,4">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE80F;" FontSize="18" Foreground="White"/>
                        <TextBlock Text="Dashboard" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Products -->
                <Button Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Command="{x:Bind ViewModel.NavigateToProductsCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE7B8;" FontSize="18" Foreground="#9CA3AF"/>
                        <TextBlock Text="Products" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Orders -->
                <Button Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Command="{x:Bind ViewModel.NavigateToOrdersCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE7BF;" FontSize="18" Foreground="#9CA3AF"/>
                        <TextBlock Text="Orders" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Reports -->
                <Button Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Command="{x:Bind ViewModel.NavigateToReportsCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE9D9;" FontSize="18" Foreground="#9CA3AF"/>
                        <TextBlock Text="Reports" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Users -->
                <Button Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE716;" FontSize="18" Foreground="#9CA3AF"/>
                        <TextBlock Text="Users" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Agent Requests -->
                <Button Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE8F2;" FontSize="18" Foreground="#9CA3AF"/>
                        <TextBlock Text="Agent Requests" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Profile -->
                <Button Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE77B;" FontSize="18" Foreground="#9CA3AF"/>
                        <TextBlock Text="Profile" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Settings -->
                <Button Background="Transparent" BorderThickness="0" Padding="12,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Command="{x:Bind ViewModel.NavigateToSettingsCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE713;" FontSize="18" Foreground="#9CA3AF"/>
                        <TextBlock Text="Settings" FontSize="14" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- User Profile & Logout -->
            <StackPanel Grid.Row="2" Padding="16" Spacing="12" Background="#111827">
                <Border Background="#374151" 
                       CornerRadius="8" 
                       Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="36" Height="36" Background="#6B7280" CornerRadius="18" Margin="0,0,12,0">
                            <FontIcon Glyph="&#xE77B;" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="admin" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="White"
                                      TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="admin@example.com" 
                                      FontSize="11" 
                                      Foreground="#9CA3AF"
                                      TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Button Command="{x:Bind ViewModel.LogoutCommand}"
                       HorizontalAlignment="Stretch"
                       Background="#DC2626"
                       Foreground="White"
                       BorderThickness="0"
                       CornerRadius="6"
                       Padding="12,10">
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <FontIcon Glyph="&#xE7E8;" FontSize="14" Foreground="White"/>
                        <TextBlock Text="Logout" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#F3F4F6">
            <StackPanel Padding="32" Spacing="32">
                
                <!-- Page Header -->
                <TextBlock Text="Dashboard Overview" FontSize="28" FontWeight="SemiBold"/>

                <!-- Statistics Cards - TEMPORARILY DISABLED (StatCard component not yet implemented) -->
                <!-- TODO: Implement StatCard component and add statistics here -->

                <!-- Top Rated Products -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Top Rated Products" 
                              FontSize="20" 
                              FontWeight="SemiBold"
                              Foreground="#111827"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.ColumnSpacing>16</Grid.ColumnSpacing>
                        
                        <!-- MacBook Pro 16" -->
                        <Border Grid.Column="0" 
                               Background="White" 
                               CornerRadius="12" 
                               BorderBrush="#E5E7EB"
                               BorderThickness="1"
                               Padding="16">
                            <StackPanel Spacing="16">
                                <Border Width="120" 
                                       Height="120" 
                                       CornerRadius="8"
                                       HorizontalAlignment="Center"
                                       Background="#F9FAFB">
                                    <Image Source="ms-appx:///Assets/Images/products/macbook.png" 
                                           Stretch="Uniform"/>
                                </Border>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="MacBook Pro 16&quot;" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="#111827"
                                              TextAlignment="Center"
                                              TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               Spacing="4">
                                        <FontIcon Glyph="&#xE735;" 
                                                 FontSize="16" 
                                                 Foreground="#F59E0B"/>
                                        <TextBlock Text="4.9" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  Foreground="#111827"/>
                                        <TextBlock Text="(189 reviews)" 
                                                  FontSize="12"
                                                  Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Sony WH-1000XM5 -->
                        <Border Grid.Column="1" 
                               Background="White" 
                               CornerRadius="12" 
                               BorderBrush="#E5E7EB"
                               BorderThickness="1"
                               Padding="16">
                            <StackPanel Spacing="16">
                                <Border Width="120" 
                                       Height="120" 
                                       CornerRadius="8"
                                       HorizontalAlignment="Center"
                                       Background="#F9FAFB">
                                    <Image Source="ms-appx:///Assets/Images/products/headphones.png" 
                                           Stretch="Uniform"/>
                                </Border>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Sony WH-1000XM5" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="#111827"
                                              TextAlignment="Center"
                                              TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               Spacing="4">
                                        <FontIcon Glyph="&#xE735;" 
                                                 FontSize="16" 
                                                 Foreground="#F59E0B"/>
                                        <TextBlock Text="4.9" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  Foreground="#111827"/>
                                        <TextBlock Text="(512 reviews)" 
                                                  FontSize="12"
                                                  Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- iPhone 14 Pro Max -->
                        <Border Grid.Column="2" 
                               Background="White" 
                               CornerRadius="12" 
                               BorderBrush="#E5E7EB"
                               BorderThickness="1"
                               Padding="16">
                            <StackPanel Spacing="16">
                                <Border Width="120" 
                                       Height="120" 
                                       CornerRadius="8"
                                       HorizontalAlignment="Center"
                                       Background="#F9FAFB">
                                    <Image Source="ms-appx:///Assets/Images/products/iphone.png" 
                                           Stretch="Uniform"/>
                                </Border>
                                <StackPanel Spacing="8">
                                    <TextBlock Text="iPhone 14 Pro Max" 
                                              FontWeight="SemiBold"
                                              FontSize="14"
                                              Foreground="#111827"
                                              TextAlignment="Center"
                                              TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               Spacing="4">
                                        <FontIcon Glyph="&#xE735;" 
                                                 FontSize="16" 
                                                 Foreground="#F59E0B"/>
                                        <TextBlock Text="4.8" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"
                                                  Foreground="#111827"/>
                                        <TextBlock Text="(234 reviews)" 
                                                  FontSize="12"
                                                  Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Available Items Table -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Available Items" 
                              FontSize="20" 
                              FontWeight="SemiBold"
                              Foreground="#111827"/>
                    <Border Background="White" 
                           CornerRadius="12" 
                           BorderBrush="#E5E7EB"
                           BorderThickness="1"
                           Padding="24">
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <!-- Table Header -->
                                <Grid Padding="0,0,0,12" 
                                     BorderBrush="#E5E7EB" 
                                     BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Name" FontSize="13" FontWeight="SemiBold" Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="1" Text="Category" FontSize="13" FontWeight="SemiBold" Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="2" Text="Stock" FontSize="13" FontWeight="SemiBold" Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="3" Text="Price" FontSize="13" FontWeight="SemiBold" Foreground="#6B7280"/>
                                    <TextBlock Grid.Column="4" Text="Status" FontSize="13" FontWeight="SemiBold" Foreground="#6B7280"/>
                                </Grid>
                                
                                <!-- Table Rows -->
                                <StackPanel Margin="0,52,0,0">
                                    <!-- Row 1: iPhone 14 Pro Max -->
                                    <Grid Padding="0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="iPhone 14 Pro Max" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Smartphones" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="45" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="3" Text="$1099" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#10B981" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="In Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Row 2: MacBook Pro 16" -->
                                    <Grid Padding="0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="MacBook Pro 16&quot;" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Laptops" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="23" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="3" Text="$2499" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#10B981" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="In Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Row 3: iPad Air M1 -->
                                    <Grid Padding="0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="iPad Air M1" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Tablets" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="67" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="3" Text="$599" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#10B981" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="In Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Row 4: Samsung Galaxy S23 Ultra -->
                                    <Grid Padding="0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Samsung Galaxy S23 Ultra" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Smartphones" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="34" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="3" Text="$1199" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#10B981" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="In Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Row 5: Dell XPS 13 -->
                                    <Grid Padding="0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Dell XPS 13" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Laptops" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="18" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="3" Text="$1299" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#10B981" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="In Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Row 6: Sony WH-1000XM5 -->
                                    <Grid Padding="0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Sony WH-1000XM5" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Audio" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="41" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="3" Text="$399" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#10B981" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="In Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Low Stock Items -->
                                    <!-- Row 7: AirPods Pro 2 - Low Stock -->
                                    <Grid Padding="0,12" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Background="#FEF2F2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="AirPods Pro 2" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Audio" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="8" FontSize="14" Foreground="#DC2626" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="3" Text="$249" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#DC2626" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="Low Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Row 8: Apple Watch Series 9 - Low Stock -->
                                    <Grid Padding="0,12" Background="#FEF2F2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Apple Watch Series 9" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="1" Text="Wearables" FontSize="14" Foreground="#111827"/>
                                        <TextBlock Grid.Column="2" Text="5" FontSize="14" Foreground="#DC2626" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="3" Text="$399" FontSize="14" Foreground="#111827"/>
                                        <Border Grid.Column="4" Background="#DC2626" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="Low Stock" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Charts Section -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.ColumnSpacing>24</Grid.ColumnSpacing>
                    
                    <!-- Revenue Growth Chart -->
                    <Border Grid.Column="0" 
                           Background="White" 
                           CornerRadius="12" 
                           BorderBrush="#E5E7EB"
                           BorderThickness="1"
                           Padding="24">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Revenue Growth (Last 7 Days)" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="#111827"/>
                            <Border Height="300" Background="#F9FAFB" CornerRadius="8">
                                <TextBlock Text="[Chart: Revenue Line Chart]" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="#6B7280"
                                          FontSize="14"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Orders by Category Chart -->
                    <Border Grid.Column="1" 
                           Background="White" 
                           CornerRadius="12" 
                           BorderBrush="#E5E7EB"
                           BorderThickness="1"
                           Padding="24">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Orders by Category" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="#111827"/>
                            <Border Height="300" Background="#F9FAFB" CornerRadius="8">
                                <TextBlock Text="[Chart: Bar Chart]" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="#6B7280"
                                          FontSize="14"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Rating Distribution Chart -->
                <Border Background="White" 
                       CornerRadius="12" 
                       BorderBrush="#E5E7EB"
                       BorderThickness="1"
                       Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Rating Distribution" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="#111827"/>
                        <Border Height="300" Background="#F9FAFB" CornerRadius="8">
                            <TextBlock Text="[Chart: Pie Chart]" 
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="#6B7280"
                                      FontSize="14"/>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2"
               Background="#80000000"
               Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Spacing="16">
                <ProgressRing IsActive="True" 
                             Width="48" 
                             Height="48"
                             Foreground="White"/>
                <TextBlock Text="Loading dashboard..." 
                          FontSize="16"
                          Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
