<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Client.Views.Dashboard.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.Client.Converters"
    xmlns:viewmodels="using:MyShop.Client.ViewModels.Dashboard"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar Navigation -->
        <Grid Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo & Branding -->
            <StackPanel Grid.Row="0" Padding="24,32,24,24" Spacing="8">
                <Image Source="/Assets/StoreLogo.png" Width="48" Height="48" HorizontalAlignment="Left"/>
                <TextBlock Text="MyShop2025" FontSize="20" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="{x:Bind ViewModel.WelcomeMessage, Mode=OneWay}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Navigation Menu -->
            <NavigationView Grid.Row="1" 
                           IsBackButtonVisible="Collapsed" 
                           IsPaneToggleButtonVisible="False"
                           IsSettingsVisible="False"
                           PaneDisplayMode="Top"
                           OpenPaneLength="250">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Dashboard" Icon="Home" IsSelected="True">
                        <NavigationViewItem.InfoBadge>
                            <InfoBadge Background="#2563EB"/>
                        </NavigationViewItem.InfoBadge>
                    </NavigationViewItem>
                    <NavigationViewItem Content="Products" Tag="Products">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE7B8;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Content="Orders" Tag="Orders">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE7BF;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem Content="Reports" Tag="Reports">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE9D9;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItemSeparator/>
                    <NavigationViewItem Content="Settings" Tag="Settings">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE713;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.MenuItems>
            </NavigationView>

            <!-- User Profile & Logout -->
            <StackPanel Grid.Row="2" Padding="16" Spacing="8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                       CornerRadius="8" 
                       Padding="12"
                       BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                       BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <PersonPicture Grid.Column="0" Width="40" Height="40" Margin="0,0,12,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind ViewModel.CurrentUser.Username, Mode=OneWay}" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentUser.Email, Mode=OneWay}" 
                                      FontSize="11" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Button Content="Logout" 
                       Command="{x:Bind ViewModel.LogoutCommand}"
                       HorizontalAlignment="Stretch">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                            <Setter Property="Background" Value="#DC2626"/>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="32" Spacing="24">
                
                <!-- Page Header -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Dashboard Overview" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Text="Monitor your shop's performance and key metrics" 
                              FontSize="14" 
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <!-- Statistics Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.ColumnSpacing>16</Grid.ColumnSpacing>

                    <!-- Total Products Card -->
                    <Border Grid.Column="0" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="12" 
                           Padding="20"
                           BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                           BorderThickness="1">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Border Width="48" Height="48" 
                                       Background="#EFF6FF" 
                                       CornerRadius="10"
                                       HorizontalAlignment="Left">
                                    <FontIcon Glyph="&#xE7B8;" 
                                            FontSize="24" 
                                            Foreground="#2563EB"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                </Border>
                                <Border Background="#DCFCE7" 
                                       CornerRadius="8" 
                                       Padding="6,2"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top">
                                    <TextBlock Text="+12%" 
                                              FontSize="11" 
                                              FontWeight="SemiBold"
                                              Foreground="#16A34A"/>
                                </Border>
                            </Grid>
                            <StackPanel Spacing="4">
                                <TextBlock Text="Total Products" 
                                          FontSize="13" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TotalProducts, Mode=OneWay}" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#2563EB"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Today Orders Card -->
                    <Border Grid.Column="1" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="12" 
                           Padding="20"
                           BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                           BorderThickness="1">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Border Width="48" Height="48" 
                                       Background="#F0FDF4" 
                                       CornerRadius="10"
                                       HorizontalAlignment="Left">
                                    <FontIcon Glyph="&#xE7BF;" 
                                            FontSize="24" 
                                            Foreground="#16A34A"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                </Border>
                                <Border Background="#DCFCE7" 
                                       CornerRadius="8" 
                                       Padding="6,2"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top">
                                    <TextBlock Text="+18%" 
                                              FontSize="11" 
                                              FontWeight="SemiBold"
                                              Foreground="#16A34A"/>
                                </Border>
                            </Grid>
                            <StackPanel Spacing="4">
                                <TextBlock Text="Orders Today" 
                                          FontSize="13" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.TodayOrders, Mode=OneWay}" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#16A34A"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Today Revenue Card -->
                    <Border Grid.Column="2" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="12" 
                           Padding="20"
                           BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                           BorderThickness="1">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Border Width="48" Height="48" 
                                       Background="#FAF5FF" 
                                       CornerRadius="10"
                                       HorizontalAlignment="Left">
                                    <FontIcon Glyph="&#xE8A1;" 
                                            FontSize="24" 
                                            Foreground="#9333EA"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                </Border>
                                <Border Background="#DCFCE7" 
                                       CornerRadius="8" 
                                       Padding="6,2"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top">
                                    <TextBlock Text="+24%" 
                                              FontSize="11" 
                                              FontWeight="SemiBold"
                                              Foreground="#16A34A"/>
                                </Border>
                            </Grid>
                            <StackPanel Spacing="4">
                                <TextBlock Text="Today's Revenue" 
                                          FontSize="13" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#9333EA">
                                    <Run Text="$"/>
                                    <Run Text="{x:Bind ViewModel.TodayRevenue, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Low Stock Alert Card -->
                    <Border Grid.Column="3" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="12" 
                           Padding="20"
                           BorderBrush="#FED7AA"
                           BorderThickness="1">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Border Width="48" Height="48" 
                                       Background="#FFF7ED" 
                                       CornerRadius="10"
                                       HorizontalAlignment="Left">
                                    <FontIcon Glyph="&#xE7BA;" 
                                            FontSize="24" 
                                            Foreground="#EA580C"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <StackPanel Spacing="4">
                                <TextBlock Text="Low Stock Alert" 
                                          FontSize="13" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.LowStockCount, Mode=OneWay}" 
                                          FontSize="28" 
                                          FontWeight="Bold"
                                          Foreground="#EA580C"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Charts Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.ColumnSpacing>16</Grid.ColumnSpacing>

                    <!-- Revenue Chart -->
                    <Border Grid.Column="0" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="12" 
                           Padding="24"
                           BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                           BorderThickness="1">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Revenue by Day (This Week)" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"/>
                            <Border Height="300" Background="#F9FAFB" CornerRadius="8" Padding="16">
                                <ItemsControl ItemsSource="{x:Bind ViewModel.RevenueChartData, Mode=OneWay}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="16"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Width="80" Spacing="8">
                                                <Border Height="200" VerticalAlignment="Bottom">
                                                    <Rectangle Fill="#2563EB" 
                                                             VerticalAlignment="Bottom"
                                                             RadiusX="4" 
                                                             RadiusY="4"
                                                             Height="{Binding Revenue}"/>
                                                </Border>
                                                <TextBlock Text="{Binding Day}" 
                                                          TextAlignment="Center" 
                                                          FontSize="12"
                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Category Progress -->
                    <Border Grid.Column="1" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="12" 
                           Padding="24"
                           BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                           BorderThickness="1">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Sales by Category" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"/>
                            <ItemsControl ItemsSource="{x:Bind ViewModel.CategoryData, Mode=OneWay}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Spacing="8" Margin="0,0,0,16">
                                            <Grid>
                                                <TextBlock Text="{Binding Name}" 
                                                          FontSize="13" 
                                                          FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Percentage}" 
                                                          FontSize="13"
                                                          HorizontalAlignment="Right">
                                                    <Run Text="{Binding Percentage}"/><Run Text="%"/>
                                                </TextBlock>
                                            </Grid>
                                            <ProgressBar Value="{Binding Percentage}" 
                                                        Maximum="100" 
                                                        Height="8"
                                                        CornerRadius="4"
                                                        Foreground="#2563EB"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Bottom Section -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.ColumnSpacing>16</Grid.ColumnSpacing>

                    <!-- Top Products -->
                    <Border Grid.Column="0" 
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                           CornerRadius="12" 
                           Padding="24"
                           BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                           BorderThickness="1">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Top Selling Products" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"/>
                            <ListView ItemsSource="{x:Bind ViewModel.TopProducts, Mode=OneWay}" 
                                     SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12" Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" 
                                                   Width="40" 
                                                   Height="40" 
                                                   Background="#EFF6FF" 
                                                   CornerRadius="8"
                                                   Margin="0,0,12,0">
                                                <TextBlock Text="{Binding Rank}" 
                                                          FontSize="16" 
                                                          FontWeight="Bold"
                                                          Foreground="#2563EB"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="Medium"
                                                          FontSize="14"/>
                                                <TextBlock Text="{Binding Category}" 
                                                          FontSize="12"
                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#2563EB">
                                                    <Run Text="$"/><Run Text="{Binding Price}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Stock: "/><Run Text="{Binding Stock}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Low Stock Alerts -->
                    <Border Grid.Column="1" 
                           Background="#FFF7ED" 
                           CornerRadius="12" 
                           Padding="24"
                           BorderBrush="#FED7AA"
                           BorderThickness="1">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE7BA;" Foreground="#EA580C" FontSize="20"/>
                                <TextBlock Text="Low Stock Alerts" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#EA580C"/>
                            </StackPanel>
                            <ListView ItemsSource="{x:Bind ViewModel.LowStockItems, Mode=OneWay}" 
                                     SelectionMode="None"
                                     Background="Transparent">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                               CornerRadius="8" 
                                               Padding="12"
                                               Margin="0,4"
                                               BorderBrush="#FED7AA"
                                               BorderThickness="1">
                                            <Grid>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" 
                                                              FontWeight="Medium"
                                                              FontSize="14"/>
                                                    <TextBlock Text="{Binding Category}" 
                                                              FontSize="12"
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>
                                                <Border Background="#FED7AA" 
                                                       CornerRadius="6" 
                                                       Padding="8,4"
                                                       HorizontalAlignment="Right">
                                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#EA580C">
                                                        <Run Text="{Binding Stock}"/><Run Text=" left"/>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Orders Table -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                       CornerRadius="12" 
                       Padding="24"
                       BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                       BorderThickness="1">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Recent Orders" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"/>
                        <ListView ItemsSource="{x:Bind ViewModel.RecentOrders, Mode=OneWay}" 
                                 SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                  Text="{Binding OrderId}" 
                                                  FontFamily="Consolas"
                                                  FontSize="13"/>
                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding CustomerName}" 
                                                  FontWeight="Medium"
                                                  FontSize="14"/>
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding OrderDate}" 
                                                  FontSize="13"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Grid.Column="3" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#2563EB"
                                                  HorizontalAlignment="Right">
                                            <Run Text="$"/><Run Text="{Binding Amount}"/>
                                        </TextBlock>
                                        <Border Grid.Column="4" 
                                               Background="#DCFCE7" 
                                               CornerRadius="6" 
                                               Padding="8,4"
                                               HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Status}" 
                                                      FontSize="12" 
                                                      FontWeight="SemiBold"
                                                      Foreground="#16A34A"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2"
               Background="#80000000"
               Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Spacing="16">
                <ProgressRing IsActive="True" 
                             Width="48" 
                             Height="48"
                             Foreground="White"/>
                <TextBlock Text="Loading dashboard..." 
                          FontSize="16"
                          Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
