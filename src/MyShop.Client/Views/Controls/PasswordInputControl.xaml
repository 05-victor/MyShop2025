<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShop.Client.Views.Controls.PasswordInputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <PasswordBox x:Name="PasswordBox"
                     Height="44"
                     Padding="12,11,12,11"
                     VerticalContentAlignment="Center"
                     CornerRadius="8"
                     BorderThickness="1"
                     BorderBrush="{StaticResource BorderDefaultBrush}"
                     Background="{StaticResource WhiteBrush}"
                     PasswordRevealMode="Hidden"
                     PasswordChar="â—"
                     PasswordChanged="PasswordBox_PasswordChanged"/>
        
        <Button x:Name="ToggleVisibilityButton"
                Width="36" 
                Height="36"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,4,0"
                Background="Transparent"
                BorderThickness="0"
                CornerRadius="4"
                Click="ToggleVisibilityButton_Click"
                IsTabStop="False"
                AutomationProperties.Name="Toggle password visibility">
            <FontIcon x:Name="VisibilityIcon"
                      Glyph="&#xED1A;"
                      FontSize="16"
                      FontFamily="{StaticResource SymbolThemeFontFamily}"
                      Foreground="{StaticResource TextSecondaryBrush}"/>
        </Button>
    </Grid>
</UserControl>
